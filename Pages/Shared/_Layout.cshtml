                            }
                        }
                    </ul>
                    
                    <!-- Right Side -->
                    <ul class="navbar-nav align-items-lg-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="btn btn-minimal-account dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i>
                                    <span class="d-none d-lg-inline ms-1">Account</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-minimal">
                                    <li class="dropdown-header px-3 py-2">
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar-minimal">
                                                <i class="bi bi-person-circle"></i>
                                            </div>
                                            <div class="ms-2">
                                                <div class="fw-semibold small">@User.Identity.Name</div>
                                                <div class="text-muted" style="font-size: 0.75rem;">Welcome back!</div>
                                            </div>
                                        </div>
                                    </li>
