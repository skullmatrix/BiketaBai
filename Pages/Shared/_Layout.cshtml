                                    <li><a class="dropdown-item-minimal" href="/Account/Profile"><i class="bi bi-person"></i> Profile</a></li>
                                    <li><a class="dropdown-item-minimal" href="/Wallet/Index"><i class="bi bi-wallet2"></i> Wallet <span class="badge-minimal-sage" id="walletBalanceDropdown">â‚±0</span></a></li>
                                    <li><a class="dropdown-item-minimal" href="/Points/Index"><i class="bi bi-star"></i> Points <span class="badge-minimal-gold" id="pointsBalanceDropdown">0</span></a></li>
                                    <li><a class="dropdown-item-minimal" href="/Notifications/Index"><i class="bi bi-bell"></i> Notifications <span class="badge-minimal-danger" id="notificationCountDropdown" style="display: none;">0</span></a></li>
                                    <li><hr class="dropdown-divider my-2"></li>
                                    <li><a class="dropdown-item-minimal text-danger" href="/Account/Logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-minimal-ghost me-2" href="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-minimal-primary" href="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <!-- Premium Minimalist Footer -->
