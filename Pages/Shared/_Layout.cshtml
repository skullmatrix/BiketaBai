                                </li>
                            }
                            @if (AuthHelper.IsOwner(User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link-minimal" href="/Owner/MyBikes">My Bikes</a>
                                </li>
                            }
                            @if (AuthHelper.IsAdmin(User))
                            {
                                <li class="nav-item">
