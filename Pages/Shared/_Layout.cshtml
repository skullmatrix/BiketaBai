                @if (AuthHelper.IsOwner(User))
                {
                    <a href="/Owner/MyBikes" class="mobile-nav-item @(ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("MyBikes") == true ? "active" : "")">
