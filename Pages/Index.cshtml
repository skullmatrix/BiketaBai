@page
@model IndexModel
@{
    ViewData["Title"] = "Bike Ta Bai - Eco-Friendly Bike Rental Platform";
}

<!-- Modern Hero Section -->
<div class="hero-modern">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
        <div class="row align-items-center">
            <div class="col-lg-6 text-white">
                <div class="logo-section mb-4">
                    <i class="bi bi-bicycle" style="font-size: 4rem;"></i>
                    <h1 class="display-3 fw-bold mt-3">Bike Ta Bai</h1>
                </div>
                <h2 class="tagline mb-4">Ride Green, Live Clean 🌱</h2>
                <p class="lead mb-4">Your eco-friendly solution for sustainable urban commuting. Rent bikes from trusted owners in your community.</p>
                
                @if (!User.Identity?.IsAuthenticated == true)
                {
                    <div class="cta-buttons">
                        <a href="/Account/Login" class="btn btn-light btn-lg me-3 shadow">
                            <i class="bi bi-box-arrow-in-right"></i> Sign In
                        </a>
                        <a href="/Account/Register" class="btn btn-success btn-lg shadow">
                            <i class="bi bi-person-plus"></i> Register Now
                        </a>
                    </div>
                }
                else
                {
                    <div class="cta-buttons">
                        <a href="/Bikes/Browse" class="btn btn-light btn-lg me-3 shadow">
                            <i class="bi bi-search"></i> Browse Bikes
                        </a>
                        <a href="/Dashboard" class="btn btn-success btn-lg shadow">
                            <i class="bi bi-speedometer2"></i> My Dashboard
                        </a>
                    </div>
                }
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-stats-card">
                    <h4 class="text-center mb-4 text-eco-green">Platform Impact</h4>
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="stat-number">@Model.TotalBikes</div>
                            <div class="stat-label">Bikes Available</div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="stat-number">@Model.TotalUsers</div>
                            <div class="stat-label">Active Users</div>
                        </div>
                        <div class="col-6">
                            <div class="stat-number">@Model.TotalBookings</div>
                            <div class="stat-label">Total Rentals</div>
                        </div>
                        <div class="col-6">
                            <div class="stat-number text-success">@Model.CO2Saved kg</div>
                            <div class="stat-label">CO₂ Saved</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Quick Search Bar -->
        <div class="search-box-modern mt-5">
            <form method="get" action="/Bikes/Browse">
                <div class="row g-3">
                    <div class="col-md-5">
                        <input type="text" name="location" class="form-control form-control-lg" placeholder="📍 Where do you want to ride?" />
                    </div>
                    <div class="col-md-4">
                        <select name="bikeTypeId" class="form-select form-control-lg">
                            <option value="">🚴 All Bike Types</option>
                            @foreach (var bikeType in Model.BikeTypes)
                            {
                                <option value="@bikeType.BikeTypeId">@bikeType.TypeName</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-warning btn-lg w-100 fw-bold">
                            <i class="bi bi-search"></i> Find Bikes
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<section class="how-it-works py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-2 text-eco-green fw-bold">How It Works</h2>
        <p class="text-center text-muted mb-5">Get started in 3 simple steps</p>
        
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="how-it-works-card text-center">
                    <div class="step-number">1</div>
                    <div class="step-icon">
                        <i class="bi bi-person-plus-fill"></i>
                    </div>
                    <h4>Create Account</h4>
                    <p>Sign up in seconds as a Renter or Bike Owner. Verify your email and you're ready to go!</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="how-it-works-card text-center">
                    <div class="step-number">2</div>
                    <div class="step-icon">
                        <i class="bi bi-bicycle"></i>
                    </div>
                    <h4>Find or List Bikes</h4>
                    <p>Renters: Browse available bikes near you. Owners: List your bikes and start earning!</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="how-it-works-card text-center">
                    <div class="step-number">3</div>
                    <div class="step-icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <h4>Book & Ride</h4>
                    <p>Select dates, make payment, and enjoy your eco-friendly ride. Earn loyalty points with every rental!</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
<section class="why-choose-us py-5">
    <div class="container">
        <h2 class="text-center mb-2 text-eco-green fw-bold">Why Choose Bike Ta Bai?</h2>
        <p class="text-center text-muted mb-5">Your trusted partner for eco-friendly commuting</p>
        
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="feature-card">
                    <div class="feature-icon-modern">
                        <i class="bi bi-geo-alt-fill"></i>
                    </div>
                    <h4>Find Nearby Bikes</h4>
                    <p>Discover available bikes near your location instantly</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-card">
                    <div class="feature-icon-modern">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h4>Safe & Secure</h4>
                    <p>Verified owners and secure payment methods</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-card">
                    <div class="feature-icon-modern">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <h4>Earn Rewards</h4>
                    <p>Get loyalty points with every eco-friendly ride</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-card">
                    <div class="feature-icon-modern">
                        <i class="bi bi-wallet2"></i>
                    </div>
                    <h4>Digital Wallet</h4>
                    <p>Easy payments with multiple options</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Bikes Section -->
<section class="featured-bikes py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-2 text-eco-green fw-bold">Featured Bikes</h2>
        <p class="text-center text-muted mb-5">Top-rated bikes available for rent now</p>
        
        <div class="row">
            @foreach (var bike in Model.FeaturedBikes)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card bike-card-modern h-100 shadow-sm">
                        @if (bike.BikeImages.Any())
                        {
                            <img src="@bike.BikeImages.First().ImageUrl" class="card-img-top bike-image-featured" alt="@bike.Brand @bike.Model" />
                        }
                        else
                        {
                            <div class="placeholder-image-featured">
                                <i class="bi bi-bicycle" style="font-size: 4rem; color: #ccc;"></i>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0 fw-bold">@bike.Brand @bike.Model</h5>
                                <span class="badge bg-success">@bike.BikeType.TypeName</span>
                            </div>
                            <p class="text-muted mb-2">
                                <i class="bi bi-geo-alt-fill text-danger"></i> @bike.Location
                            </p>
                            <div class="rating-stars mb-3">
                                @{
                                    var avgRating = Model.BikeRatings.ContainsKey(bike.BikeId) ? Model.BikeRatings[bike.BikeId] : 0;
                                    for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= avgRating)
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star text-warning"></i>
                                        }
                                    }
                                }
                                <span class="text-muted ms-1">(@avgRating.ToString("F1"))</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div class="price-display">
                                    <span class="price-amount">₱@bike.HourlyRate</span>
                                    <span class="price-unit">/hr</span>
                                </div>
                                <a href="/Bikes/Details/@bike.BikeId" class="btn btn-success btn-sm">
                                    View Details <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="text-center mt-4">
            <a href="/Bikes/Browse" class="btn btn-outline-success btn-lg">
                <i class="bi bi-grid-3x3-gap"></i> Browse All Bikes
            </a>
        </div>
    </div>
</section>

@if (!User.Identity?.IsAuthenticated == true)
{
    <!-- Call to Action Section -->
    <section class="cta-section py-5">
        <div class="container">
            <div class="cta-card text-center">
                <h2 class="mb-3 fw-bold">Ready to Start Your Eco-Friendly Journey?</h2>
                <p class="lead mb-4">Join thousands of users who are making a difference, one ride at a time</p>
                <div class="row justify-content-center">
                    <div class="col-md-5 mb-3">
                        <div class="user-type-card">
                            <i class="bi bi-person-check" style="font-size: 3rem; color: #28a745;"></i>
                            <h4 class="mt-3">I Want to Rent</h4>
                            <p>Browse bikes and start riding eco-friendly</p>
                            <a href="/Account/Register" class="btn btn-success btn-lg w-100">Register as Renter</a>
                        </div>
                    </div>
                    <div class="col-md-5 mb-3">
                        <div class="user-type-card">
                            <i class="bi bi-bicycle" style="font-size: 3rem; color: #28a745;"></i>
                            <h4 class="mt-3">I Have Bikes</h4>
                            <p>List your bikes and start earning money</p>
                            <a href="/Account/Register" class="btn btn-outline-success btn-lg w-100">Register as Owner</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <!-- Logged In CTA -->
    <section class="cta-section-logged py-5">
        <div class="container text-center">
            <h3 class="text-eco-green mb-4">Continue Your Eco-Friendly Journey</h3>
            <a href="/Bikes/Browse" class="btn btn-success btn-lg me-2">
                <i class="bi bi-bicycle"></i> Find a Bike
            </a>
            @if (User.IsInRole("Owner"))
            {
                <a href="/Owner/AddBike" class="btn btn-outline-success btn-lg">
                    <i class="bi bi-plus-circle"></i> List Your Bike
                </a>
            }
        </div>
    </section>
}

