@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model WalletIndexModel
@{
    ViewData["Title"] = "My Wallet";
}

<div class="container my-5">
    <h2 class="text-eco-green mb-4"><i class="bi bi-wallet2"></i> My Wallet</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <!-- Wallet Balance Card -->
        <div class="col-md-6 mb-3">
            <div class="wallet-widget shadow-eco">
                <h4>Current Balance</h4>
                <div class="balance">₱@Model.WalletBalance.ToString("F2")</div>
                <div class="mt-3">
                    <a href="/Wallet/Load" class="btn btn-light me-2">
                        <i class="bi bi-plus-circle"></i> Load Wallet
                    </a>
                    <a href="/Wallet/Withdraw" class="btn btn-outline-light">
                        <i class="bi bi-dash-circle"></i> Withdraw
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="col-md-6">
            <div class="row">
                <div class="col-6 mb-3">
                    <div class="stat-card green">
                        <h3>₱@Model.TotalLoaded.ToString("F2")</h3>
                        <p>Total Loaded</p>
                    </div>
                </div>
                <div class="col-6 mb-3">
                    <div class="stat-card orange">
                        <h3>₱@Model.TotalSpent.ToString("F2")</h3>
                        <p>Total Spent</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transaction History -->
    <div class="card shadow-eco">
        <div class="card-header bg-eco-primary text-white">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Transaction History</h5>
        </div>
        <div class="card-body">
            @if (Model.Transactions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th class="text-end">Amount</th>
                                <th class="text-end">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td>@transaction.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>
                                        <span class="badge @(transaction.Amount > 0 ? "bg-success" : "bg-danger")">
                                            @transaction.TransactionType.TypeName
                                        </span>
                                    </td>
                                    <td>@transaction.Description</td>
                                    <td class="text-end">
                                        <span class="@(transaction.Amount > 0 ? "text-success" : "text-danger")">
                                            @(transaction.Amount > 0 ? "+" : "")₱@Math.Abs(transaction.Amount).ToString("F2")
                                        </span>
                                    </td>
                                    <td class="text-end">₱@transaction.BalanceAfter.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <p class="text-muted text-center py-4">No transactions yet</p>
            }
        </div>
    </div>
</div>

