@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model OwnerDashboardModel
@{
    ViewData["Title"] = "Owner Dashboard";
}

<link rel="stylesheet" href="~/css/owner-dashboard.css" asp-append-version="true" />

<div class="owner-dashboard-wrapper">
    <div class="owner-dashboard-container">
        
        <!-- Header -->
        <div class="owner-header">
            <div class="owner-header-content">
                <div class="owner-header-text">
                    <h1><i class="bi bi-speedometer2"></i> Owner Dashboard</h1>
                    <p>Welcome back! Here's an overview of your bike rental business.</p>
                </div>
                <div class="owner-header-actions">
                    <a href="/Owner/AddBike" class="owner-btn owner-btn-primary">
                        <i class="bi bi-plus-circle-fill"></i>
                        <span>Add Bike</span>
                    </a>
                    <a href="/Owner/MyBikes" class="owner-btn owner-btn-secondary">
                        <i class="bi bi-list-ul"></i>
                        <span>Manage Listings</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="owner-stats-grid">
            <div class="owner-stat-card">
                <div class="owner-stat-icon green">
                    <i class="bi bi-bicycle"></i>
                </div>
                <div class="owner-stat-details">
                    <div class="owner-stat-value">@Model.TotalBikes</div>
                    <div class="owner-stat-label">Total Bikes</div>
                    <div class="owner-stat-meta">
                        <i class="bi bi-check-circle"></i>
                        @{
                            var availableBikes = Model.Bikes.Count(b => b.AvailabilityStatusId == 1);
                        }
                        @availableBikes Available
                    </div>
                </div>
            </div>

            <div class="owner-stat-card">
                <div class="owner-stat-icon blue">
                    <i class="bi bi-clock-history"></i>
                </div>
                <div class="owner-stat-details">
                    <div class="owner-stat-value">@Model.ActiveRentalsCount</div>
                    <div class="owner-stat-label">Active Rentals</div>
                    <div class="owner-stat-meta">
                        <i class="bi bi-graph-up-arrow"></i>
                        Currently Rented
                    </div>
                </div>
            </div>

            <div class="owner-stat-card">
                <div class="owner-stat-icon orange">
                    <i class="bi bi-cash-coin"></i>
                </div>
                <div class="owner-stat-details">
                    <div class="owner-stat-value">₱@Model.TotalEarnings.ToString("N2")</div>
                    <div class="owner-stat-label">Total Earnings</div>
                    <div class="owner-stat-meta">
                        <i class="bi bi-calendar-check"></i>
                        All Time
                    </div>
                </div>
            </div>

            <div class="owner-stat-card">
                <div class="owner-stat-icon purple">
                    <i class="bi bi-star-fill"></i>
                </div>
                <div class="owner-stat-details">
                    <div class="owner-stat-value">@Model.AverageRating.ToString("F1")</div>
                    <div class="owner-stat-label">Average Rating</div>
                    <div class="owner-rating-stars">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.AverageRating)
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            else
                            {
                                <i class="bi bi-star"></i>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="owner-quick-actions">
            <div class="owner-quick-actions-grid">
                <a href="/Owner/MyBikes" class="owner-quick-action">
                    <i class="bi bi-grid-3x3-gap"></i>
                    <p>Manage Listings</p>
                </a>
                <a href="/Owner/RentalRequests" class="owner-quick-action">
                    <i class="bi bi-inbox"></i>
                    <p>View Requests</p>
                </a>
                <a href="/Wallet/Index" class="owner-quick-action">
                    <i class="bi bi-wallet2"></i>
                    <p>My Wallet</p>
                </a>
                <a href="#" class="owner-quick-action">
                    <i class="bi bi-bar-chart"></i>
                    <p>Analytics</p>
                </a>
            </div>
        </div>

        <!-- Active Rentals -->
        @if (Model.ActiveBookings.Any())
        {
            <div class="owner-section">
                <div class="owner-section-header">
                    <h2 class="owner-section-title">
                        <i class="bi bi-bicycle"></i>
                        Active Rentals
                    </h2>
                </div>
                <div class="owner-section-body">
                    @foreach (var booking in Model.ActiveBookings)
                    {
                        <div class="owner-rental-card">
                            <div class="owner-rental-grid">
                                <div class="owner-rental-image">
                                    @if (booking.Bike.BikeImages.Any())
                                    {
                                        <img src="@booking.Bike.BikeImages.First().ImageUrl" alt="@booking.Bike.Brand @booking.Bike.Model" />
                                    }
                                    else
                                    {
                                        <div style="width: 100%; height: 100%; background: var(--neutral-200); display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-bicycle" style="font-size: 2rem; color: var(--neutral-400);"></i>
                                        </div>
                                    }
                                </div>
                                <div class="owner-rental-details">
                                    <h5>@booking.Bike.Brand @booking.Bike.Model</h5>
                                    <div class="owner-rental-info">
                                        <p><strong>Renter:</strong> @booking.Renter.FullName</p>
                                        <p><strong>Phone:</strong> @booking.Renter.Phone</p>
                                        <p><strong>Return by:</strong> @booking.EndDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                                        <p><strong>Earning:</strong> <span class="owner-rental-earning">₱@((booking.TotalAmount * 0.9m).ToString("N2"))</span></p>
                                    </div>
                                </div>
                                <div class="owner-rental-actions">
                                    <a href="/Bookings/Details/@booking.BookingId" class="owner-table-btn owner-table-btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- My Bikes -->
        <div class="owner-section">
            <div class="owner-section-header">
                <h2 class="owner-section-title">
                    <i class="bi bi-bicycle"></i>
                    My Bikes
                </h2>
                <a href="/Owner/MyBikes" class="owner-section-action">View All</a>
            </div>
            <div class="owner-section-body">
                @if (Model.Bikes.Any())
                {
                    <div class="owner-table-wrapper">
                        <table class="owner-table">
                            <thead>
                                <tr>
                                    <th>Bike</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Rate</th>
                                    <th>Rating</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bike in Model.Bikes.Take(5))
                                {
                                    <tr>
                                        <td><strong>@bike.Brand @bike.Model</strong></td>
                                        <td><span class="owner-badge owner-badge-type">@bike.BikeType.TypeName</span></td>
                                        <td>
                                            @switch (bike.AvailabilityStatusId)
                                            {
                                                case 1:
                                                    <span class="owner-badge available">Available</span>
                                                    break;
                                                case 2:
                                                    <span class="owner-badge rented">Rented</span>
                                                    break;
                                                case 3:
                                                    <span class="owner-badge maintenance">Maintenance</span>
                                                    break;
                                                case 4:
                                                    <span class="owner-badge inactive">Inactive</span>
                                                    break;
                                            }
                                        </td>
                                        <td>₱@bike.HourlyRate/hr</td>
                                        <td>
                                            <div class="owner-rating-stars">
                                                @{
                                                    var avgRating = Model.BikeRatings.ContainsKey(bike.BikeId) ? Model.BikeRatings[bike.BikeId] : 0;
                                                    for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= avgRating)
                                                        {
                                                            <i class="bi bi-star-fill"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-star"></i>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <a href="/Owner/EditBike/@bike.BikeId" class="owner-table-btn owner-table-btn-outline">Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="owner-empty-state">
                        <i class="bi bi-bicycle"></i>
                        <p>No bikes listed yet. <a href="/Owner/AddBike">Add your first bike</a>!</p>
                    </div>
                }
            </div>
        </div>

        <!-- Recent Bookings -->
        <div class="owner-section">
            <div class="owner-section-header">
                <h2 class="owner-section-title">
                    <i class="bi bi-clock-history"></i>
                    Recent Bookings
                </h2>
            </div>
            <div class="owner-section-body">
                @if (Model.RecentBookings.Any())
                {
                    <div class="owner-table-wrapper">
                        <table class="owner-table">
                            <thead>
                                <tr>
                                    <th>Bike</th>
                                    <th>Renter</th>
                                    <th>Dates</th>
                                    <th>Earning</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model.RecentBookings.Take(10))
                                {
                                    <tr>
                                        <td><strong>@booking.Bike.Brand @booking.Bike.Model</strong></td>
                                        <td>@booking.Renter.FullName</td>
                                        <td>
                                            <small>
                                                @booking.StartDate.ToString("MMM dd") - @booking.EndDate.ToString("MMM dd")
                                            </small>
                                        </td>
                                        <td><strong>₱@((booking.TotalAmount * 0.9m).ToString("N2"))</strong></td>
                                        <td>
                                            @switch (booking.BookingStatusId)
                                            {
                                                case 1:
                                                    <span class="owner-badge pending">Pending</span>
                                                    break;
                                                case 2:
                                                    <span class="owner-badge active">Active</span>
                                                    break;
                                                case 3:
                                                    <span class="owner-badge completed">Completed</span>
                                                    break;
                                                case 4:
                                                    <span class="owner-badge cancelled">Cancelled</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="owner-empty-state">
                        <i class="bi bi-clock-history"></i>
                        <p>No bookings yet</p>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
