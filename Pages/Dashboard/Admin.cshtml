@page
@model AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-5">
    <!-- Header -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="text-eco-green mb-2">
                    <i class="bi bi-shield-check"></i> Admin Dashboard
                </h2>
                <p class="text-muted mb-0">Manage users, listings, and monitor platform activity</p>
            </div>
            <div class="col-md-4 text-md-end">
                <span class="badge bg-danger px-3 py-2" style="font-size: 1rem;">
                    <i class="bi bi-shield-fill"></i> Administrator
                </span>
            </div>
        </div>
    </div>

    <!-- System Statistics Grid -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="modern-stat-card bg-gradient-blue">
                <div class="stat-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-details">
                    <h3 class="stat-value">@Model.TotalUsers</h3>
                    <p class="stat-label">Total Users</p>
                    <small class="text-white-50">
                        <i class="bi bi-person-check"></i> @Model.TotalRenters Renters, @Model.TotalOwners Owners
                    </small>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="modern-stat-card bg-gradient-green">
                <div class="stat-icon">
                    <i class="bi bi-bicycle"></i>
                </div>
                <div class="stat-details">
                    <h3 class="stat-value">@Model.TotalBikes</h3>
                    <p class="stat-label">Total Bikes Listed</p>
                    <small class="text-white-50">
                        <i class="bi bi-activity"></i> @Model.TotalActiveRentals Active Rentals
                    </small>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="modern-stat-card bg-gradient-orange">
                <div class="stat-icon">
                    <i class="bi bi-graph-up"></i>
                </div>
                <div class="stat-details">
                    <h3 class="stat-value">â‚±@Model.TotalPlatformRevenue.ToString("N2")</h3>
                    <p class="stat-label">Platform Revenue</p>
                    <small class="text-white-50">
                        <i class="bi bi-check-circle"></i> From @Model.TotalCompletedRentals completed rentals
                    </small>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="modern-stat-card bg-gradient-purple">
                <div class="stat-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <div class="stat-details">
                    <h3 class="stat-value">@Model.PendingOwnerVerifications</h3>
                    <p class="stat-label">Pending Verifications</p>
                    <small class="text-white-50">
                        <i class="bi bi-ban"></i> @Model.SuspendedUsers Suspended Users
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Navigation Panel -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0"><i class="bi bi-grid-3x3-gap text-success"></i> Quick Navigation</h5>
        </div>
        <div class="card-body">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-3">
                    <a href="/Admin/ManageUsers" class="admin-quick-link">
                        <div class="admin-icon-wrapper bg-primary-light">
                            <i class="bi bi-people fs-1 text-primary"></i>
                        </div>
                        <p class="mb-0 mt-2 fw-bold">Manage Users</p>
                        <small class="text-muted">@Model.TotalUsers users</small>
                    </a>
                </div>
                
                <div class="col-md-3 col-6 mb-3">
                    <a href="/Admin/ManageListings" class="admin-quick-link">
                        <div class="admin-icon-wrapper bg-success-light">
                            <i class="bi bi-bicycle fs-1 text-success"></i>
                        </div>
                        <p class="mb-0 mt-2 fw-bold">Manage Listings</p>
                        <small class="text-muted">@Model.TotalBikes bikes</small>
                    </a>
                </div>
                
                <div class="col-md-3 col-6 mb-3">
                    <a href="/Admin/VerifyOwners" class="admin-quick-link position-relative">
                        <div class="admin-icon-wrapper bg-warning-light">
                            <i class="bi bi-shield-check fs-1 text-warning"></i>
                        </div>
                        @if (Model.PendingOwnerVerifications > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @Model.PendingOwnerVerifications
                            </span>
                        }
                        <p class="mb-0 mt-2 fw-bold">Verify Owners</p>
                        <small class="text-muted">@Model.PendingOwnerVerifications pending</small>
                    </a>
                </div>
                
                <div class="col-md-3 col-6 mb-3">
                    <a href="/Admin/Reports" class="admin-quick-link">
                        <div class="admin-icon-wrapper bg-danger-light">
                            <i class="bi bi-flag fs-1 text-danger"></i>
                        </div>
                        <p class="mb-0 mt-2 fw-bold">Reports & Issues</p>
                        <small class="text-muted">View all reports</small>
                    </a>
                </div>
                
                <div class="col-md-3 col-6 mb-3">
                    <a href="/Admin/Analytics" class="admin-quick-link">
                        <div class="admin-icon-wrapper bg-info-light">
                            <i class="bi bi-graph-up-arrow fs-1 text-info"></i>
                        </div>
                        <p class="mb-0 mt-2 fw-bold">Analytics</p>
                        <small class="text-muted">View insights</small>
                    </a>
                </div>
                
                <div class="col-md-3 col-6 mb-3">
                    <a href="/Admin/Settings" class="admin-quick-link">
                        <div class="admin-icon-wrapper bg-secondary-light">
                            <i class="bi bi-gear fs-1 text-secondary"></i>
                        </div>
                        <p class="mb-0 mt-2 fw-bold">System Settings</p>
                        <small class="text-muted">Configure platform</small>
                    </a>
                </div>
                
                <div class="col-md-3 col-6 mb-3">
                    <a href="/Admin/Transactions" class="admin-quick-link">
                        <div class="admin-icon-wrapper bg-success-light">
                            <i class="bi bi-wallet2 fs-1 text-success"></i>
                        </div>
                        <p class="mb-0 mt-2 fw-bold">Transactions</p>
                        <small class="text-muted">View all payments</small>
                    </a>
                </div>
                
                <div class="col-md-3 col-6 mb-3">
                    <a href="/Admin/Logs" class="admin-quick-link">
                        <div class="admin-icon-wrapper bg-dark-light">
                            <i class="bi bi-journal-text fs-1 text-dark"></i>
                        </div>
                        <p class="mb-0 mt-2 fw-bold">System Logs</p>
                        <small class="text-muted">Activity history</small>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Two Column Layout for Activity -->
    <div class="row">
        <!-- Left Column: Recent Users & Pending Verifications -->
        <div class="col-lg-6 mb-4">
            <!-- Pending Owner Verifications -->
            @if (Model.PendingVerifications.Any())
            {
                <div class="card shadow-sm mb-4 border-0">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-exclamation-triangle"></i> Pending Owner Verifications
                            <span class="badge bg-white text-warning float-end">@Model.PendingOwnerVerifications</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var user in Model.PendingVerifications)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@user.FullName</h6>
                                            <small class="text-muted">
                                                <i class="bi bi-envelope"></i> @user.Email
                                            </small>
                                            <br />
                                            <small class="text-muted">
                                                <i class="bi bi-clock"></i> Registered @user.CreatedAt.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <div>
                                            <a href="/Admin/VerifyOwners?userId=@user.UserId" class="btn btn-sm btn-warning">
                                                <i class="bi bi-eye"></i> Review
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.PendingOwnerVerifications > 5)
                        {
                            <div class="text-center mt-3">
                                <a href="/Admin/VerifyOwners" class="btn btn-outline-warning">
                                    View All (@Model.PendingOwnerVerifications)
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Recent Users -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-person-plus text-primary"></i> Recent Registrations</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var user in Model.RecentUsers)
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            @user.FullName
                                            @if (user.IsEmailVerified)
                                            {
                                                <i class="bi bi-patch-check-fill text-success" title="Email Verified"></i>
                                            }
                                        </h6>
                                        <p class="mb-1 small text-muted">@user.Email</p>
                                        <div class="mb-0">
                                            @Html.Raw(Model.GetRoleBadge(user))
                                        </div>
                                    </div>
                                    <small class="text-muted">@user.CreatedAt.ToString("MMM dd")</small>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-3">
                        <a href="/Admin/ManageUsers" class="btn btn-outline-primary">
                            View All Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Recent Bookings & Bikes -->
        <div class="col-lg-6 mb-4">
            <!-- Recent Bookings -->
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-calendar-check text-success"></i> Recent Bookings</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var booking in Model.RecentBookings.Take(5))
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@booking.Bike.Brand @booking.Bike.Model</h6>
                                        <p class="mb-1 small text-muted">
                                            <i class="bi bi-person"></i> @booking.Renter.FullName
                                        </p>
                                        <div class="d-flex gap-2 align-items-center">
                                            <span class="badge bg-@(booking.BookingStatus.StatusName == "Completed" ? "success" : booking.BookingStatus.StatusName == "Active" ? "primary" : booking.BookingStatus.StatusName == "Cancelled" ? "danger" : "warning")">
                                                @booking.BookingStatus.StatusName
                                            </span>
                                            <small class="text-success fw-bold">â‚±@booking.TotalAmount.ToString("N2")</small>
                                        </div>
                                    </div>
                                    <small class="text-muted">@booking.CreatedAt.ToString("MMM dd")</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Recent Bike Listings -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-bicycle text-success"></i> Recent Bike Listings</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var bike in Model.RecentBikes)
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@bike.Brand @bike.Model</h6>
                                        <p class="mb-1 small text-muted">
                                            <i class="bi bi-person"></i> Owner: @bike.Owner.FullName
                                        </p>
                                        <small class="text-success fw-bold">â‚±@bike.HourlyRate/hr</small>
                                    </div>
                                    <small class="text-muted">@bike.CreatedAt.ToString("MMM dd")</small>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-3">
                        <a href="/Admin/ManageListings" class="btn btn-outline-success">
                            View All Listings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Platform Health Summary -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0"><i class="bi bi-heart-pulse text-danger"></i> Platform Health Summary</h5>
        </div>
        <div class="card-body">
            <div class="row text-center">
                <div class="col-md-4 mb-3">
                    <div class="health-metric">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                        <h4 class="mt-2 mb-1">@((Model.TotalActiveRentals * 100.0 / Math.Max(Model.TotalBikes, 1)).ToString("F1"))%</h4>
                        <p class="text-muted mb-0">Bike Utilization Rate</p>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="health-metric">
                        <i class="bi bi-graph-up-arrow text-primary" style="font-size: 2rem;"></i>
                        <h4 class="mt-2 mb-1">@((Model.TotalCompletedRentals * 100.0 / Math.Max(Model.TotalUsers, 1)).ToString("F1"))%</h4>
                        <p class="text-muted mb-0">User Engagement</p>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="health-metric">
                        <i class="bi bi-currency-dollar text-success" style="font-size: 2rem;"></i>
                        <h4 class="mt-2 mb-1">â‚±@(Model.TotalCompletedRentals > 0 ? (Model.TotalPlatformRevenue / Model.TotalCompletedRentals).ToString("N2") : "0.00")</h4>
                        <p class="text-muted mb-0">Avg. Revenue per Booking</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh notifications
        setInterval(function() {
            // Could implement SignalR here for real-time updates
        }, 30000);
    </script>
}

