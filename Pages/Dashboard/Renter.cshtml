@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model RenterDashboardModel
@{
    ViewData["Title"] = "Renter Dashboard";
}

<div class="container my-5">
    <h2 class="text-eco-green mb-4"><i class="bi bi-speedometer2"></i> Renter Dashboard</h2>

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="stat-card green">
                <h3>@Model.ActiveRentalsCount</h3>
                <p>Active Rentals</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stat-card blue">
                <h3>@Model.TotalRentalsCount</h3>
                <p>Total Rentals</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stat-card orange">
                <h3>₱@Model.TotalSpent.ToString("F2")</h3>
                <p>Total Spent</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="eco-impact">
                <h4>Eco Impact</h4>
                <div class="impact-value">@Model.CO2Saved.ToString("F1")</div>
                <small>kg CO₂ Saved</small>
            </div>
        </div>
    </div>

    <!-- Active Rentals -->
    @if (Model.ActiveBookings.Any())
    {
        <div class="card shadow-eco mb-4">
            <div class="card-header bg-eco-primary text-white">
                <h5 class="mb-0"><i class="bi bi-bicycle"></i> Active Rentals</h5>
            </div>
            <div class="card-body">
                @foreach (var booking in Model.ActiveBookings)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    @if (booking.Bike.BikeImages.Any())
                                    {
                                        <img src="@booking.Bike.BikeImages.First().ImageUrl" class="img-fluid rounded" alt="Bike" />
                                    }
                                </div>
                                <div class="col-md-6">
                                    <h5>@booking.Bike.Brand @booking.Bike.Model</h5>
                                    <p class="mb-1"><small>Type: @booking.Bike.BikeType.TypeName</small></p>
                                    <p class="mb-1"><small>Owner: @booking.Bike.Owner.FullName</small></p>
                                    <p class="mb-0">
                                        <strong>Return by:</strong> @booking.EndDate.ToString("MMM dd, yyyy hh:mm tt")
                                    </p>
                                </div>
                                <div class="col-md-2 text-center">
                                    <div class="price-tag">₱@booking.TotalAmount</div>
                                </div>
                                <div class="col-md-2 text-end">
                                    <a href="/Bookings/Details/@booking.BookingId" class="btn btn-eco-primary btn-sm w-100 mb-2">View Details</a>
                                    <form method="post" asp-page-handler="Complete" asp-route-id="@booking.BookingId">
                                        <button type="submit" class="btn btn-success btn-sm w-100">Mark Returned</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Recent Bookings -->
    <div class="card shadow-eco mb-4">
        <div class="card-header bg-eco-primary text-white">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Bookings</h5>
        </div>
        <div class="card-body">
            @if (Model.RecentBookings.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Bike</th>
                                <th>Dates</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model.RecentBookings)
                            {
                                <tr>
                                    <td>@booking.Bike.Brand @booking.Bike.Model</td>
                                    <td>
                                        <small>
                                            @booking.StartDate.ToString("MMM dd")<br />
                                            to @booking.EndDate.ToString("MMM dd")
                                        </small>
                                    </td>
                                    <td>₱@booking.TotalAmount.ToString("F2")</td>
                                    <td>
                                        @switch (booking.BookingStatusId)
                                        {
                                            case 1:
                                                <span class="badge bg-warning">Pending</span>
                                                break;
                                            case 2:
                                                <span class="badge bg-primary">Active</span>
                                                break;
                                            case 3:
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                            case 4:
                                                <span class="badge bg-danger">Cancelled</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a href="/Bookings/Details/@booking.BookingId" class="btn btn-sm btn-outline-primary">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center py-4">No bookings yet. <a href="/Bikes/Browse">Browse bikes</a> to get started!</p>
            }
        </div>
    </div>
</div>

