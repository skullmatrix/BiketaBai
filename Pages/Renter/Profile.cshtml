@page
@model ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container my-5">
    <!-- Header -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="text-eco-green mb-2">
                    <i class="bi bi-person-circle"></i> My Profile
                </h2>
                <p class="text-muted mb-0">Manage your account information and view your rental statistics</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a href="/Renter/RentalHistory" class="btn btn-outline-success">
                    <i class="bi bi-clock-history"></i> Rental History
                </a>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Profile Overview Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <div class="profile-avatar-large">
                        <i class="bi bi-person-fill"></i>
                    </div>
                    <h4 class="mt-3 mb-1">@Model.CurrentUser.FullName</h4>
                    <p class="text-muted mb-2">@Model.CurrentUser.Email</p>
                    
                    <!-- Verification Status -->
                    <div class="mb-3">
                        @if (Model.CurrentUser.IsEmailVerified)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-patch-check-fill"></i> Verified Account
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning">
                                <i class="bi bi-exclamation-circle"></i> Unverified
                            </span>
                        }
                    </div>
                    
                    <!-- Member Since -->
                    <small class="text-muted">
                        <i class="bi bi-calendar"></i> Member since @Model.CurrentUser.CreatedAt.ToString("MMM yyyy")
                    </small>
                </div>
                
                <div class="col-md-9">
                    <div class="row">
                        <!-- User Rating -->
                        <div class="col-md-4 mb-3">
                            <div class="profile-stat-box">
                                <div class="stat-icon-circle bg-warning-light">
                                    <i class="bi bi-star-fill text-warning"></i>
                                </div>
                                <div class="ms-3">
                                    <h3 class="mb-0">@Model.AverageRating.ToString("F1")</h3>
                                    <p class="text-muted mb-0">User Rating</p>
                                    <small class="text-muted">@Model.TotalReviews review(s)</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Total Rentals -->
                        <div class="col-md-4 mb-3">
                            <div class="profile-stat-box">
                                <div class="stat-icon-circle bg-primary-light">
                                    <i class="bi bi-bicycle text-primary"></i>
                                </div>
                                <div class="ms-3">
                                    <h3 class="mb-0">@Model.TotalRentals</h3>
                                    <p class="text-muted mb-0">Total Rentals</p>
                                    <small class="text-muted">@Model.CompletedRentals completed</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Total Spent -->
                        <div class="col-md-4 mb-3">
                            <div class="profile-stat-box">
                                <div class="stat-icon-circle bg-success-light">
                                    <i class="bi bi-wallet2 text-success"></i>
                                </div>
                                <div class="ms-3">
                                    <h3 class="mb-0">₱@Model.TotalSpent.ToString("N2")</h3>
                                    <p class="text-muted mb-0">Total Spent</p>
                                    <small class="text-muted">@Model.ActiveRentals active now</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Wallet & Points -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="wallet-display-card">
                                <i class="bi bi-wallet2"></i>
                                <div>
                                    <small class="text-muted">Wallet Balance</small>
                                    <h5 class="mb-0 text-success">₱@(Model.UserWallet?.Balance.ToString("N2") ?? "0.00")</h5>
                                </div>
                                <a href="/Wallet/Index" class="btn btn-sm btn-outline-success">Manage</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="wallet-display-card">
                                <i class="bi bi-star-fill text-warning"></i>
                                <div>
                                    <small class="text-muted">Loyalty Points</small>
                                    <h5 class="mb-0 text-warning">@(Model.UserPoints?.TotalPoints ?? 0) pts</h5>
                                </div>
                                <a href="/Points/Index" class="btn btn-sm btn-outline-warning">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Two Column Layout -->
    <div class="row">
        <!-- Edit Profile Form -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-pencil-square text-success"></i> Edit Profile</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label">
                                <i class="bi bi-person"></i> Full Name
                            </label>
                            <input asp-for="Input.FullName" class="form-control" required />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-envelope"></i> Email Address
                            </label>
                            <input type="email" class="form-control" value="@Model.CurrentUser.Email" disabled />
                            <small class="text-muted">Email cannot be changed</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Phone" class="form-label">
                                <i class="bi bi-telephone"></i> Phone Number
                            </label>
                            <input asp-for="Input.Phone" class="form-control" required />
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Address" class="form-label">
                                <i class="bi bi-geo-alt"></i> Address
                            </label>
                            <textarea asp-for="Input.Address" class="form-control" rows="3" required></textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Update Profile
                        </button>
                    </form>
                    
                    <hr class="my-4" />
                    
                    <div class="text-center">
                        <a href="/Account/ChangePassword" class="btn btn-outline-secondary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity & Info -->
        <div class="col-lg-6 mb-4">
            <!-- Recent Bookings -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-clock-history text-primary"></i> Recent Rentals</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentBookings.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var booking in Model.RecentBookings)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex align-items-start">
                                        @if (booking.Bike.BikeImages.Any())
                                        {
                                            <img src="@booking.Bike.BikeImages.First().ImageUrl" 
                                                 class="recent-booking-thumb" 
                                                 alt="@booking.Bike.Brand" />
                                        }
                                        else
                                        {
                                            <div class="recent-booking-thumb-placeholder">
                                                <i class="bi bi-bicycle"></i>
                                            </div>
                                        }
                                        
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">@booking.Bike.Brand @booking.Bike.Model</h6>
                                            <p class="mb-1 small text-muted">
                                                <i class="bi bi-calendar"></i> @booking.StartDate.ToString("MMM dd, yyyy")
                                            </p>
                                            <span class="badge bg-@(booking.BookingStatus.StatusName == "Completed" ? "success" : booking.BookingStatus.StatusName == "Active" ? "primary" : "warning")">
                                                @booking.BookingStatus.StatusName
                                            </span>
                                        </div>
                                        <div class="text-end">
                                            <strong class="text-success">₱@booking.TotalAmount.ToString("N2")</strong>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="text-center mt-3">
                            <a href="/Renter/RentalHistory" class="btn btn-outline-primary btn-sm">
                                View All Rentals
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                            <p class="text-muted mt-2">No rental history yet</p>
                            <a href="/Bikes/Browse" class="btn btn-success btn-sm">
                                <i class="bi bi-bicycle"></i> Find a Bike
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Account Information -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-info-circle text-info"></i> Account Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="text-muted"><i class="bi bi-shield-check"></i> Account Status</td>
                            <td class="text-end">
                                @if (Model.CurrentUser.IsSuspended)
                                {
                                    <span class="badge bg-danger">Suspended</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="text-muted"><i class="bi bi-envelope-check"></i> Email Verification</td>
                            <td class="text-end">
                                @if (Model.CurrentUser.IsEmailVerified)
                                {
                                    <span class="badge bg-success">Verified</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Not Verified</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="text-muted"><i class="bi bi-calendar-plus"></i> Account Created</td>
                            <td class="text-end">@Model.CurrentUser.CreatedAt.ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <td class="text-muted"><i class="bi bi-clock"></i> Last Updated</td>
                            <td class="text-end">@Model.CurrentUser.UpdatedAt.ToString("MMM dd, yyyy")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function(){
                $(this).remove(); 
            });
        }, 5000);
    </script>
}

