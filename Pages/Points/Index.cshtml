@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model PointsIndexModel
@{
    ViewData["Title"] = "My Points";
}

<div class="container my-5">
    <h2 class="text-eco-green mb-4"><i class="bi bi-star-fill"></i> My Loyalty Points</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <!-- Points Balance -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-eco" style="background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%); color: #333;">
                <div class="card-body p-4">
                    <h4><i class="bi bi-star-fill"></i> Total Points</h4>
                    <h1 class="display-3 fw-bold">@Model.PointsBalance</h1>
                    <p class="mb-0">≈ ₱@((Model.PointsBalance * 0.1m).ToString("F2")) wallet credit</p>
                </div>
            </div>
        </div>

        <!-- Redeem Options -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-eco h-100">
                <div class="card-body">
                    <h5 class="text-eco-green mb-3">Redeem Points</h5>
                    <form method="post" asp-page-handler="Redeem">
                        <div class="mb-3">
                            <label class="form-label">Points to Redeem</label>
                            <input type="number" name="pointsToRedeem" class="form-control" min="100" step="100" max="@Model.PointsBalance" required />
                            <small class="form-text text-muted">Minimum 100 points. 100 points = ₱10</small>
                        </div>
                        <button type="submit" class="btn btn-eco-primary w-100" @(Model.PointsBalance < 100 ? "disabled" : "")>
                            <i class="bi bi-gift"></i> Redeem for Wallet Credit
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- How to Earn Points -->
    <div class="card shadow-eco mb-4">
        <div class="card-header bg-eco-primary text-white">
            <h5 class="mb-0"><i class="bi bi-lightbulb"></i> How to Earn Points</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> <strong>On-time Return:</strong> +10 points</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> <strong>Eco-commute:</strong> +1 point per km saved</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> <strong>First Rental:</strong> +50 points</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> <strong>Long-term Rental (7+ days):</strong> +20 points</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> <strong>5-Star Rating:</strong> +5 points</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> <strong>Referral:</strong> +100 points</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Points History -->
    <div class="card shadow-eco">
        <div class="card-header bg-eco-primary text-white">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Points History</h5>
        </div>
        <div class="card-body">
            @if (Model.PointsHistory.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Activity</th>
                                <th class="text-end">Points</th>
                                <th class="text-end">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var history in Model.PointsHistory)
                            {
                                <tr>
                                    <td>@history.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>@history.Reason</td>
                                    <td class="text-end">
                                        <span class="@(history.PointsChange > 0 ? "text-success" : "text-danger")">
                                            @(history.PointsChange > 0 ? "+" : "")@history.PointsChange
                                        </span>
                                    </td>
                                    <td class="text-end">@history.PointsAfter</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center py-4">No points history yet. Start renting to earn points!</p>
            }
        </div>
    </div>
</div>

