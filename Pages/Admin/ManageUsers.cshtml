@page
@model ManageUsersModel
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container my-5">
    <!-- Header -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="text-eco-green mb-2">
                    <i class="bi bi-people"></i> Manage Users
                </h2>
                <p class="text-muted mb-0">Search, verify, suspend, and manage all platform users</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a href="/Dashboard/Admin" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Row -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card bg-primary">
                <i class="bi bi-people"></i>
                <div>
                    <h3>@Model.TotalUsers</h3>
                    <p>Total Users</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card bg-success">
                <i class="bi bi-check-circle"></i>
                <div>
                    <h3>@Model.ActiveUsers</h3>
                    <p>Active Users</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card bg-danger">
                <i class="bi bi-ban"></i>
                <div>
                    <h3>@Model.SuspendedUsers</h3>
                    <p>Suspended</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card bg-warning">
                <i class="bi bi-envelope-check"></i>
                <div>
                    <h3>@Model.VerifiedEmails</h3>
                    <p>Verified Emails</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label"><i class="bi bi-search"></i> Search Users</label>
                        <input type="text" name="searchQuery" value="@Model.SearchQuery" class="form-control" placeholder="Name, email, or phone..." />
                    </div>
                    
                    <div class="col-md-3">
                        <label class="form-label"><i class="bi bi-filter"></i> Filter by Role</label>
                        <select name="roleFilter" class="form-select">
                            <option value="">All Roles</option>
                            <option value="Renter" selected="@(Model.RoleFilter == "Renter")">Renters</option>
                            <option value="Owner" selected="@(Model.RoleFilter == "Owner")">Owners</option>
                            <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Admins</option>
                        </select>
                    </div>
                    
                    <div class="col-md-3">
                        <label class="form-label"><i class="bi bi-funnel"></i> Filter by Status</label>
                        <select name="statusFilter" class="form-select">
                            <option value="">All Statuses</option>
                            <option value="Active" selected="@(Model.StatusFilter == "Active")">Active</option>
                            <option value="Suspended" selected="@(Model.StatusFilter == "Suspended")">Suspended</option>
                            <option value="EmailVerified" selected="@(Model.StatusFilter == "EmailVerified")">Email Verified</option>
                            <option value="EmailNotVerified" selected="@(Model.StatusFilter == "EmailNotVerified")">Email Not Verified</option>
                        </select>
                    </div>
                    
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-list-ul"></i> User List (@Model.FilteredUsers.Count)</h5>
                <div>
                    <a href="/Admin/ManageUsers" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Reset Filters
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.FilteredUsers.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>User</th>
                                <th>Contact</th>
                                <th>Roles</th>
                                <th>Status</th>
                                <th>Joined</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.FilteredUsers)
                            {
                                <tr class="@(user.IsSuspended ? "table-danger" : "")">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar-circle">
                                                <i class="bi bi-person-fill"></i>
                                            </div>
                                            <div class="ms-2">
                                                <h6 class="mb-0">@user.FullName</h6>
                                                @if (user.IsEmailVerified)
                                                {
                                                    <small class="text-success">
                                                        <i class="bi bi-patch-check-fill"></i> Verified
                                                    </small>
                                                }
                                                else
                                                {
                                                    <small class="text-warning">
                                                        <i class="bi bi-exclamation-circle"></i> Unverified
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="small">
                                            <div><i class="bi bi-envelope"></i> @user.Email</div>
                                            <div><i class="bi bi-telephone"></i> @user.Phone</div>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.Raw(Model.GetRoleBadges(user))
                                    </td>
                                    <td>
                                        @Html.Raw(Model.GetStatusBadge(user))
                                    </td>
                                    <td>
                                        <small>@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-info dropdown-toggle" data-bs-toggle="dropdown">
                                                <i class="bi bi-gear"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="/Admin/UserDetails/@user.UserId">
                                                        <i class="bi bi-eye"></i> View Details
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                @if (!user.IsAdmin)
                                                {
                                                    @if (user.IsSuspended)
                                                    {
                                                        <li>
                                                            <form method="post" asp-page-handler="Unsuspend" asp-route-userId="@user.UserId" class="d-inline">
                                                                <button type="submit" class="dropdown-item text-success" onclick="return confirm('Reactivate this user?')">
                                                                    <i class="bi bi-check-circle"></i> Reactivate
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <form method="post" asp-page-handler="Suspend" asp-route-userId="@user.UserId" class="d-inline">
                                                                <button type="submit" class="dropdown-item text-warning" onclick="return confirm('Suspend this user?')">
                                                                    <i class="bi bi-ban"></i> Suspend
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                    <li>
                                                        <form method="post" asp-page-handler="Delete" asp-route-userId="@user.UserId" class="d-inline">
                                                            <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Permanently delete this user? This action cannot be undone!')">
                                                                <i class="bi bi-trash"></i> Delete
                                                            </button>
                                                        </form>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li>
                                                        <span class="dropdown-item text-muted disabled">
                                                            <i class="bi bi-shield-lock"></i> Protected Admin
                                                        </span>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-people"></i>
                    <h4>No Users Found</h4>
                    <p class="text-muted">Try adjusting your search or filter criteria</p>
                    <a href="/Admin/ManageUsers" class="btn btn-outline-success">
                        <i class="bi bi-arrow-clockwise"></i> Reset Filters
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function(){
                $(this).remove(); 
            });
        }, 5000);
    </script>
}

