@page
@model BiketaBai.Pages.Admin.TestEmailModel
@{
    ViewData["Title"] = "SMTP Email Test";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-envelope-check"></i> SMTP Email Test & Diagnostics
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Configuration Info -->
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">
                            <i class="bi bi-gear"></i> Current Configuration
                        </h5>
                        <div class="table-responsive">
                            <table class="table table-bordered table-sm">
                                <tbody>
                                    <tr>
                                        <th style="width: 200px;">Sender Name</th>
                                        <td>@Model.ConfigInfo.SenderName</td>
                                    </tr>
                                    <tr>
                                        <th>Sender Email</th>
                                        <td>
                                            @Model.ConfigInfo.SenderEmail
                                            @if (!Model.ConfigInfo.IsConfigured)
                                            {
                                                <span class="badge bg-warning ms-2">Not Configured</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>SMTP Server</th>
                                        <td>@Model.ConfigInfo.SmtpServer</td>
                                    </tr>
                                    <tr>
                                        <th>SMTP Port</th>
                                        <td>@Model.ConfigInfo.SmtpPort</td>
                                    </tr>
                                    <tr>
                                        <th>SMTP Password</th>
                                        <td>
                                            <code>@Model.ConfigInfo.SmtpPasswordMasked</code>
                                            @if (Model.ConfigInfo.SmtpPasswordMasked == "Not set")
                                            {
                                                <span class="badge bg-danger ms-2">Missing</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Auth Email</th>
                                        <td>@(string.IsNullOrEmpty(Model.ConfigInfo.SmtpAuthEmail) ? "(same as Sender Email)" : Model.ConfigInfo.SmtpAuthEmail)</td>
                                    </tr>
                                    <tr>
                                        <th>Config Source</th>
                                        <td>
                                            @if (Model.ConfigInfo.ConfigSource.Contains("⚠️") || Model.ConfigInfo.ConfigSource.Contains("Environment Variables"))
                                            {
                                                <div class="alert alert-warning p-2 mb-0">
                                                    <strong>⚠️ WARNING:</strong><br/>
                                                    <pre class="mb-0 small">@Model.ConfigInfo.ConfigSource</pre>
                                                    <small class="text-danger">Environment variables override config files! You need to update/remove them.</small>
                                                </div>
                                            }
                                            else
                                            {
                                                @Model.ConfigInfo.ConfigSource
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        <td>
                                            @if (Model.ConfigInfo.IsConfigured)
                                            {
                                                <span class="badge bg-success">Configured</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Not Configured</span>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <hr />

                    <!-- Test Form -->
                    <form method="post" class="mb-4">
                        <div class="mb-3">
                            <label for="TestEmailAddress" class="form-label">
                                <strong>Test Email Address</strong>
                            </label>
                            <input type="email" 
                                   class="form-control" 
                                   id="TestEmailAddress" 
                                   name="TestEmailAddress" 
                                   value="@Model.TestEmailAddress"
                                   placeholder="Enter email address to send test email"
                                   required />
                            <small class="form-text text-muted">
                                Enter a valid email address where you want to receive the test email.
                            </small>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Run SMTP Test
                        </button>
                    </form>

                    <!-- Test Results -->
                    @if (Model.Result != null)
                    {
                        <div class="mt-4">
                            <h5 class="mb-3">
                                <i class="bi bi-clipboard-check"></i> Test Results
                            </h5>

                            @if (Model.Result.Success)
                            {
                                <div class="alert alert-success">
                                    <h6><i class="bi bi-check-circle"></i> Test Completed Successfully!</h6>
                                    <p class="mb-0">The test email should arrive at <strong>@Model.TestEmailAddress</strong> shortly.</p>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger">
                                    <h6><i class="bi bi-x-circle"></i> Test Failed</h6>
                                    @if (!string.IsNullOrEmpty(Model.Result.ErrorMessage))
                                    {
                                        <p class="mb-2"><strong>Error:</strong> @Model.Result.ErrorMessage</p>
                                    }
                                </div>
                            }

                            <!-- Test Steps -->
                            <div class="mt-3">
                                <h6>Test Steps:</h6>
                                <div class="list-group">
                                    @foreach (var step in Model.Result.Steps)
                                    {
                                        <div class="list-group-item @(step.Success ? "list-group-item-success" : "list-group-item-danger")">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h6 class="mb-1">@step.Name</h6>
                                                <span>
                                                    @if (step.Success)
                                                    {
                                                        <i class="bi bi-check-circle-fill text-success"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-x-circle-fill text-danger"></i>
                                                    }
                                                </span>
                                            </div>
                                            <p class="mb-1">@step.Message</p>
                                            @if (!string.IsNullOrEmpty(step.Details))
                                            {
                                                <small class="text-muted">@step.Details</small>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Full Exception Details (for debugging) -->
                            @if (!string.IsNullOrEmpty(Model.Result.FullException))
                            {
                                <div class="mt-3">
                                    <button class="btn btn-sm btn-outline-secondary" 
                                            type="button" 
                                            data-bs-toggle="collapse" 
                                            data-bs-target="#exceptionDetails">
                                        <i class="bi bi-code-slash"></i> Show Full Exception Details
                                    </button>
                                    <div class="collapse mt-2" id="exceptionDetails">
                                        <div class="card card-body bg-dark text-light">
                                            <pre class="mb-0 small">@Model.Result.FullException</pre>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Troubleshooting Tips -->
                    <div class="mt-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="bi bi-lightbulb"></i> Troubleshooting Tips
                                </h6>
                                <ul class="mb-0 small">
                                    <li><strong>Connection Failed:</strong> Check if SMTP server address and port are correct</li>
                                    <li><strong>Authentication Failed:</strong> 
                                        <ul>
                                            <li>Verify app password is correct (no spaces, copy exactly)</li>
                                            <li>For Gmail: Ensure 2FA is enabled and app password is generated</li>
                                            <li>For iCloud: Use app-specific password (format: xxxx-xxxx-xxxx-xxxx)</li>
                                        </ul>
                                    </li>
                                    <li><strong>Email Not Received:</strong> Check spam folder, verify recipient email is correct</li>
                                    <li><strong>Password Issues:</strong> Ensure password is trimmed (no leading/trailing spaces)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }
    .list-group-item {
        border-left: 4px solid;
    }
    .list-group-item-success {
        border-left-color: #28a745;
    }
    .list-group-item-danger {
        border-left-color: #dc3545;
    }
</style>

