    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--admin-gray-200);
}

.verify-header-left {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
}

.verify-header h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--admin-gray-900);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.verify-count {
    font-size: 0.875rem;
    color: var(--admin-gray-600);
    font-weight: 500;
}

.verify-header-right {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

/* Quick Stats in Header */
