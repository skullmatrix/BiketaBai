    gap: 0.75rem;
    flex: 1;
    min-width: 0;
}

.owner-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--admin-sage-primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 600;
    flex-shrink: 0;
}

.owner-details {
    min-width: 0;
    flex: 1;
}

.owner-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--admin-gray-900);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
}

.owner-id {
    font-size: 0.75rem;
    color: var(--admin-gray-500);
    font-weight: 500;
}

.owner-contact {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    font-size: 0.8125rem;
    color: var(--admin-gray-600);
    margin-bottom: 0.25rem;
}

.owner-contact span {
    white-space: nowrap;
}

.owner-phone::before,
.owner-date::before {
    content: "•";
    margin: 0 0.375rem;
    color: var(--admin-gray-400);
}

.owner-address {
    font-size: 0.75rem;
    color: var(--admin-gray-600);
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.owner-address i {
    font-size: 0.75rem;
    color: var(--admin-gray-500);
}

/* ID Document Section */
.owner-document {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    align-items: center;
}

.doc-thumbnail {
    position: relative;
    width: 120px;
    height: 80px;
    border-radius: 6px;
    overflow: hidden;
    border: 2px solid var(--admin-gray-200);
    cursor: pointer;
    transition: all 0.2s;
}

.doc-thumbnail:hover {
    border-color: var(--admin-sage-primary);
    transform: scale(1.02);
}

.doc-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.doc-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(135, 169, 107, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.2s;
}

.doc-thumbnail:hover .doc-overlay {
    opacity: 1;
}

.doc-overlay i {
    font-size: 1.5rem;
    color: white;
}

.doc-actions {
    display: flex;
    gap: 0.25rem;
}

.doc-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 4px;
    border: 1px solid var(--admin-gray-300);
    background: white;
    color: var(--admin-gray-700);
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
}

.doc-btn:hover {
    background: var(--admin-sage-subtle);
    border-color: var(--admin-sage-primary);
    color: var(--admin-sage-dark);
    transform: translateY(-2px);
}

.doc-btn i {
    font-size: 0.75rem;
}

.doc-missing {
    width: 120px;
    height: 80px;
    border-radius: 6px;
    border: 2px dashed var(--admin-gray-300);
    background: var(--admin-gray-50);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    color: var(--admin-gray-500);
}

.doc-missing i {
    font-size: 1.5rem;
}

.doc-missing span {
    font-size: 0.75rem;
    font-weight: 500;
}

/* Owner Actions */
.owner-actions {
    display: flex;
    gap: 0.5rem;
}

.inline-form {
    margin: 0;
}

.action-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    border-radius: 6px;
    border: 2px solid transparent;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
}

.action-btn i {
    font-size: 1rem;
}

.action-btn.approve {
    background: var(--admin-sage-primary);
    color: white;
    border-color: var(--admin-sage-primary);
}

.action-btn.approve:hover {
    background: var(--admin-sage-dark);
    border-color: var(--admin-sage-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(135, 169, 107, 0.3);
}

.action-btn.reject {
    background: white;
    color: #DC2626;
    border-color: #DC2626;
}

.action-btn.reject:hover {
    background: #DC2626;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(220, 38, 38, 0.3);
}

/* Empty State */
.verify-empty {
    text-align: center;
    padding: 3rem 2rem;
    background: white;
    border-radius: 12px;
    border: 1px solid var(--admin-gray-200);
}

.verify-empty-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    background: var(--admin-sage-subtle);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.verify-empty-icon i {
    font-size: 3rem;
    color: var(--admin-sage-primary);
}

.verify-empty h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--admin-gray-900);
    margin: 0 0 0.5rem 0;
}

.verify-empty p {
    font-size: 1rem;
    color: var(--admin-gray-600);
    margin: 0 0 1.5rem 0;
}

.verify-btn-compact {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    border-radius: 6px;
    border: 2px solid transparent;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
}

.verify-btn-compact.primary {
    background: var(--admin-sage-primary);
    color: white;
