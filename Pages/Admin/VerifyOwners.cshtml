@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model VerifyOwnersModel
@{
    ViewData["Title"] = "Verify Owners";
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<div class="admin-dashboard-wrapper">
    <div class="admin-dashboard-container" style="max-width: 1400px;">
        
        <!-- Ultra Compact Header -->
        <div class="verify-header">
            <div class="verify-header-left">
                <h1><i class="bi bi-shield-check"></i> Owner Verification</h1>
                <span class="verify-count">@Model.TotalPending pending</span>
            </div>
            <div class="verify-header-right">
                <!-- Quick Stats -->
                <div class="verify-quick-stats">
                    <span class="stat-item pending" title="Pending Verifications">
                        <i class="bi bi-hourglass-split"></i> @Model.TotalPending
                    </span>
                    <span class="stat-item approved" title="Approved">
                        <i class="bi bi-check-circle-fill"></i> @Model.TotalApproved
                    </span>
                    <span class="stat-item rejected" title="Rejected">
                        <i class="bi bi-x-circle-fill"></i> @Model.TotalRejected
                    </span>
                </div>
                <a href="/Admin/Dashboard" class="verify-btn-icon" title="Back to Dashboard">
                    <i class="bi bi-arrow-left"></i>
                </a>
            </div>
        </div>

        <!-- Messages -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="verify-alert success">
                <i class="bi bi-check-circle-fill"></i>
                <span>@Model.SuccessMessage</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="verify-alert error">
                <i class="bi bi-exclamation-circle-fill"></i>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        <!-- Compact Verifications List -->
        @if (Model.PendingOwners.Any())
        {
            <div class="verify-owners-compact">
                @foreach (var owner in Model.PendingOwners)
                {
                    <div class="owner-row" data-owner-id="@owner.UserId">
                        <!-- Left: Owner Info + ID Document -->
                        <div class="owner-info-section">
                            <div class="owner-main-info">
                                <div class="owner-avatar">
                                    @owner.FullName.Substring(0, 1).ToUpper()
                                </div>
                                <div class="owner-details">
                                    <div class="owner-name">
                                        @owner.FullName
                                        <span class="owner-id">#@owner.UserId</span>
                                    </div>
                                    <div class="owner-contact">
                                        <span title="Email">@owner.Email</span>
                                        @if (!string.IsNullOrEmpty(owner.Phone))
                                        {
                                            <span class="owner-phone" title="Phone">@owner.Phone</span>
                                        }
                                        <span class="owner-date" title="Registered">@owner.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(owner.Address))
                                    {
                                        <div class="owner-address" title="Address">
                                            <i class="bi bi-geo-alt"></i> @owner.Address
                                        </div>
                                    }
                                </div>
                            </div>
                            
                            <!-- ID Document Thumbnail -->
                            <div class="owner-document">
                                @if (!string.IsNullOrEmpty(owner.IdDocumentUrl))
                                {
                                    <div class="doc-thumbnail" onclick="openImageModal('@owner.IdDocumentUrl', '@owner.FullName')" title="Click to view full size">
                                        <img src="@owner.IdDocumentUrl" alt="ID Document" />
                                        <div class="doc-overlay">
                                            <i class="bi bi-zoom-in"></i>
                                        </div>
                                    </div>
                                    <div class="doc-actions">
                                        <button type="button" 
                                                onclick="openImageModal('@owner.IdDocumentUrl', '@owner.FullName')" 
                                                class="doc-btn"
                                                title="View full size">
                                            <i class="bi bi-arrows-fullscreen"></i>
                                        </button>
                                        <a href="@owner.IdDocumentUrl" 
                                           target="_blank" 
                                           class="doc-btn"
                                           title="Open in new tab">
                                            <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="doc-missing">
                                        <i class="bi bi-file-earmark-x"></i>
                                        <span>No ID</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Right: Quick Actions -->
                        <div class="owner-actions">
                            <form method="post" asp-page-handler="Reject" asp-route-userId="@owner.UserId" class="inline-form">
                                <button type="submit" 
                                        class="action-btn reject" 
                                        title="Reject Verification"
                                        onclick="return confirm('Reject verification for @owner.FullName?')">
                                    <i class="bi bi-x-circle"></i>
                                    <span>Reject</span>
                                </button>
                            </form>
                            
                            <form method="post" asp-page-handler="Approve" asp-route-userId="@owner.UserId" class="inline-form">
                                <button type="submit" 
                                        class="action-btn approve" 
                                        title="Approve Owner"
                                        onclick="return confirm('Approve @owner.FullName as verified owner?')">
                                    <i class="bi bi-check-circle-fill"></i>
                                    <span>Approve</span>
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="verify-empty">
                <div class="verify-empty-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h3>All Caught Up!</h3>
                <p>No pending owner verifications</p>
                <a href="/Admin/Dashboard" class="verify-btn-compact primary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        }

    </div>
</div>

<!-- Premium Image Modal -->
<div id="imageModal" class="verify-modal">
    <div class="verify-modal-overlay" onclick="closeImageModal()"></div>
    <div class="verify-modal-content">
        <div class="verify-modal-header">
            <h3 id="modalTitle">ID Document</h3>
            <button onclick="closeImageModal()" class="verify-modal-close">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <div class="verify-modal-body">
            <img id="modalImage" src="" alt="ID Document" />
        </div>
    </div>
</div>

<style>
/* ============================================
   ULTRA COMPACT VERIFY OWNERS
   ============================================ */

/* Header */
