    color: #065F46;
    border: 1px solid #059669;
}

.verify-alert.error {
    background: #FEE2E2;
    color: #991B1B;
    border: 1px solid #DC2626;
}

.verify-alert i {
    font-size: 1rem;
}

/* Compact Owners List */
.verify-owners-compact {
    display: grid;
    gap: 0.625rem;
}

/* Owner Row */
.owner-row {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1rem;
    align-items: center;
