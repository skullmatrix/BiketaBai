@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@model ManageListingsModel
@{
    ViewData["Title"] = "Manage Listings";
}

<div class="page-container">
    <!-- Header -->
    <div class="page-header">
        <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: var(--space-4);">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-bicycle"></i> Manage Bike Listings
                </h1>
                <p class="page-subtitle">Review, approve, flag, or remove bike listings from the platform</p>
            </div>
            <a href="/Admin/Dashboard" class="btn-minimal btn-minimal-ghost">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert-minimal alert-minimal-success">
            <i class="bi bi-check-circle-fill"></i>
            <div>@Model.SuccessMessage</div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert-minimal alert-minimal-error">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <div>@Model.ErrorMessage</div>
        </div>
    }

    <!-- Statistics Row -->
    <div class="grid-minimal grid-minimal-4 mb-5">
        <div class="stat-card-minimal">
            <div class="stat-icon stat-icon-primary">
                <i class="bi bi-bicycle"></i>
            </div>
            <div class="stat-value">@Model.TotalListings</div>
            <div class="stat-label">Total Listings</div>
        </div>
        
        <div class="stat-card-minimal">
            <div class="stat-icon" style="background: #D1FAE5; color: #065F46;">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stat-value">@Model.AvailableListings</div>
            <div class="stat-label">Available</div>
        </div>
        
        <div class="stat-card-minimal">
            <div class="stat-icon" style="background: #DBEAFE; color: #1E40AF;">
                <i class="bi bi-clock-history"></i>
            </div>
            <div class="stat-value">@Model.RentedListings</div>
            <div class="stat-label">Currently Rented</div>
        </div>
        
        <div class="stat-card-minimal">
            <div class="stat-icon" style="background: #FEF3C7; color: #92400E;">
                <i class="bi bi-flag"></i>
            </div>
            <div class="stat-value">@Model.FlaggedListings</div>
            <div class="stat-label">Flagged/Maintenance</div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="card-minimal mb-5">
        <form method="get">
            <div style="display: grid; grid-template-columns: 2fr 1fr 1fr auto; gap: var(--space-4); align-items: end;">
                <div class="form-group-minimal">
                    <label class="label-minimal">
                        <i class="bi bi-search"></i> Search Bikes
                    </label>
                    <input type="text" name="searchQuery" value="@Model.SearchQuery" class="input-minimal" placeholder="Brand, model, location, or owner..." />
                </div>
                
                <div class="form-group-minimal">
                    <label class="label-minimal">
                        <i class="bi bi-funnel"></i> Status
                    </label>
                    <select name="statusFilter" class="select-minimal">
                        <option value="">All Statuses</option>
                        <option value="1" selected="@(Model.StatusFilter == "1")">Available</option>
                        <option value="2" selected="@(Model.StatusFilter == "2")">Rented</option>
                        <option value="3" selected="@(Model.StatusFilter == "3")">Inactive</option>
                        <option value="4" selected="@(Model.StatusFilter == "4")">Under Maintenance</option>
                    </select>
                </div>
                
                <div class="form-group-minimal">
                    <label class="label-minimal">
                        <i class="bi bi-filter"></i> Bike Type
                    </label>
                    <select name="typeFilter" class="select-minimal">
                        <option value="">All Types</option>
                        @foreach (var type in Model.BikeTypes)
                        {
                            <option value="@type.BikeTypeId" selected="@(Model.TypeFilter == type.BikeTypeId.ToString())">@type.TypeName</option>
                        }
                    </select>
                </div>
                
                <button type="submit" class="btn-minimal btn-minimal-primary">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>
    </div>

    <!-- Bikes Grid -->
    @if (Model.FilteredBikes.Any())
    {
        <div class="grid-minimal grid-minimal-3">
            @foreach (var bike in Model.FilteredBikes)
            {
                <div class="card-minimal">
                    <div style="position: relative; margin-bottom: var(--space-4);">
                        @if (bike.BikeImages.Any())
                        {
                            <img src="@bike.BikeImages.First().ImageUrl" 
                                 alt="@bike.Brand @bike.Model" 
                                 style="width: 100%; height: 200px; object-fit: cover; border-radius: var(--radius-md);" />
                        }
                        else
                        {
                            <div style="width: 100%; height: 200px; background: var(--neutral-200); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center;">
                                <i class="bi bi-bicycle" style="font-size: 3rem; color: var(--neutral-400);"></i>
                            </div>
                        }
                        <span class="badge-minimal @(bike.AvailabilityStatusId == 1 ? "badge-minimal-success" : bike.AvailabilityStatusId == 2 ? "badge-minimal-primary" : bike.AvailabilityStatusId == 4 ? "badge-minimal-warning" : "badge-minimal-info")" 
                              style="position: absolute; top: var(--space-2); right: var(--space-2);">
                            @bike.AvailabilityStatus.StatusName
                        </span>
                    </div>
                    
                    <h5 style="font-size: 1.125rem; font-weight: 700; margin-bottom: var(--space-2);">@bike.Brand @bike.Model</h5>
                    <p style="font-size: 0.875rem; color: var(--neutral-600); margin-bottom: var(--space-2);">
                        <i class="bi bi-tag"></i> @bike.BikeType.TypeName
                    </p>
                    <p style="font-size: 0.875rem; color: var(--neutral-600); margin-bottom: var(--space-3);">
                        <i class="bi bi-person"></i> Owner: <strong>@bike.Owner.FullName</strong>
                    </p>
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-4); padding-bottom: var(--space-4); border-bottom: 1px solid var(--neutral-200);">
                        <div>
                            <span style="font-size: 1.25rem; font-weight: 700; color: var(--sage-primary);">â‚±@bike.HourlyRate</span>
                            <small style="color: var(--neutral-500);">/hr</small>
                        </div>
                        <small style="color: var(--neutral-500);">
                            <i class="bi bi-clock"></i> @bike.CreatedAt.ToString("MMM dd, yyyy")
                        </small>
                    </div>
                    
                    <!-- Actions -->
                    <div style="display: flex; gap: var(--space-2);">
                        <a href="/Bikes/Details/@bike.BikeId" class="btn-minimal btn-minimal-outline btn-minimal-sm" style="flex: 1;">
                            <i class="bi bi-eye"></i> View
                        </a>
                        
                        <div class="dropdown" style="flex: 1;">
                            <button class="btn-minimal btn-minimal-ghost btn-minimal-sm w-100" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-gear"></i> Actions
                            </button>
                            <ul class="dropdown-menu">
                                <li><h6 class="dropdown-header">Change Status</h6></li>
                                <li>
                                    <form method="post" asp-page-handler="SetStatus" asp-route-bikeId="@bike.BikeId" asp-route-statusId="1" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-check-circle" style="color: var(--success);"></i> Mark Available
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form method="post" asp-page-handler="SetStatus" asp-route-bikeId="@bike.BikeId" asp-route-statusId="4" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-flag" style="color: var(--warning);"></i> Flag/Maintenance
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form method="post" asp-page-handler="SetStatus" asp-route-bikeId="@bike.BikeId" asp-route-statusId="3" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-pause-circle" style="color: var(--neutral-500);"></i> Set Inactive
                                        </button>
                                    </form>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-page-handler="Delete" asp-route-bikeId="@bike.BikeId" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Permanently delete this bike listing? This cannot be undone.')">
                                            <i class="bi bi-trash"></i> Delete Listing
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card-minimal text-center" style="padding: var(--space-12);">
            <i class="bi bi-bicycle" style="font-size: 4rem; color: var(--neutral-300); margin-bottom: var(--space-4);"></i>
            <h4 style="margin-bottom: var(--space-2);">No Listings Found</h4>
            <p style="color: var(--neutral-600); margin-bottom: var(--space-4);">Try adjusting your search or filter criteria</p>
            <a href="/Admin/ManageListings" class="btn-minimal btn-minimal-primary">
                <i class="bi bi-arrow-clockwise"></i> Reset Filters
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts
        window.setTimeout(function() {
            document.querySelectorAll('.alert-minimal').forEach(function(alert) {
                alert.style.transition = 'opacity 0.5s ease-out';
                alert.style.opacity = '0';
                setTimeout(function() {
                    alert.remove();
                }, 500);
            });
        }, 5000);
    </script>
}

@section Styles {
    <style>
        @@media (max-width: 768px) {
            .page-container form > div {
                grid-template-columns: 1fr !important;
            }
        }
    </style>
}

