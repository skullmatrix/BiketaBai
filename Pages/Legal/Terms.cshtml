    <link rel="stylesheet" href="~/css/premium-minimal.css" />
    <style>
        .legal-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 1rem;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }
        .legal-header {
            text-align: center;
            padding-bottom: 2rem;
            border-bottom: 2px solid #87A96B;
            margin-bottom: 2rem;
        }
        .legal-section {
            margin-bottom: 2rem;
        }
        .legal-section h2 {
            color: #87A96B;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
        .legal-section h3 {
            color: #6B8E5F;
            font-size: 1.2rem;
            margin-top: 1.5rem;
            margin-bottom: 0.75rem;
        }
        .effective-date {
            color: #666;
            font-style: italic;
            margin-bottom: 2rem;
        }
        .highlight-box {
            background: #E8F0E3;
            border-left: 4px solid #87A96B;
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 0.5rem;
        }
