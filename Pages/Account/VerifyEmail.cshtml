@page
@model VerifyEmailModel
@{
    ViewData["Title"] = "Verify Email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bike Ta Bai</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/premium-minimal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-minimal.css" asp-append-version="true" />
</head>
<body>
    <!-- Minimalist Verification Container -->
    <div class="auth-minimal-container">
        <div class="auth-card-minimal" style="max-width: 540px;">
            @if (Model.IsVerified)
            {
                <!-- Back to Home -->
                <a href="/" class="auth-back-link">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
                
                <!-- Success Icon -->
                <div class="text-center mb-4">
                    <div class="auth-logo-minimal" style="width: 80px; height: 80px; font-size: 40px; margin: 0 auto 1.5rem; background: linear-gradient(135deg, #87A96B 0%, #9CAF88 100%); color: #ffffff;">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                </div>
                
                <!-- Header -->
                <div class="auth-header-minimal">
                    <h1 style="color: #87A96B;">Email Verified!</h1>
                    <p>Welcome to Bike Ta Bai ðŸš´</p>
                </div>
                
                <!-- Success Message -->
                <div class="success-message">
                    <div class="success-message-content">
                        <i class="bi bi-check-circle-fill"></i>
                        <div class="success-message-text">
                            <strong>Success</strong>
                            <p>Your email has been successfully verified. Your account is now active!</p>
                        </div>
                    </div>
                </div>
                
                <!-- Get Started -->
                <div class="field-requirements" style="background: #E8F0E3; border-left-color: #87A96B;">
                    <div class="field-requirements-title" style="color: #87A96B;">
                        <i class="bi bi-rocket-takeoff"></i> Get Started:
                    </div>
                    <div class="field-requirement met">
                        <i class="bi bi-check-circle-fill"></i> Browse available bikes
                    </div>
                    <div class="field-requirement met">
                        <i class="bi bi-check-circle-fill"></i> Load your wallet
                    </div>
                    <div class="field-requirement met">
                        <i class="bi bi-check-circle-fill"></i> Make your first booking
                    </div>
                    <div class="field-requirement met">
                        <i class="bi bi-check-circle-fill"></i> Earn loyalty points
                    </div>
                </div>
                
                <!-- Action Button -->
                <a href="/Account/Login" class="auth-btn-minimal auth-btn-primary" style="margin-top: 1.5rem;">
                    <i class="bi bi-box-arrow-in-right"></i> Login to Your Account
                </a>
                
                <!-- Footer -->
                <div class="auth-footer-minimal">
                    <p>ðŸŒ¿ Ride Green, Live Clean</p>
                </div>
            }
            else
            {
                <!-- Back to Home -->
                <a href="/" class="auth-back-link">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
                
                <!-- Error Icon -->
                <div class="text-center mb-4">
                    <div class="auth-logo-minimal" style="width: 80px; height: 80px; font-size: 40px; margin: 0 auto 1.5rem; background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%); color: #ffffff;">
                        <i class="bi bi-x-circle-fill"></i>
                    </div>
                </div>
                
                <!-- Header -->
                <div class="auth-header-minimal">
                    <h1 style="color: #EF4444;">Verification Failed</h1>
                    <p>Unable to verify your email address</p>
                </div>
                
                <!-- Error Message -->
                <div class="error-summary">
                    <div class="error-summary-title">
                        <i class="bi bi-exclamation-triangle-fill"></i> Verification Error
                    </div>
                    <p style="margin: 0.75rem 0 0 0; color: #991B1B;">@Model.ErrorMessage</p>
                </div>
                
                <!-- Troubleshooting -->
                <div class="field-requirements">
                    <div class="field-requirements-title">
                        <i class="bi bi-question-circle"></i> Please try the following:
                    </div>
                    <div class="field-requirement unmet">
                        <i class="bi bi-circle"></i> Check if you copied the entire verification link
                    </div>
                    <div class="field-requirement unmet">
                        <i class="bi bi-circle"></i> Make sure the link hasn't expired (valid for 24 hours)
                    </div>
                    <div class="field-requirement unmet">
                        <i class="bi bi-circle"></i> Try registering again if the link is too old
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div style="display: flex; gap: 0.75rem; margin-top: 1.5rem;">
                    <a href="/Account/Register" class="auth-btn-minimal auth-btn-primary" style="flex: 1;">
                        <i class="bi bi-person-plus"></i> Register Again
                    </a>
                    <a href="/Account/Login" class="auth-btn-minimal auth-btn-outline" style="flex: 1;">
                        <i class="bi bi-box-arrow-in-right"></i> Try Login
                    </a>
                </div>
                
                <!-- Footer -->
                <div class="auth-footer-minimal">
                    <p>Need help? Contact our support team</p>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

