@page
@model BiketaBai.Pages.Account.RegisterTypeModel
@{
    ViewData["Title"] = "Choose Your Account Type";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bike Ta Bai</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/registration-premium.css" asp-append-version="true" />
</head>
<body>
    <div class="registration-wrapper">
        <div class="registration-container">
            <div class="reg-type-header">
                <h1>Welcome to Bike Ta Bai</h1>
                <p>Choose how you'd like to use our platform</p>
            </div>

            <form method="post" id="registerTypeForm">
                <input type="hidden" name="SelectedType" id="selectedTypeInput" value="" />
                <div class="reg-type-cards">
                    <!-- Renter Option -->
                    <div class="reg-type-card" data-type="Renter" id="renterCard">
                        <div class="reg-type-icon">
                            <i class="bi bi-bicycle"></i>
                        </div>
                        <h3 class="reg-type-title">I want to rent a bike</h3>
                        <p class="reg-type-desc">Browse and rent bikes from owners in your area</p>
                        <ul class="reg-type-features">
                            <li><i class="bi bi-check-circle-fill"></i> Browse available bikes</li>
                            <li><i class="bi bi-check-circle-fill"></i> Easy booking system</li>
                        </ul>
                    </div>

                    <!-- Owner Option -->
                    <div class="reg-type-card" data-type="Owner" id="ownerCard">
                        <div class="reg-type-icon">
                            <i class="bi bi-shop"></i>
                        </div>
                        <h3 class="reg-type-title">I want to rent out my bike</h3>
                        <p class="reg-type-desc">List your bikes and earn money by renting them</p>
                        <ul class="reg-type-features">
                            <li><i class="bi bi-check-circle-fill"></i> List multiple bikes</li>
                            <li><i class="bi bi-check-circle-fill"></i> Manage bookings</li>
                            <li><i class="bi bi-check-circle-fill"></i> Track earnings</li>
                        </ul>
                    </div>
                </div>

                <div class="reg-footer">
                    <a href="/Account/Login" class="reg-footer-link">Already have an account? Sign in</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Handle card click - auto-submit and route
            $('.reg-type-card').on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                const type = $(this).data('type');
                
                // Visual feedback
                $('.reg-type-card').removeClass('selected');
                $(this).addClass('selected');
                
                // Set the selected type and submit immediately
                $('#selectedTypeInput').val(type);
                
                // Add loading state
                $(this).css('opacity', '0.7');
                $(this).find('.reg-type-icon').html('<i class="bi bi-arrow-repeat spin"></i>');
                
                // Submit form immediately
                $('#registerTypeForm').submit();
            });
        });
    </script>
    
    <style>
        .spin {
            animation: spin 1s linear infinite;
        }
        
        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
    </style>
</body>
</html>
