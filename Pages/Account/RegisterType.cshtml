@page
@model BiketaBai.Pages.Account.RegisterTypeModel
@{
    ViewData["Title"] = "Choose Your Account Type";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-4 mb-3">ðŸš´ Welcome to Bike Ta Bai</h1>
                <p class="lead text-muted">Choose how you'd like to use our platform</p>
            </div>

            <form method="post" id="registerTypeForm">
                <div class="row g-4">
                    <!-- Renter Option -->
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm registration-type-card" 
                             data-type="Renter"
                             style="cursor: pointer; border: 2px solid #e0e0e0; transition: all 0.3s;">
                            <div class="card-body text-center p-5">
                                <div class="mb-4">
                                    <i class="bi bi-bicycle" style="font-size: 4rem; color: #87A96B;"></i>
                                </div>
                                <h3 class="card-title mb-3">I want to rent a bike</h3>
                                <p class="text-muted mb-4">
                                    Browse and rent bikes from owners in your area. Perfect for commuters and casual riders.
                                </p>
                                <div class="registration-features">
                                    <div class="feature-item mb-2">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <span>Browse available bikes</span>
                                    </div>
                                    <div class="feature-item mb-2">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <span>Easy booking system</span>
                                    </div>
                                    <div class="feature-item mb-2">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <span>Earn loyalty points</span>
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <input type="radio" name="SelectedType" value="Renter" id="renterType" 
                                           class="form-check-input" style="display: none;">
                                    <label for="renterType" class="btn btn-primary btn-lg w-100">
                                        Choose Renter
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Owner Option -->
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm registration-type-card" 
                             data-type="Owner"
                             style="cursor: pointer; border: 2px solid #e0e0e0; transition: all 0.3s;">
                            <div class="card-body text-center p-5">
                                <div class="mb-4">
                                    <i class="bi bi-shop" style="font-size: 4rem; color: #87A96B;"></i>
                                </div>
                                <h3 class="card-title mb-3">I want to rent out my bike</h3>
                                <p class="text-muted mb-4">
                                    List your bikes and earn money by renting them to others. Manage your bike fleet easily.
                                </p>
                                <div class="registration-features">
                                    <div class="feature-item mb-2">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <span>List multiple bikes</span>
                                    </div>
                                    <div class="feature-item mb-2">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <span>Manage bookings</span>
                                    </div>
                                    <div class="feature-item mb-2">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <span>Track earnings</span>
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <input type="radio" name="SelectedType" value="Owner" id="ownerType" 
                                           class="form-check-input" style="display: none;">
                                    <label for="ownerType" class="btn btn-primary btn-lg w-100">
                                        Choose Owner
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.SelectedType))
                {
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success btn-lg px-5">
                            Continue <i class="bi bi-arrow-right"></i>
                        </button>
                    </div>
                }

                <div class="text-center mt-4">
                    <p class="text-muted">
                        Already have an account? 
                        <a href="/Account/Login" class="text-decoration-none">Sign in here</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .registration-type-card {
        transition: all 0.3s ease;
    }

    .registration-type-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
        border-color: #87A96B !important;
    }

    .registration-type-card.selected {
        border-color: #87A96B !important;
        border-width: 3px !important;
        background-color: #f8fff8;
    }

    .feature-item {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .feature-item i {
        font-size: 1.1rem;
    }
</style>

<script>
    $(document).ready(function() {
        // Handle card click
        $('.registration-type-card').click(function() {
            const type = $(this).data('type');
            
            // Remove previous selection
            $('.registration-type-card').removeClass('selected');
            $('input[name="SelectedType"]').prop('checked', false);
            
            // Add selection
            $(this).addClass('selected');
            $(`#${type.toLowerCase()}Type`).prop('checked', true);
            
            // Show continue button
            if ($('button[type="submit"]').length === 0) {
                $('<div class="text-center mt-4">' +
                  '<button type="submit" class="btn btn-success btn-lg px-5">' +
                  'Continue <i class="bi bi-arrow-right"></i>' +
                  '</button></div>').insertAfter('.row.g-4');
            }
        });

        // Auto-submit when type is selected (optional - can remove if you want manual submit)
        // $('input[name="SelectedType"]').change(function() {
        //     $('#registerTypeForm').submit();
        // });
    });
</script>

