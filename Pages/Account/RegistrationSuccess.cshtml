@page
@model RegistrationSuccessModel
@{
    ViewData["Title"] = "Registration Successful";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bike Ta Bai</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/premium-minimal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-minimal.css" asp-append-version="true" />
</head>
<body>
    <!-- Minimalist Success Container -->
    <div class="auth-minimal-container">
        <div class="auth-card-minimal" style="max-width: 540px;">
            <!-- Back to Home -->
            <a href="/" class="auth-back-link">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
            
            <!-- Success Icon -->
            <div class="text-center mb-4">
                <div class="auth-logo-minimal" style="width: 80px; height: 80px; font-size: 40px; margin: 0 auto 1.5rem;">
                    <i class="bi bi-envelope-check"></i>
                </div>
            </div>
            
            <!-- Header -->
            <div class="auth-header-minimal">
                <h1 style="color: #87A96B;">Registration Successful!</h1>
                <p>Check your email to verify your account</p>
            </div>
            
            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="success-message">
                    <div class="success-message-content">
                        <i class="bi bi-check-circle-fill"></i>
                        <div class="success-message-text">
                            <strong>Success</strong>
                            <p>@TempData["SuccessMessage"]</p>
                        </div>
                    </div>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="auth-alert-minimal error">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <div class="alert-content">
                        <strong>Notice</strong>
                        <p>@TempData["ErrorMessage"]</p>
                    </div>
                </div>
            }
            
            <!-- Next Steps -->
            <div class="field-requirements" style="background: #E8F0E3; border-left-color: #87A96B;">
                <div class="field-requirements-title" style="color: #87A96B;">
                    <i class="bi bi-list-check"></i> What's Next?
                </div>
                <div class="field-requirement met">
                    <i class="bi bi-check-circle-fill"></i> Check your email inbox (and spam folder)
                </div>
                <div class="field-requirement met">
                    <i class="bi bi-check-circle-fill"></i> Click the verification link in the email
                </div>
                <div class="field-requirement met">
                    <i class="bi bi-check-circle-fill"></i> Log in and start using Bike Ta Bai!
                </div>
            </div>
            
            <!-- Info Box -->
            <div class="helper-text" style="background: #f8f8f8; padding: 1rem; border-radius: 0.5rem; margin-top: 1.5rem;">
                <i class="bi bi-info-circle" style="color: #87A96B;"></i>
                <div>
                    <strong>Didn't receive the email?</strong><br>
                    <small style="color: #6a6a6a;">The verification link expires in 24 hours. Check your spam folder or contact support if needed.</small>
                </div>
            </div>
            
            <!-- Action Button -->
            <a href="/Account/Login" class="auth-btn-minimal auth-btn-primary" style="margin-top: 1.5rem;">
                <i class="bi bi-box-arrow-in-right"></i> Go to Login
            </a>
            
            <!-- Footer -->
            <div class="auth-footer-minimal">
                <p>ðŸŒ¿ Ride Green, Live Clean</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

