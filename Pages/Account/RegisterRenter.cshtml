@page
@model BiketaBai.Pages.Account.RegisterRenterModel
@{
    ViewData["Title"] = "Register as Renter";
    Layout = null;
    var googleMapsKey = ViewContext.HttpContext.RequestServices.GetService<IConfiguration>()?["AppSettings:GoogleMapsApiKey"] ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bike Ta Bai</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/registration-premium.css" asp-append-version="true" />
    <script src="https://maps.googleapis.com/maps/api/js?key=@googleMapsKey&libraries=places&loading=async&callback=initAutocomplete" async defer></script>
</head>
<body>
    <div class="registration-wrapper">
        <div class="registration-container">
            <!-- Progress Steps -->
            <div class="reg-progress">
                <div class="reg-progress-step @(Model.CurrentStep >= 1 ? "active" : "") @(Model.CurrentStep > 1 ? "completed" : "")">
                    <div class="reg-progress-number">@(Model.CurrentStep > 1 ? "" : "1")</div>
                    <div class="reg-progress-label">Basic Info</div>
                </div>
                <div class="reg-progress-line @(Model.CurrentStep > 1 ? "completed" : "")"></div>
                <div class="reg-progress-step @(Model.CurrentStep >= 2 ? "active" : "") @(Model.CurrentStep > 2 ? "completed" : "")">
                    <div class="reg-progress-number">@(Model.CurrentStep > 2 ? "" : "2")</div>
                    <div class="reg-progress-label">ID Verification</div>
                </div>
                <div class="reg-progress-line @(Model.CurrentStep > 2 ? "completed" : "")"></div>
                <div class="reg-progress-step @(Model.CurrentStep >= 3 ? "active" : "")">
                    <div class="reg-progress-number">3</div>
                    <div class="reg-progress-label">Account Setup</div>
                </div>
            </div>

            <div class="reg-form-card">
                <div class="reg-form-header">
                    <h2><i class="bi bi-bicycle"></i> Register as Renter</h2>
                </div>
                <div class="reg-form-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="reg-alert reg-alert-error">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <div>@Model.ErrorMessage</div>
                        </div>
                    }

                    <form method="post" enctype="multipart/form-data" id="renterRegistrationForm">
                        <input type="hidden" name="step" value="@Model.CurrentStep" />

                        <!-- Step 1: Basic Information -->
                        @if (Model.CurrentStep == 1)
                        {
                            <div class="reg-form-group">
                                <label asp-for="Input.FullName" class="reg-form-label">
                                    Full Name <span class="required">*</span>
                                </label>
                                <input asp-for="Input.FullName" class="reg-form-input" 
                                       placeholder="Enter your full name" required />
                                <span asp-validation-for="Input.FullName" class="reg-form-error"></span>
                            </div>

                            <div class="reg-form-group">
                                <label asp-for="Input.Email" class="reg-form-label">
                                    Email Address <span class="required">*</span>
                                </label>
                                <input asp-for="Input.Email" type="email" class="reg-form-input" 
                                       placeholder="Enter your email" required />
                                <span asp-validation-for="Input.Email" class="reg-form-error"></span>
                            </div>

                            <div class="reg-form-group">
                                <label asp-for="Input.Address" class="reg-form-label">
                                    Address <span class="required">*</span>
                                </label>
                                <input asp-for="Input.Address" class="reg-form-input" 
                                       placeholder="Start typing your address..." required 
                                       id="addressInput" autocomplete="off" />
                                <div class="reg-form-help">
                                    <i class="bi bi-info-circle"></i>
                                    <span>Select from suggestions as you type</span>
                                </div>
                                <div id="addressSuggestions" class="address-suggestions"></div>
                                <div id="addressValidation" style="display: none;">
                                    <div class="reg-validation-badge success" id="addressValid">
                                        <i class="bi bi-check-circle"></i> Address verified
                                    </div>
                                    <div class="reg-validation-badge error" id="addressInvalid" style="display: none;">
                                        <i class="bi bi-x-circle"></i> <span></span>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.Address" class="reg-form-error"></span>
                            </div>

                            <div class="reg-btn-group">
                                <a href="/Account/RegisterType" class="reg-btn reg-btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Back
                                </a>
                                <button type="submit" class="reg-btn reg-btn-primary">
                                    Next: ID Verification <i class="bi bi-arrow-right"></i>
                                </button>
                            </div>
                        }

                        <!-- Step 2: ID Verification -->
                        @if (Model.CurrentStep == 2)
                        {
                            <div class="reg-alert reg-alert-info">
                                <i class="bi bi-info-circle-fill"></i>
                                <div>
                                    <strong>Why we need your ID:</strong>
                                    <ul style="margin: 0.5rem 0 0 1.25rem; padding: 0;">
                                        <li>Verify your identity for security</li>
                                        <li>Cross-check with your provided address</li>
                                        <li>Ensure account authenticity</li>
                                    </ul>
                                </div>
                            </div>

                            <div class="reg-form-group">
                                <label class="reg-form-label">
                                    ID Front Photo <span class="required">*</span>
                                </label>
                                <div class="reg-camera-capture">
                                    <input type="file" name="IdDocumentFront" id="IdDocumentFront" 
                                           accept="image/jpeg,image/jpg,image/png" capture="environment" required style="display: none;" />
                                    <label for="IdDocumentFront" class="reg-camera-btn">
                                        <div class="reg-camera-icon">
                                            <i class="bi bi-camera-fill"></i>
                                        </div>
                                        <div class="reg-camera-text">Take Photo of ID Front</div>
                                        <div class="reg-camera-hint">Tap to open camera</div>
                                    </label>
                                    <div id="idFrontPreview" class="reg-camera-preview" style="display: none;">
                                        <img id="idFrontPreviewImg" src="" alt="ID Front Preview" />
                                        <button type="button" class="reg-camera-remove" onclick="removeIdPhoto('front')">
                                            <i class="bi bi-x-circle-fill"></i>
                                        </button>
                                    </div>
                                    <div id="idFrontError" class="reg-form-error" style="display: none;"></div>
                                </div>
                            </div>

                            <div class="reg-form-group">
                                <label class="reg-form-label">
                                    ID Back Photo <span class="required">*</span>
                                </label>
                                <div class="reg-camera-capture">
                                    <input type="file" name="IdDocumentBack" id="IdDocumentBack" 
                                           accept="image/jpeg,image/jpg,image/png" capture="environment" required style="display: none;" />
                                    <label for="IdDocumentBack" class="reg-camera-btn">
                                        <div class="reg-camera-icon">
                                            <i class="bi bi-camera-fill"></i>
                                        </div>
                                        <div class="reg-camera-text">Take Photo of ID Back</div>
                                        <div class="reg-camera-hint">Tap to open camera</div>
                                    </label>
                                    <div id="idBackPreview" class="reg-camera-preview" style="display: none;">
                                        <img id="idBackPreviewImg" src="" alt="ID Back Preview" />
                                        <button type="button" class="reg-camera-remove" onclick="removeIdPhoto('back')">
                                            <i class="bi bi-x-circle-fill"></i>
                                        </button>
                                    </div>
                                    <div id="idBackError" class="reg-form-error" style="display: none;"></div>
                                </div>
                            </div>

                            <div class="reg-btn-group">
                                <button type="submit" name="step" value="1" class="reg-btn reg-btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Back
                                </button>
                                <button type="submit" name="step" value="2" class="reg-btn reg-btn-primary">
                                    Next: Account Setup <i class="bi bi-arrow-right"></i>
                                </button>
                            </div>
                        }

                        <!-- Step 3: Account Setup -->
                        @if (Model.CurrentStep == 3)
                        {
                            <div class="reg-form-group">
                                <label asp-for="Input.Password" class="reg-form-label">
                                    Password <span class="required">*</span>
                                </label>
                                <input asp-for="Input.Password" type="password" class="reg-form-input" 
                                       placeholder="Create a password (minimum 6 characters)" 
                                       required minlength="6" id="passwordInput" />
                                <div class="reg-form-help">
                                    <i class="bi bi-shield-check"></i>
                                    <span>Password must be at least 6 characters</span>
                                </div>
                                <span asp-validation-for="Input.Password" class="reg-form-error"></span>
                            </div>

                            <div class="reg-form-group">
                                <label asp-for="Input.ConfirmPassword" class="reg-form-label">
                                    Confirm Password <span class="required">*</span>
                                </label>
                                <input asp-for="Input.ConfirmPassword" type="password" class="reg-form-input" 
                                       placeholder="Re-enter your password" required 
                                       id="confirmPasswordInput" />
                                <span asp-validation-for="Input.ConfirmPassword" class="reg-form-error"></span>
                            </div>

                            <div class="reg-btn-group">
                                <button type="submit" name="step" value="2" class="reg-btn reg-btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Back
                                </button>
                                <button type="submit" name="step" value="3" class="reg-btn reg-btn-success">
                                    <i class="bi bi-check-circle"></i> Complete Registration
                                </button>
                            </div>
                        }
                    </form>
                </div>
            </div>

            <div class="reg-footer">
                <a href="/Account/Login" class="reg-footer-link">Already have an account? Sign in</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let addressPlaceId = null;
        let autocompleteService;
        let geocoder;
        let suggestionsTimeout;
        let service = null;

        // Initialize Google Maps Autocomplete
        function initAutocomplete() {
            try {
                const addressInput = document.getElementById('addressInput');
                if (addressInput && typeof google !== 'undefined' && google.maps && google.maps.places) {
                    // Use AutocompleteService for better suggestions
                    autocompleteService = new google.maps.places.AutocompleteService();
                    geocoder = new google.maps.Geocoder();
                    service = new google.maps.places.PlacesService(document.createElement('div'));
                    console.log('‚úÖ Google Maps Places API initialized successfully');
                } else {
                    console.error('‚ùå Google Maps API not loaded. Check API key and enabled APIs.');
                    showAddressError('Google Maps API not loaded. Please check your API configuration.');
                }
            } catch (error) {
                console.error('‚ùå Error initializing Google Maps:', error);
                showAddressError('Error initializing address suggestions. Please try again.');
            }
        }

        // Fallback if Google Maps doesn't load
        window.initAutocomplete = initAutocomplete;

        function showAddressError(message) {
            $('#addressValidation').show();
            $('#addressValid').hide();
            $('#addressInvalid').show().find('span').text(message);
        }

        function showAddressSuggestions(query) {
            if (!autocompleteService) {
                console.error('‚ùå AutocompleteService not initialized');
                showAddressError('Address suggestions unavailable. Please check API configuration.');
                return;
            }

            if (query.length < 3) {
                $('#addressSuggestions').hide();
                return;
            }

            console.log('üîç Searching for address:', query);

            // Use AutocompleteService.getPlacePredictions for better results
            const request = {
                input: query,
                componentRestrictions: { country: 'ph' },
                types: ['address']
            };

            autocompleteService.getPlacePredictions(request, function(predictions, status) {
                console.log('üìç Autocomplete Status:', status);
                console.log('üìç Predictions:', predictions);

                if (status === google.maps.places.PlacesServiceStatus.OK && predictions && predictions.length > 0) {
                    const suggestionsHtml = predictions.slice(0, 5).map(function(prediction) {
                        return `
                            <div class="address-suggestion-item" data-place-id="${prediction.place_id}" data-address="${prediction.description}">
                                <div class="address-suggestion-icon">
                                    <i class="bi bi-geo-alt-fill"></i>
                                </div>
                                <div class="address-suggestion-text">
                                    <strong>${prediction.structured_formatting.main_text}</strong>
                                    <div style="font-size: 0.75rem; color: var(--neutral-500); margin-top: 0.125rem;">
                                        ${prediction.structured_formatting.secondary_text || ''}
                                    </div>
                                </div>
                            </div>
                        `;
                    }).join('');

                    $('#addressSuggestions').html(suggestionsHtml).show();
                    console.log('‚úÖ Showing', predictions.length, 'suggestions');
                } else if (status === google.maps.places.PlacesServiceStatus.ZERO_RESULTS) {
                    $('#addressSuggestions').html('<div class="address-suggestion-item" style="cursor: default; color: var(--neutral-500);">No addresses found</div>').show();
                    console.log('‚ö†Ô∏è No results found');
                } else {
                    $('#addressSuggestions').hide();
                    const errorMsg = getPlacesApiErrorMessage(status);
                    console.error('‚ùå Places API Error:', status, errorMsg);
                    showAddressError(errorMsg);
                }
            });
        }

        function getPlacesApiErrorMessage(status) {
            const errors = {
                'ZERO_RESULTS': 'No addresses found. Try a different address.',
                'OVER_QUERY_LIMIT': 'Address service temporarily unavailable. Please try again later.',
                'REQUEST_DENIED': 'Address service access denied. Please check API configuration.',
                'INVALID_REQUEST': 'Invalid address query. Please try again.',
                'UNKNOWN_ERROR': 'An error occurred. Please try again.'
            };
            return errors[status] || 'Unable to search addresses. Please try again.';
        }

        $(document).ready(function() {
            // Address input - show suggestions as user types (active search)
            $('#addressInput').on('input', function() {
                const query = $(this).val().trim();
                
                clearTimeout(suggestionsTimeout);
                
                if (query.length >= 3) {
                    // Wait 200ms after user stops typing before showing suggestions (faster response)
                    suggestionsTimeout = setTimeout(function() {
                        showAddressSuggestions(query);
                    }, 200);
                } else {
                    $('#addressSuggestions').hide();
                }
            });

            // Show suggestions on focus if there's text
            $('#addressInput').on('focus', function() {
                const query = $(this).val().trim();
                if (query.length >= 3) {
                    showAddressSuggestions(query);
                }
            });

            // Handle suggestion click
            $(document).on('click', '.address-suggestion-item', function() {
                const address = $(this).data('address');
                const placeId = $(this).data('place-id');
                
                if (!placeId) return; // Don't process "No addresses found" message
                
                $('#addressInput').val(address);
                addressPlaceId = placeId;
                
                // Get full place details
                if (service && placeId) {
                    service.getDetails({
                        placeId: placeId,
                        fields: ['formatted_address', 'geometry', 'address_components']
                    }, function(place, status) {
                        if (status === google.maps.places.PlacesServiceStatus.OK) {
                            $('#addressInput').val(place.formatted_address);
                            console.log('‚úÖ Place details loaded:', place.formatted_address);
                        }
                    });
                }
                
                // Hide suggestions
                $('#addressSuggestions').hide();
                
                // Show validation success
                $('#addressValidation').show();
                $('#addressValid').show();
                $('#addressInvalid').hide();
            });

            // Hide suggestions when clicking outside
            $(document).on('click', function(e) {
                if (!$(e.target).closest('#addressInput, #addressSuggestions').length) {
                    $('#addressSuggestions').hide();
                }
            });

            // ID Front Photo Capture
            $('#IdDocumentFront').change(function(e) {
                const file = e.target.files[0];
                if (file) {
                    // Validate file size (max 5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('ID front photo must be less than 5MB. Please choose a smaller file.');
                        $(this).val('');
                        return;
                    }

                    // Validate file type
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    if (!allowedTypes.includes(file.type)) {
                        alert('ID front photo must be JPG or PNG image.');
                        $(this).val('');
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#idFrontPreviewImg').attr('src', e.target.result);
                        $('#idFrontPreview').show();
                        $('#IdDocumentFront').closest('.reg-camera-capture').find('.reg-camera-btn').hide();
                        $('#idFrontError').hide();
                    };
                    reader.onerror = function() {
                        alert('Error reading file. Please try again.');
                        $('#IdDocumentFront').val('');
                    };
                    reader.readAsDataURL(file);
                }
            });

            // ID Back Photo Capture
            $('#IdDocumentBack').change(function(e) {
                const file = e.target.files[0];
                if (file) {
                    // Validate file size (max 5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('ID back photo must be less than 5MB. Please choose a smaller file.');
                        $(this).val('');
                        return;
                    }

                    // Validate file type
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    if (!allowedTypes.includes(file.type)) {
                        alert('ID back photo must be JPG or PNG image.');
                        $(this).val('');
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#idBackPreviewImg').attr('src', e.target.result);
                        $('#idBackPreview').show();
                        $('#IdDocumentBack').closest('.reg-camera-capture').find('.reg-camera-btn').hide();
                        $('#idBackError').hide();
                    };
                    reader.onerror = function() {
                        alert('Error reading file. Please try again.');
                        $('#IdDocumentBack').val('');
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Form validation before submission (Step 2)
            $('#renterRegistrationForm').on('submit', function(e) {
                const currentStep = $('input[name="step"]').val();
                
                if (currentStep === '2') {
                    const frontFile = $('#IdDocumentFront')[0].files[0];
                    const backFile = $('#IdDocumentBack')[0].files[0];

                    if (!frontFile) {
                        e.preventDefault();
                        alert('Please take a photo of the front of your ID.');
                        $('#IdDocumentFront').focus();
                        return false;
                    }

                    if (!backFile) {
                        e.preventDefault();
                        alert('Please take a photo of the back of your ID.');
                        $('#IdDocumentBack').focus();
                        return false;
                    }

                    // Validate file sizes
                    if (frontFile.size > 5 * 1024 * 1024) {
                        e.preventDefault();
                        alert('ID front photo is too large. Maximum size is 5MB.');
                        return false;
                    }

                    if (backFile.size > 5 * 1024 * 1024) {
                        e.preventDefault();
                        alert('ID back photo is too large. Maximum size is 5MB.');
                        return false;
                    }

                    // Validate file types
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    if (!allowedTypes.includes(frontFile.type)) {
                        e.preventDefault();
                        alert('ID front photo must be JPG or PNG image.');
                        return false;
                    }

                    if (!allowedTypes.includes(backFile.type)) {
                        e.preventDefault();
                        alert('ID back photo must be JPG or PNG image.');
                        return false;
                    }
                }
            });

            // Password confirmation
            $('#confirmPasswordInput').on('input', function() {
                const password = $('#passwordInput').val();
                const confirm = $(this).val();
                if (confirm && password !== confirm) {
                    $(this).css('border-color', 'var(--error)');
                } else {
                    $(this).css('border-color', '');
                }
            });
        });

        function removeIdPhoto(side) {
            if (side === 'front') {
                $('#IdDocumentFront').val('');
                $('#idFrontPreview').hide();
                $('#IdDocumentFront').closest('.reg-camera-capture').find('.reg-camera-btn').show();
            } else {
                $('#IdDocumentBack').val('');
                $('#idBackPreview').hide();
                $('#IdDocumentBack').closest('.reg-camera-capture').find('.reg-camera-btn').show();
            }
        }
    </script>
</body>
</html>
