@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-eco">
                <div class="card-body p-5">
                    <h2 class="text-center text-eco-green mb-4">
                        <i class="bi bi-key"></i> Forgot Password?
                    </h2>
                    
                    <p class="text-center text-muted mb-4">
                        Enter your email address and we'll send you a link to reset your password.
                    </p>

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                        </div>
                    }

                    @if (string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <form method="post" class="form-eco">
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label">Email Address</label>
                                <input asp-for="Input.Email" class="form-control" type="email" required autofocus placeholder="your-email@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-eco-primary w-100 btn-lg">
                                <i class="bi bi-envelope"></i> Send Reset Link
                            </button>
                        </form>

                        <div class="text-center mt-4">
                            <p class="mb-2">
                                <a href="/Account/Login" class="text-eco-green">
                                    <i class="bi bi-arrow-left"></i> Back to Login
                                </a>
                            </p>
                            <p>
                                Don't have an account? <a href="/Account/Register" class="text-eco-green">Register here</a>
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center mt-4">
                            <a href="/Account/Login" class="btn btn-eco-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Go to Login
                            </a>
                        </div>
                    }
                </div>
            </div>

            <div class="card bg-eco-light mt-3 p-3">
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i> <strong>Note:</strong> If you don't receive the email within a few minutes, please check your spam folder.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

