@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bike Ta Bai</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/premium-minimal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-minimal.css" asp-append-version="true" />
</head>
<body>
    <!-- Minimalist Forgot Password Container -->
    <div class="auth-minimal-container">
        <div class="auth-card-minimal">
            <!-- Back to Login -->
            <a href="/Account/Login" class="auth-back-link">
                <i class="bi bi-arrow-left"></i> Back to Login
            </a>
            
            <!-- Header -->
            <div class="auth-header-minimal">
                <div class="auth-logo-minimal">
                    <i class="bi bi-key"></i>
                </div>
                <h1>Forgot Password?</h1>
                <p>Enter your email to receive a reset link</p>
            </div>
            
            <!-- Success/Error Messages -->
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="success-message">
                    <div class="success-message-content">
                        <i class="bi bi-check-circle-fill"></i>
                        <div class="success-message-text">
                            <strong>Email Sent</strong>
                            <p>@Model.SuccessMessage</p>
                        </div>
                    </div>
                </div>
                
                <!-- Info Box -->
                <div class="helper-text" style="background: #E8F0E3; padding: 1rem; border-radius: 0.5rem; margin-top: 1rem;">
                    <i class="bi bi-info-circle" style="color: #87A96B;"></i>
                    <div>
                        <strong>What's Next?</strong><br>
                        <small style="color: #4a4a4a;">Check your email inbox (and spam folder) for the password reset link. The link expires in 1 hour.</small>
                    </div>
                </div>
                
                <a href="/Account/Login" class="auth-btn-minimal auth-btn-primary" style="margin-top: 1.5rem;">
                    <i class="bi bi-box-arrow-in-right"></i> Go to Login
                </a>
            }
            else
            {
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="error-summary">
                        <div class="error-summary-title">
                            <i class="bi bi-exclamation-triangle-fill"></i> Error
                        </div>
                        <p style="margin: 0.75rem 0 0 0; color: #991B1B;">@Model.ErrorMessage</p>
                    </div>
                }
                
                <!-- Forgot Password Form -->
                <form method="post" id="forgotPasswordForm" novalidate>
                    <!-- Email -->
                    <div class="auth-form-group">
                        <label class="auth-form-label">
                            Email Address <span class="required">*</span>
                        </label>
                        <div class="auth-input-wrapper" id="emailWrapper">
                            <input asp-for="Input.Email" type="email" class="auth-input" 
                                   placeholder="Enter your email" required autofocus autocomplete="email" 
                                   id="emailInput" />
                            <i class="bi bi-envelope auth-input-icon"></i>
                            <i class="bi bi-x-circle validation-icon error"></i>
                            <i class="bi bi-check-circle validation-icon success"></i>
                        </div>
                        <div class="validation-message error" id="emailError" style="display: none;">
                            <i class="bi bi-exclamation-circle-fill"></i>
                            <span>Please enter a valid email address</span>
                        </div>
                        <span asp-validation-for="Input.Email" class="validation-message error"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="auth-btn-minimal auth-btn-primary">
                        <span class="btn-text">
                            <i class="bi bi-envelope"></i> Send Reset Link
                        </span>
                        <span class="btn-loading" style="display: none;">
                            <span class="spinner-border spinner-border-sm"></span> Sending...
                        </span>
                    </button>

                    <!-- Divider -->
                    <div class="auth-divider">
                        <span>Or</span>
                    </div>

                    <!-- Links -->
                    <div style="text-align: center;">
                        <p style="margin-bottom: 0.5rem;">
                            <a href="/Account/Login" class="auth-link">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </a>
                        </p>
                        <p style="margin: 0;">
                            Don't have an account? <a href="/Account/Register" class="auth-link">Register here</a>
                        </p>
                    </div>
                </form>
                
                <!-- Info Box -->
                <div class="helper-text" style="background: #f8f8f8; padding: 1rem; border-radius: 0.5rem; margin-top: 1.5rem;">
                    <i class="bi bi-info-circle" style="color: #87A96B;"></i>
                    <div>
                        <small style="color: #6a6a6a;"><strong>Note:</strong> If you don't receive the email within a few minutes, please check your spam folder.</small>
                    </div>
                </div>
            }
            
            <!-- Footer -->
            <div class="auth-footer-minimal">
                <p>ðŸŒ¿ Ride Green, Live Clean</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Real-time Email Validation
            $('#emailInput').on('input blur', function() {
                const email = $(this).val();
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                const wrapper = $('#emailWrapper');
                const errorMsg = $('#emailError');
                
                if (email.length === 0) {
                    wrapper.removeClass('has-error has-success');
                    $(this).removeClass('error success');
                    errorMsg.hide();
                } else if (emailRegex.test(email)) {
                    wrapper.removeClass('has-error').addClass('has-success');
                    $(this).removeClass('error').addClass('success');
                    errorMsg.hide();
                } else {
                    wrapper.removeClass('has-success').addClass('has-error');
                    $(this).removeClass('success').addClass('error');
                    errorMsg.show();
                }
            });

            // Form Submit with Validation
            $('#forgotPasswordForm').submit(function(e) {
                const email = $('#emailInput').val();
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                
                if (!email || !emailRegex.test(email)) {
                    e.preventDefault();
                    $('#emailWrapper').addClass('has-error');
                    $('#emailInput').addClass('error');
                    $('#emailError').show();
                    $('#emailInput').focus();
                    return false;
                }
                
                // Show loading state
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.find('.btn-text').hide();
                submitBtn.find('.btn-loading').show();
                submitBtn.prop('disabled', true);
            });

            // Focus effect
            $('.auth-input').on('focus', function() {
                $(this).closest('.auth-input-wrapper').removeClass('has-error');
                $(this).removeClass('error');
                $('#emailError').hide();
            });
        });
    </script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>
</html>
