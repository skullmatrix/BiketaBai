@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-eco">
                <div class="card-body p-5">
                    @if (Model.IsTokenValid)
                    {
                        <h2 class="text-center text-eco-green mb-4">
                            <i class="bi bi-shield-lock"></i> Reset Your Password
                        </h2>

                        <p class="text-center text-muted mb-4">
                            Enter your new password below.
                        </p>

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                            </div>
                        }

                        <form method="post" class="form-eco">
                            <input type="hidden" asp-for="Input.Token" />
                            <input type="hidden" asp-for="Input.Email" />

                            <div class="mb-3">
                                <label asp-for="Input.NewPassword" class="form-label">New Password</label>
                                <input asp-for="Input.NewPassword" class="form-control" type="password" required autofocus />
                                <small class="form-text text-muted">
                                    Minimum 8 characters with uppercase, lowercase, and number
                                </small>
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm New Password</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" required />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-eco-primary w-100 btn-lg">
                                <i class="bi bi-check-circle"></i> Reset Password
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-center">
                            <div class="mb-4">
                                <i class="bi bi-x-circle-fill" style="font-size: 5rem; color: #f44336;"></i>
                            </div>
                            
                            <h2 class="text-danger mb-4">Invalid or Expired Link</h2>
                            
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                            </div>
                            
                            <p>The password reset link is either invalid or has expired.</p>
                            
                            <p class="text-muted">Password reset links are valid for 1 hour for security reasons.</p>
                            
                            <div class="mt-4">
                                <a href="/Account/ForgotPassword" class="btn btn-eco-primary">
                                    <i class="bi bi-arrow-clockwise"></i> Request New Reset Link
                                </a>
                                <a href="/Account/Login" class="btn btn-outline-secondary ms-2">
                                    <i class="bi bi-box-arrow-in-right"></i> Back to Login
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

