@page
@model BiketaBai.Pages.Account.RegisterOwnerModel
@{
    ViewData["Title"] = "Register as Owner";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>@ViewData["Title"] - Bike Ta Bai</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/premium-minimal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-minimal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/registration-premium.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-minimal-container">
        <div class="auth-card-minimal register">
            <!-- Back Link -->
            <a href="/Account/RegisterType" class="auth-back-link">
                <i class="bi bi-arrow-left"></i> Back to Selection
            </a>

            <!-- Progress Steps -->
            <div class="auth-progress-steps">
                <div class="auth-step @(Model.CurrentStep >= 1 ? "active" : "") @(Model.CurrentStep > 1 ? "completed" : "")">
                    <div class="auth-step-circle">@(Model.CurrentStep > 1 ? "âœ“" : "1")</div>
                    <div class="auth-step-label">Store Info</div>
                </div>
                <div class="auth-step-line @(Model.CurrentStep > 1 ? "completed" : "")"></div>
                <div class="auth-step @(Model.CurrentStep >= 2 ? "active" : "") @(Model.CurrentStep > 2 ? "completed" : "")">
                    <div class="auth-step-circle">@(Model.CurrentStep > 2 ? "âœ“" : "2")</div>
                    <div class="auth-step-label">ID Verify</div>
                </div>
                <div class="auth-step-line @(Model.CurrentStep > 2 ? "completed" : "")"></div>
                <div class="auth-step @(Model.CurrentStep >= 3 ? "active" : "")">
                    <div class="auth-step-circle">3</div>
                    <div class="auth-step-label">Password</div>
                </div>
            </div>

            <!-- Header -->
            <div class="auth-header-minimal">
                <div class="auth-logo-minimal">
                    <i class="bi bi-shop"></i>
                </div>
                <h1>Register as Owner</h1>
                <p>Start renting out your bikes</p>
            </div>

            <!-- Alert Messages -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="auth-alert-minimal error">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <div class="alert-content">
                        <strong>Error</strong>
                        <p>@Model.ErrorMessage</p>
                    </div>
                </div>
            }

            @if (TempData.ContainsKey("OwnerSuccessMessage"))
            {
                <div class="auth-alert-minimal" style="background: #d1fae5; border: 1px solid #6ee7b7; color: #065f46;">
                    <i class="bi bi-check-circle-fill"></i>
                    <div class="alert-content">
                        <strong>Success</strong>
                        <p>@TempData["OwnerSuccessMessage"]</p>
                    </div>
                </div>
            }

            <form method="post" enctype="multipart/form-data" id="ownerRegistrationForm">
                <input type="hidden" name="step" value="@Model.CurrentStep" />

                <!-- Step 1: Store Information -->
                @if (Model.CurrentStep == 1)
                {
                    <div class="auth-form-group">
                        <label asp-for="Input.FullName" class="auth-form-label">
                            Full Name <span class="required">*</span>
                        </label>
                        <div class="auth-input-wrapper">
                            <input asp-for="Input.FullName" class="auth-input" 
                                   placeholder="Enter your full name" required autofocus />
                            <i class="bi bi-person auth-input-icon"></i>
                        </div>
                        <span asp-validation-for="Input.FullName" class="validation-message error"></span>
                    </div>

                    <div class="auth-form-group">
                        <label asp-for="Input.Email" class="auth-form-label">
                            Email Address <span class="required">*</span>
                        </label>
                        <div class="auth-input-wrapper" id="emailWrapper">
                            <input asp-for="Input.Email" type="email" class="auth-input" 
                                   placeholder="Enter your email" required autocomplete="email" />
                            <i class="bi bi-envelope auth-input-icon"></i>
                        </div>
                        <span asp-validation-for="Input.Email" class="validation-message error"></span>
                    </div>

                    <div class="auth-form-group">
                        <label asp-for="Input.StoreName" class="auth-form-label">
                            Store Name <span class="required">*</span>
                        </label>
                        <div class="auth-input-wrapper">
                            <input asp-for="Input.StoreName" class="auth-input" 
                                   placeholder="Enter your store/business name" required />
                            <i class="bi bi-shop auth-input-icon"></i>
                        </div>
                        <div class="helper-text">
                            <i class="bi bi-info-circle"></i>
                            <span>This will be displayed to renters</span>
                        </div>
                        <span asp-validation-for="Input.StoreName" class="validation-message error"></span>
                    </div>

                    <div class="auth-form-group" style="position: relative;">
                        <label asp-for="Input.StoreAddress" class="auth-form-label">
                            Store Address <span class="required">*</span>
                        </label>
                        <div style="position: relative;">
                            <div class="auth-input-wrapper">
                                <input asp-for="Input.StoreAddress" class="auth-input" 
                                       placeholder="Start typing your address..." required 
                                       id="storeAddressInput" autocomplete="off" 
                                       onkeydown="if(event.key === 'Enter') { event.preventDefault(); return false; }" />
                                <i class="bi bi-geo-alt auth-input-icon"></i>
                            </div>
                                    <div id="storeAddressSuggestions" class="address-suggestions"></div>
                        </div>
                        <div class="helper-text">
                            <i class="bi bi-info-circle"></i>
                            <span>Select from suggestions as you type</span>
                        </div>
                        <div id="storeAddressValidation" style="display: none; margin-top: 0.5rem;">
                            <div class="validation-message success" id="storeAddressValid">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Address verified</span>
                            </div>
                            <div class="validation-message error" id="storeAddressInvalid" style="display: none;">
                                <i class="bi bi-x-circle-fill"></i>
                                <span></span>
                            </div>
                        </div>
                        <span asp-validation-for="Input.StoreAddress" class="validation-message error"></span>
                    </div>

                    <div class="auth-step-buttons">
                        <a href="/Account/RegisterType" class="auth-btn-minimal auth-btn-outline">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                        <button type="submit" name="step" value="1" class="auth-btn-minimal auth-btn-primary">
                            Next: ID Verification <i class="bi bi-arrow-right"></i>
                        </button>
                    </div>
                        }

                <!-- Step 2: ID Verification -->
                @if (Model.CurrentStep == 2)
                {
                    <div class="auth-alert-minimal" style="background: #dbeafe; border: 1px solid #bfdbfe; color: #1e40af;">
                        <i class="bi bi-info-circle-fill"></i>
                        <div class="alert-content">
                            <strong>Why we need your ID:</strong>
                            <ul style="margin: 0.5rem 0 0 1.25rem; padding: 0; font-size: 0.875rem;">
                                <li>Verify your identity for security</li>
                                <li>Validate your business ownership</li>
                                <li>Ensure account authenticity</li>
                            </ul>
                        </div>
                    </div>

                    <div class="auth-form-group">
                        <label class="auth-form-label">
                            ID Front Photo <span class="required">*</span>
                        </label>
                        <div class="id-upload-container">
                            <input type="file" name="IdDocumentFront" id="IdDocumentFront" 
                                   accept="image/jpeg,image/jpg,image/png" capture="environment" required style="display: none;" />
                            <label for="IdDocumentFront" style="cursor: pointer;">
                                <div class="id-upload-icon">
                                    <i class="bi bi-camera-fill"></i>
                                </div>
                                <div class="id-upload-title">Take Photo of ID Front</div>
                                <div class="id-upload-subtitle">Images will be automatically compressed</div>
                            </label>
                            <div id="idFrontPreview" style="display: none; margin-top: 1rem; position: relative; border-radius: 0.75rem; overflow: hidden; border: 2px solid #87A96B;">
                                <img id="idFrontPreviewImg" src="" alt="ID Front Preview" style="width: 100%; max-height: 300px; object-fit: contain; background: #f5f5f5; display: block;" />
                                <button type="button" onclick="removeIdPhoto('front')" style="position: absolute; top: 0.5rem; right: 0.5rem; width: 36px; height: 36px; background: rgba(239, 68, 68, 0.9); color: white; border: none; border-radius: 50%; display: flex; align-items: center; justify-content: center; cursor: pointer; font-size: 1.25rem;">
                                    <i class="bi bi-x-circle-fill"></i>
                                </button>
                            </div>
                            <div id="idFrontError" class="validation-message error" style="display: none;"></div>
                        </div>
                    </div>

                    <div class="auth-form-group">
                        <label class="auth-form-label">
                            ID Back Photo <span class="required">*</span>
                        </label>
                        <div class="id-upload-container">
                            <input type="file" name="IdDocumentBack" id="IdDocumentBack" 
                                   accept="image/jpeg,image/jpg,image/png" capture="environment" required style="display: none;" />
                            <label for="IdDocumentBack" style="cursor: pointer;">
                                <div class="id-upload-icon">
                                    <i class="bi bi-camera-fill"></i>
                                </div>
                                <div class="id-upload-title">Take Photo of ID Back</div>
                                <div class="id-upload-subtitle">Images will be automatically compressed</div>
                            </label>
                            <div id="idBackPreview" style="display: none; margin-top: 1rem; position: relative; border-radius: 0.75rem; overflow: hidden; border: 2px solid #87A96B;">
                                <img id="idBackPreviewImg" src="" alt="ID Back Preview" style="width: 100%; max-height: 300px; object-fit: contain; background: #f5f5f5; display: block;" />
                                <button type="button" onclick="removeIdPhoto('back')" style="position: absolute; top: 0.5rem; right: 0.5rem; width: 36px; height: 36px; background: rgba(239, 68, 68, 0.9); color: white; border: none; border-radius: 50%; display: flex; align-items: center; justify-content: center; cursor: pointer; font-size: 1.25rem;">
                                    <i class="bi bi-x-circle-fill"></i>
                                </button>
                            </div>
                            <div id="idBackError" class="validation-message error" style="display: none;"></div>
                        </div>
                    </div>

                    <div class="auth-form-group">
                        <label for="BusinessLicense" class="auth-form-label">
                            Business License <span style="color: #6a6a6a; font-weight: 400;">(Optional)</span>
                        </label>
                        <div class="id-upload-container">
                            <input type="file" name="BusinessLicense" id="BusinessLicense" 
                                   accept="image/*" capture="environment" style="display: none;" />
                            <label for="BusinessLicense" style="cursor: pointer;">
                                <div class="id-upload-icon">
                                    <i class="bi bi-file-earmark-text"></i>
                                </div>
                                <div class="id-upload-title">Take Photo of Business License</div>
                                <div class="id-upload-subtitle">Optional - Tap to open camera</div>
                            </label>
                            <div id="businessLicensePreview" style="display: none; margin-top: 1rem; position: relative; border-radius: 0.75rem; overflow: hidden; border: 2px solid #87A96B;">
                                <img id="businessLicensePreviewImg" src="" alt="Business License Preview" style="width: 100%; max-height: 300px; object-fit: contain; background: #f5f5f5; display: block;" />
                                <button type="button" onclick="removeIdPhoto('license')" style="position: absolute; top: 0.5rem; right: 0.5rem; width: 36px; height: 36px; background: rgba(239, 68, 68, 0.9); color: white; border: none; border-radius: 50%; display: flex; align-items: center; justify-content: center; cursor: pointer; font-size: 1.25rem;">
                                    <i class="bi bi-x-circle-fill"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="auth-step-buttons">
                        <button type="submit" name="step" value="back" class="auth-btn-minimal auth-btn-outline" formnovalidate>
                            <i class="bi bi-arrow-left"></i> Back
                        </button>
                        <button type="submit" name="step" value="2" class="auth-btn-minimal auth-btn-primary">
                            Next: Account Setup <i class="bi bi-arrow-right"></i>
                        </button>
                    </div>
                }

                <!-- Step 3: Account Setup -->
                @if (Model.CurrentStep == 3)
                {
                    <div class="auth-form-group">
                        <label asp-for="Input.Password" class="auth-form-label">
                            Password <span class="required">*</span>
                        </label>
                        <div class="auth-input-wrapper" id="passwordWrapper">
                            <input asp-for="Input.Password" type="password" class="auth-input" 
                                   placeholder="Create a strong password" 
                                   required minlength="6" id="passwordInput" 
                                   autocomplete="new-password" />
                            <i class="bi bi-lock auth-input-icon"></i>
                            <button type="button" class="auth-password-toggle" id="togglePassword">
                                <i class="bi bi-eye" id="togglePasswordIcon"></i>
                            </button>
                        </div>
                        <!-- Password Strength Indicator -->
                        <div class="auth-password-strength" id="passwordStrength" style="display: none;">
                            <div class="auth-strength-bar">
                                <div class="auth-strength-fill" id="strengthFill"></div>
                            </div>
                            <div class="auth-strength-text" id="strengthText"></div>
                        </div>
                        <div class="helper-text">
                            <i class="bi bi-shield-check"></i>
                            <span>Password must be at least 6 characters</span>
                        </div>
                        <span asp-validation-for="Input.Password" class="validation-message error"></span>
                    </div>

                    <div class="auth-form-group">
                        <label asp-for="Input.ConfirmPassword" class="auth-form-label">
                            Confirm Password <span class="required">*</span>
                        </label>
                        <div class="auth-input-wrapper" id="confirmPasswordWrapper">
                            <input asp-for="Input.ConfirmPassword" type="password" class="auth-input" 
                                   placeholder="Re-enter your password" required 
                                   id="confirmPasswordInput" autocomplete="new-password" />
                            <i class="bi bi-lock auth-input-icon"></i>
                            <button type="button" class="auth-password-toggle" id="toggleConfirmPassword">
                                <i class="bi bi-eye" id="toggleConfirmPasswordIcon"></i>
                            </button>
                        </div>
                        <div class="validation-message error" id="confirmPasswordError" style="display: none;">
                            <i class="bi bi-exclamation-circle-fill"></i>
                            <span>Passwords do not match</span>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="validation-message error"></span>
                    </div>

                    <div class="auth-step-buttons">
                        <button type="submit" name="step" value="back" class="auth-btn-minimal auth-btn-outline" formnovalidate>
                            <i class="bi bi-arrow-left"></i> Back
                        </button>
                        <button type="submit" name="step" value="3" class="auth-btn-minimal auth-btn-primary">
                            <i class="bi bi-check-circle"></i> Complete Registration
                        </button>
                    </div>
                        }
            </form>

            <!-- Footer -->
            <div class="auth-footer-minimal">
                <p>Already have an account? <a href="/Account/Login" class="auth-link">Sign in</a></p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let storeAddressPlaceId = null;
        let storeSuggestionsTimeout;
        let storeSessionToken = null;

        function showStoreAddressError(message) {
            $('#storeAddressValidation').show();
            $('#storeAddressValid').hide();
            $('#storeAddressInvalid').show().find('span').text(message);
        }

        function showStoreAddressSuggestions(query) {
            if (query.length < 3) {
                $('#storeAddressSuggestions').hide();
                return;
            }

            console.log('ðŸ” Searching for store address via OpenStreetMap:', query);

            // Use server-side OpenStreetMap Nominatim API (no Google Maps!)
            const url = `/Api/PlacesAutocomplete?query=${encodeURIComponent(query)}${storeSessionToken ? '&sessionToken=' + storeSessionToken : ''}&_=${Date.now()}`;

            $.get(url)
                .done(function(data) {
                    console.log('ðŸ“ API Response:', data);

                    if (data.success && data.predictions && data.predictions.length > 0) {
                        const suggestionsHtml = data.predictions.slice(0, 5).map(function(prediction) {
                            return `
                                <div class="address-suggestion-item" data-place-id="${prediction.place_id}" data-address="${prediction.description}">
                                    <div class="address-suggestion-icon">
                                        <i class="bi bi-geo-alt-fill"></i>
                                    </div>
                                    <div class="address-suggestion-text">
                                        <strong>${prediction.main_text || prediction.description}</strong>
                                        ${prediction.secondary_text ? `<div style="font-size: 0.75rem; color: var(--neutral-500); margin-top: 0.125rem;">${prediction.secondary_text}</div>` : ''}
                                    </div>
                                </div>
                            `;
                        }).join('');

                        $('#storeAddressSuggestions').html(suggestionsHtml).show();
                        console.log('âœ… Showing', data.predictions.length, 'suggestions');
                    } else if (data.status === 'ZERO_RESULTS') {
                        $('#storeAddressSuggestions').html('<div class="address-suggestion-item" style="cursor: default; color: var(--neutral-500);">No addresses found</div>').show();
                        console.log('âš ï¸ No results found');
                    } else {
                        $('#storeAddressSuggestions').hide();
                        const errorMsg = data.error || 'Unable to search addresses. Please try again.';
                        console.error('âŒ Places API Error:', data.status, errorMsg);
                        showStoreAddressError(errorMsg);
                    }
                })
                .fail(function(xhr, status, error) {
                    console.error('âŒ Request failed:', error);
                    $('#storeAddressSuggestions').hide();
                    showStoreAddressError('Failed to fetch address suggestions. Please try again.');
                });
        }

        $(document).ready(function() {
            // Generate session token for this session
            storeSessionToken = 'session_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
            console.log('âœ… Using Places API REST endpoint (server-side)');

            // Store address input - show suggestions as user types (active search)
            $('#storeAddressInput').on('input', function() {
                const query = $(this).val().trim();
                
                clearTimeout(storeSuggestionsTimeout);
                
                if (query.length >= 3) {
                    // Wait 200ms after user stops typing before showing suggestions (faster response)
                    storeSuggestionsTimeout = setTimeout(function() {
                        showStoreAddressSuggestions(query);
                    }, 200);
                } else {
                    $('#storeAddressSuggestions').hide();
                }
            });

            // Show suggestions on focus if there's text
            $('#storeAddressInput').on('focus', function() {
                const query = $(this).val().trim();
                if (query.length >= 3) {
                    showStoreAddressSuggestions(query);
                }
            });

            // Handle suggestion click
            $(document).on('click', '.address-suggestion-item', function() {
                const address = $(this).data('address');
                const placeId = $(this).data('place-id');
                
                if (!placeId) return; // Don't process "No addresses found" message
                
                $('#storeAddressInput').val(address);
                storeAddressPlaceId = placeId;
                
                // Hide suggestions
                $('#storeAddressSuggestions').hide();
                
                // Show validation success
                $('#storeAddressValidation').show();
                $('#storeAddressValid').show();
                $('#storeAddressInvalid').hide();
                
                console.log('âœ… Store address selected:', address);
            });

            // Hide suggestions when clicking outside
            $(document).on('click', function(e) {
                if (!$(e.target).closest('#storeAddressInput, #storeAddressSuggestions').length) {
                    $('#storeAddressSuggestions').hide();
                }
            });

            // ID Front Photo Capture (no size limit - will be auto-compressed)
            $('#IdDocumentFront').change(function(e) {
                const file = e.target.files[0];
                if (file) {
                    // No size validation - images will be automatically compressed

                    // Validate file type
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    if (!allowedTypes.includes(file.type)) {
                        $('#idFrontError').text('ID front photo must be JPG or PNG image.').show();
                        $(this).val('');
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#idFrontPreviewImg').attr('src', e.target.result);
                        $('#idFrontPreview').show();
                        $('#IdDocumentFront').closest('.id-upload-container').find('label').hide();
                        $('#idFrontError').hide();
                    };
                    reader.onerror = function() {
                        $('#idFrontError').text('Error reading file. Please try again.').show();
                        $('#IdDocumentFront').val('');
                    };
                    reader.readAsDataURL(file);
                }
            });

            // ID Back Photo Capture (no size limit - will be auto-compressed)
            $('#IdDocumentBack').change(function(e) {
                const file = e.target.files[0];
                if (file) {
                    // No size validation - images will be automatically compressed

                    // Validate file type
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    if (!allowedTypes.includes(file.type)) {
                        $('#idBackError').text('ID back photo must be JPG or PNG image.').show();
                        $(this).val('');
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#idBackPreviewImg').attr('src', e.target.result);
                        $('#idBackPreview').show();
                        $('#IdDocumentBack').closest('.id-upload-container').find('label').hide();
                        $('#idBackError').hide();
                    };
                    reader.onerror = function() {
                        $('#idBackError').text('Error reading file. Please try again.').show();
                        $('#IdDocumentBack').val('');
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Form validation before submission (Step 2)
            $('#ownerRegistrationForm').on('submit', function(e) {
                const submitButton = $(document.activeElement);
                let stepValue = null;
                
                // Check if the clicked button has name="step"
                if (submitButton.is('button[type="submit"]') && submitButton.attr('name') === 'step') {
                    stepValue = submitButton.val();
                } else {
                    // Fallback to hidden input
                    stepValue = $('input[name="step"]').val();
                }
                
                // Allow back button to work without validation
                if (stepValue === 'back') {
                    // Remove the hidden step input so back button value is used
                    $('input[name="step"]').remove();
                    return true;
                }
                
                if (stepValue === '2') {
                    const frontFile = $('#IdDocumentFront')[0].files[0];
                    const backFile = $('#IdDocumentBack')[0].files[0];

                    if (!frontFile) {
                        e.preventDefault();
                        $('#idFrontError').text('Please take a photo of the front of your ID.').show();
                        $('#IdDocumentFront').focus();
                        return false;
                    }

                    if (!backFile) {
                        e.preventDefault();
                        $('#idBackError').text('Please take a photo of the back of your ID.').show();
                        $('#IdDocumentBack').focus();
                        return false;
                    }

                    // No size validation - images will be automatically compressed on server

                    // Validate file types
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    if (!allowedTypes.includes(frontFile.type)) {
                        e.preventDefault();
                        $('#idFrontError').text('ID front photo must be JPG or PNG image.').show();
                        return false;
                    }

                    if (!allowedTypes.includes(backFile.type)) {
                        e.preventDefault();
                        $('#idBackError').text('ID back photo must be JPG or PNG image.').show();
                        return false;
                    }
                }
            });

            // Business License Capture
            $('#BusinessLicense').change(function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#businessLicensePreviewImg').attr('src', e.target.result);
                        $('#businessLicensePreview').show();
                        $('#BusinessLicense').closest('.id-upload-container').find('label').hide();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Password Toggle
            $('#togglePassword').click(function(e) {
                e.preventDefault();
                const passwordInput = $('#passwordInput');
                const toggleIcon = $('#togglePasswordIcon');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    toggleIcon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    toggleIcon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });

            $('#toggleConfirmPassword').click(function(e) {
                e.preventDefault();
                const confirmInput = $('#confirmPasswordInput');
                const toggleIcon = $('#toggleConfirmPasswordIcon');
                
                if (confirmInput.attr('type') === 'password') {
                    confirmInput.attr('type', 'text');
                    toggleIcon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    confirmInput.attr('type', 'password');
                    toggleIcon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });

            // Password Strength Indicator
            function calculatePasswordStrength(password) {
                let strength = 0;
                let strengthText = '';
                let strengthClass = '';

                if (password.length === 0) {
                    $('#passwordStrength').hide();
                    return;
                }

                $('#passwordStrength').show();

                // Length check
                if (password.length >= 8) strength += 1;
                if (password.length >= 12) strength += 1;

                // Character variety checks
                if (/[a-z]/.test(password)) strength += 1;
                if (/[A-Z]/.test(password)) strength += 1;
                if (/[0-9]/.test(password)) strength += 1;
                if (/[^a-zA-Z0-9]/.test(password)) strength += 1;

                // Determine strength level
                if (strength <= 2) {
                    strengthText = 'Weak';
                    strengthClass = 'weak';
                } else if (strength <= 4) {
                    strengthText = 'Medium';
                    strengthClass = 'medium';
                } else {
                    strengthText = 'Strong';
                    strengthClass = 'strong';
                }

                // Update UI
                const percentage = (strength / 5) * 100;
                $('#strengthFill').css('width', percentage + '%').removeClass('weak medium strong').addClass(strengthClass);
                $('#strengthText').text(strengthText);
            }

            $('#passwordInput').on('input', function() {
                const password = $(this).val();
                calculatePasswordStrength(password);

                // Real-time validation
                const wrapper = $('#passwordWrapper');
                if (password.length === 0) {
                    wrapper.removeClass('has-error has-success');
                    $(this).removeClass('error success');
                } else if (password.length >= 6) {
                    wrapper.removeClass('has-error').addClass('has-success');
                    $(this).removeClass('error').addClass('success');
                } else {
                    wrapper.removeClass('has-success').addClass('has-error');
                    $(this).removeClass('success').addClass('error');
                }
            });

            // Password confirmation
            $('#confirmPasswordInput').on('input', function() {
                const password = $('#passwordInput').val();
                const confirm = $(this).val();
                const wrapper = $('#confirmPasswordWrapper');
                const errorMsg = $('#confirmPasswordError');

                if (confirm.length === 0) {
                    wrapper.removeClass('has-error has-success');
                    $(this).removeClass('error success');
                    errorMsg.hide();
                } else if (password === confirm) {
                    wrapper.removeClass('has-error').addClass('has-success');
                    $(this).removeClass('error').addClass('success');
                    errorMsg.hide();
                } else {
                    wrapper.removeClass('has-success').addClass('has-error');
                    $(this).removeClass('success').addClass('error');
                    errorMsg.show();
                }
            });
        });

        function removeIdPhoto(side) {
            if (side === 'front') {
                $('#IdDocumentFront').val('');
                $('#idFrontPreview').hide();
                $('#IdDocumentFront').closest('.id-upload-container').find('label').show();
            } else if (side === 'back') {
                $('#IdDocumentBack').val('');
                $('#idBackPreview').hide();
                $('#IdDocumentBack').closest('.id-upload-container').find('label').show();
            } else if (side === 'license') {
                $('#BusinessLicense').val('');
                $('#businessLicensePreview').hide();
                $('#BusinessLicense').closest('.id-upload-container').find('label').show();
            }
        }
    </script>
