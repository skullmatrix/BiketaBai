@page
@model ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="~/css/premium-minimal.css" asp-append-version="true" />

<style>
    /* Premium Minimalist Profile Design */
    :root {
        --sage-primary: #87A96B;
        --sage-dark: #6B8E5F;
        --sage-light: #A8C69F;
        --sage-bg: #E8F0E3;
        --text-primary: #1a1a1a;
        --text-secondary: #6a6a6a;
        --border-color: #e5e7eb;
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.06);
        --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
        --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
    }

    .profile-wrapper {
        min-height: 100vh;
        background: linear-gradient(135deg, #f8faf7 0%, #ffffff 100%);
        padding: 2rem 1rem;
    }

    .profile-content {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Hero Section - Profile Card */
    .profile-hero {
        background: white;
        border-radius: 1.5rem;
        padding: 2.5rem;
        box-shadow: var(--shadow-md);
        margin-bottom: 1.5rem;
        border: 1px solid var(--border-color);
    }

    .profile-hero-content {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    /* Avatar */
    .profile-avatar-wrapper {
        position: relative;
        flex-shrink: 0;
    }

    .profile-avatar-large {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: white;
        border: 5px solid white;
        box-shadow: var(--shadow-lg);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: var(--sage-primary);
        overflow: hidden;
        position: relative;
    }

    .profile-avatar-large img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .avatar-change-overlay {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 40px;
        height: 40px;
        background: var(--sage-primary);
        border-radius: 50%;
        border: 3px solid white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s;
        color: white;
    }

    .avatar-change-overlay:hover {
        background: var(--sage-dark);
        transform: scale(1.1);
    }

    /* Profile Info */
    .profile-info-header {
        flex: 1;
    }

    .profile-info-header h1 {
        margin: 0 0 0.5rem 0;
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    .profile-info-header .email {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1rem;
        color: var(--text-secondary);
        margin-bottom: 1rem;
    }

    /* Badge Pills */
    .badge-pills {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .badge-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.375rem 0.875rem;
        border-radius: 2rem;
        font-size: 0.8125rem;
        font-weight: 500;
    }

    .badge-pill.admin {
        background: #e3f2fd;
        color: #1976d2;
    }

    .badge-pill.owner {
        background: var(--sage-bg);
        color: var(--sage-dark);
    }

    .badge-pill.renter {
        background: #fff3e0;
        color: #f57c00;
    }

    .badge-pill.verified {
        background: #e8f5e9;
        color: #388e3c;
    }

    /* Stats Grid - Premium Cards */
    .stats-premium-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .stat-premium-card {
        background: white;
        border-radius: 1.25rem;
        padding: 1.5rem;
        box-shadow: var(--shadow-sm);
        transition: all 0.3s;
        border: 1px solid var(--border-color);
        position: relative;
        overflow: hidden;
    }

    .stat-premium-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: linear-gradient(180deg, var(--sage-primary) 0%, var(--sage-light) 100%);
    }

    .stat-premium-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-md);
        border-color: var(--sage-light);
    }

    .stat-premium-card.highlight {
        background: linear-gradient(135deg, var(--sage-primary) 0%, var(--sage-dark) 100%);
        color: white;
    }

    .stat-premium-card.highlight::before {
        display: none;
    }

    .stat-card-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
    }

    .stat-icon-premium {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: var(--sage-bg);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--sage-primary);
        font-size: 1.5rem;
    }

    .stat-premium-card.highlight .stat-icon-premium {
        background: rgba(255,255,255,0.2);
        color: white;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
        line-height: 1;
    }

    .stat-label {
        font-size: 0.875rem;
        opacity: 0.7;
        margin: 0.25rem 0 0 0;
    }

    /* Edit Section - Clean Form */
    .edit-section-premium {
        background: white;
        border-radius: 1.5rem;
        padding: 2rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    .section-header-premium {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.75rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid var(--sage-bg);
    }

    .section-header-premium i {
        font-size: 1.5rem;
        color: var(--sage-primary);
    }

    .section-header-premium h2 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    /* Premium Form Fields */
    .form-grid-premium {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.25rem;
        margin-bottom: 1.75rem;
    }

    .form-grid-premium .full-width {
        grid-column: 1 / -1;
    }

    .form-field-premium {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-label-premium {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .form-label-premium .required {
        color: var(--sage-primary);
    }

    /* Input wrapper with icon - EXACT MATCH from register page */
    .auth-input-wrapper {
        position: relative;
        display: block;
        width: 100%;
    }

    .auth-input {
        width: 100%;
        padding: 0.875rem 1rem 0.875rem 3.5rem !important;
        border: 1.5px solid #e8e8e8;
        border-radius: 0.75rem;
        font-size: 0.9375rem;
        font-weight: 500;
        color: #1a1a1a;
        background: #ffffff;
        transition: all 0.3s ease;
        outline: none;
        line-height: 1.5;
        box-sizing: border-box;
    }

    .auth-input:focus {
        border-color: #87A96B;
        box-shadow: 0 0 0 4px rgba(135, 169, 107, 0.1);
    }

    .auth-input:disabled {
        background: #f9fafb;
        color: var(--text-secondary);
        cursor: not-allowed;
    }

    .auth-input-icon {
        position: absolute;
        left: 1.25rem !important;
        top: 50%;
        transform: translateY(-50%) !important;
        font-size: 1rem !important;
        color: #6a6a6a;
        transition: color 0.3s ease;
        pointer-events: none;
        z-index: 1;
        width: 1rem !important;
        height: 1rem !important;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .auth-input-wrapper:focus-within .auth-input-icon {
        color: #87A96B;
    }

    .input-helper {
        font-size: 0.8125rem;
        color: var(--text-secondary);
        margin-top: 0.25rem;
    }

    /* Premium Buttons */
    .btn-premium {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem 1.75rem;
        border-radius: 0.75rem;
        font-size: 0.9375rem;
        font-weight: 600;
        transition: all 0.3s;
        cursor: pointer;
        border: none;
        text-decoration: none;
    }

    .btn-premium-primary {
        background: linear-gradient(135deg, var(--sage-primary) 0%, var(--sage-dark) 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(135, 169, 107, 0.3);
    }

    .btn-premium-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(135, 169, 107, 0.4);
    }

    .btn-premium-primary:active {
        transform: translateY(0);
    }

    .btn-premium-outline {
        background: white;
        color: var(--sage-primary);
        border: 2px solid var(--sage-primary);
    }

    .btn-premium-outline:hover {
        background: var(--sage-bg);
        transform: translateY(-2px);
    }

    .btn-premium-ghost {
        background: transparent;
        color: var(--text-secondary);
        border: 2px solid var(--border-color);
    }

    .btn-premium-ghost:hover {
        border-color: var(--sage-primary);
        color: var(--sage-primary);
    }

    .btn-group-premium {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    /* Quick Actions Grid */
    .quick-actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 1rem;
    }

    .quick-action-card {
        background: white;
        border: 2px solid var(--border-color);
        border-radius: 1rem;
        padding: 1.25rem;
        text-align: center;
        text-decoration: none;
        transition: all 0.3s;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .quick-action-card i {
        font-size: 2rem;
        color: var(--sage-primary);
        transition: all 0.3s;
    }

    .quick-action-card span {
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--text-primary);
    }

    .quick-action-card:hover {
        border-color: var(--sage-primary);
        transform: translateY(-4px);
        box-shadow: var(--shadow-md);
    }

    .quick-action-card:hover i {
        transform: scale(1.1);
    }

    /* Alert Premium */
    .alert-premium {
        padding: 1rem 1.25rem;
        border-radius: 1rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        border-left: 4px solid;
        animation: slideDown 0.4s ease;
    }

    .alert-premium.success {
        background: #e8f5e9;
        color: #2e7d32;
        border-color: #4caf50;
    }

    .alert-premium.error {
        background: #ffebee;
        color: #c62828;
        border-color: #ef5350;
    }

    .alert-premium i {
        font-size: 1.25rem;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .profile-wrapper {
            padding: 1rem 0.75rem;
        }

        .profile-hero {
            padding: 1.5rem;
        }

        .profile-hero-content {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .profile-info-header h1 {
            font-size: 1.5rem;
        }

        .profile-info-header .email {
            justify-content: center;
        }

        .badge-pills {
            justify-content: center;
        }

        .stats-premium-grid {
            grid-template-columns: 1fr;
        }

        .form-grid-premium {
            grid-template-columns: 1fr;
        }

        .edit-section-premium {
            padding: 1.5rem;
        }

        .btn-group-premium {
            flex-direction: column;
        }

        .btn-premium {
            width: 100%;
        }

        .quick-actions-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 480px) {
        .profile-avatar-large {
            width: 100px;
            height: 100px;
            font-size: 2.5rem;
        }

        .avatar-change-overlay {
            width: 36px;
            height: 36px;
        }
    }
</style>

<div class="profile-wrapper">
    <div class="profile-content">
        <!-- Alert Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
            <div class="alert-premium success">
                <i class="bi bi-check-circle-fill"></i>
                <span>@Model.SuccessMessage</span>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
            <div class="alert-premium error">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <span>@Model.ErrorMessage</span>
        </div>
    }

        <!-- Profile Hero Section -->
        <div class="profile-hero">
            <div class="profile-hero-content">
                <div class="profile-avatar-wrapper">
                    <div class="profile-avatar-large">
                        @if (!string.IsNullOrEmpty(Model.CurrentUser.ProfilePhotoUrl))
                        {
                            <img src="@Model.CurrentUser.ProfilePhotoUrl" alt="Profile" />
                        }
                        else
                        {
                                <i class="bi bi-person-fill"></i>
                        }
                    </div>
                    
                    <form method="post" enctype="multipart/form-data" asp-page-handler="UploadPhoto" style="margin: 0;">
                        <label for="photoUpload" class="avatar-change-overlay" title="Change photo">
                            <i class="bi bi-camera-fill"></i>
                            </label>
                            <input type="file" id="photoUpload" name="profilePhoto" accept="image/*" style="display:none;" 
                                   onchange="this.form.submit()" />
                        </form>
                    </div>

                <div class="profile-info-header">
                    <h1>@Model.CurrentUser.FullName</h1>
                    <p class="email">
                        <i class="bi bi-envelope-fill"></i>
                        @Model.CurrentUser.Email
                    </p>
                    
                    <div class="badge-pills">
                        @if (Model.CurrentUser.IsAdmin)
                        {
                            <span class="badge-pill admin">
                                <i class="bi bi-shield-fill"></i> Admin
                            </span>
                        }
                        @if (Model.CurrentUser.IsOwner)
                        {
                            <span class="badge-pill owner">
                                <i class="bi bi-shop"></i> Owner
                            </span>
                        }
                        @if (Model.CurrentUser.IsRenter)
                        {
                            <span class="badge-pill renter">
                                <i class="bi bi-bicycle"></i> Renter
                            </span>
                        }
                        @if (Model.CurrentUser.IsEmailVerified)
                        {
                            <span class="badge-pill verified">
                                <i class="bi bi-patch-check-fill"></i> Verified
                            </span>
                        }
                    </div>
                    
                    <!-- Owner Verification Status -->
                    @if (Model.CurrentUser.IsOwner)
                    {
                        <div style="margin-top: 1rem;">
                            @if (Model.CurrentUser.VerificationStatus == "Approved" && Model.CurrentUser.IsVerifiedOwner)
                            {
                                <div style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; background: #E8F0E3; border: 1px solid #87A96B; border-radius: 0.5rem; color: #6B8E5F; font-size: 0.875rem; font-weight: 500;">
                                    <i class="bi bi-check-circle-fill" style="color: #87A96B;"></i>
                                    <span>Owner Verified</span>
                                    @if (Model.CurrentUser.VerificationDate.HasValue)
                                    {
                                        <span style="color: #999; margin-left: 0.25rem;">(@Model.CurrentUser.VerificationDate.Value.ToString("MMM dd, yyyy"))</span>
                                    }
                                </div>
                            }
                            else if (Model.CurrentUser.VerificationStatus == "Rejected")
                            {
                                <div style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; background: #fee; border: 1px solid #ef4444; border-radius: 0.5rem; color: #dc2626; font-size: 0.875rem; font-weight: 500;">
                                    <i class="bi bi-x-circle-fill" style="color: #ef4444;"></i>
                                    <span>Verification Rejected - Please contact support</span>
                                </div>
                            }
                            else
                            {
                                <div style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; background: #fff7ed; border: 1px solid #fb923c; border-radius: 0.5rem; color: #ea580c; font-size: 0.875rem; font-weight: 500;">
                                    <i class="bi bi-clock-fill" style="color: #fb923c;"></i>
                                    <span>Owner Verification Pending - Admin approval required</span>
                                </div>
                            }
                        </div>
                    }
                                    </div>
                                </div>
                            </div>
                            
        <!-- Statistics Grid -->
        <div class="stats-premium-grid">
            @if (Model.CurrentUser.IsRenter)
            {
                <div class="stat-premium-card">
                    <div class="stat-card-header">
                        <div class="stat-icon-premium">
                            <i class="bi bi-bicycle"></i>
                                    </div>
                        <div>
                            <h3 class="stat-value">@Model.Statistics.TotalRentals</h3>
                            <p class="stat-label">Total Rentals</p>
                                    </div>
                                </div>
                            </div>

                <div class="stat-premium-card">
                    <div class="stat-card-header">
                        <div class="stat-icon-premium">
                            <i class="bi bi-wallet2"></i>
                                    </div>
                        <div>
                            <h3 class="stat-value">₱@Model.Statistics.TotalSpent.ToString("N0")</h3>
                            <p class="stat-label">Total Spent</p>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.CurrentUser.IsOwner)
                        {
                <div class="stat-premium-card">
                    <div class="stat-card-header">
                        <div class="stat-icon-premium">
                            <i class="bi bi-bicycle"></i>
                                    </div>
                        <div>
                            <h3 class="stat-value">@Model.Statistics.TotalBikes</h3>
                            <p class="stat-label">Bikes Listed</p>
                                    </div>
                                </div>
                            </div>
                            
                <div class="stat-premium-card">
                    <div class="stat-card-header">
                        <div class="stat-icon-premium">
                            <i class="bi bi-calendar-check"></i>
                                    </div>
                        <div>
                            <h3 class="stat-value">@Model.Statistics.TotalBookings</h3>
                            <p class="stat-label">Total Bookings</p>
                                    </div>
                                </div>
                            </div>
                            
                <div class="stat-premium-card highlight">
                    <div class="stat-card-header">
                        <div class="stat-icon-premium">
                            <i class="bi bi-wallet2"></i>
                                    </div>
                        <div>
                            <h3 class="stat-value">₱@Model.Statistics.TotalEarnings.ToString("N0")</h3>
                            <p class="stat-label">Total Earnings</p>
                                    </div>
                                </div>
                            </div>
                        }

            <div class="stat-premium-card">
                <div class="stat-card-header">
                    <div class="stat-icon-premium">
                        <i class="bi bi-star-fill"></i>
                    </div>
                                <div>
                        <h3 class="stat-value">@Model.Statistics.AverageRating.ToString("F1")</h3>
                        <p class="stat-label">Rating (@Model.Statistics.TotalReviews)</p>
                                </div>
                            </div>
                        </div>

            <div class="stat-premium-card">
                <div class="stat-card-header">
                    <div class="stat-icon-premium">
                        <i class="bi bi-wallet-fill"></i>
                    </div>
                                <div>
                        <h3 class="stat-value">₱@Model.Statistics.WalletBalance.ToString("N0")</h3>
                        <p class="stat-label">Wallet Balance</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Profile Section -->
        <div class="edit-section-premium">
            <div class="section-header-premium">
                <i class="bi bi-pencil-square"></i>
                <h2>Edit Profile</h2>
    </div>

                    <form method="post">
                <div class="form-grid-premium">
                    <div class="form-field-premium">
                        <label class="form-label-premium">
                            Full Name <span class="required">*</span>
                            </label>
                        <div class="auth-input-wrapper">
                            <input asp-for="Input.FullName" class="auth-input" placeholder="Enter your full name" required />
                            <i class="bi bi-person auth-input-icon"></i>
                        </div>
                        </div>
                        
                    <div class="form-field-premium">
                        <label class="form-label-premium">
                            Phone Number <span class="required">*</span>
                            </label>
                        <div class="auth-input-wrapper">
                            <input asp-for="Input.Phone" class="auth-input" placeholder="+63 XXX XXX XXXX" required />
                            <i class="bi bi-telephone auth-input-icon"></i>
                        </div>
                        </div>
                        
                    <div class="form-field-premium full-width">
                        <label class="form-label-premium">Address</label>
                        <div class="auth-input-wrapper">
                            <input asp-for="Input.Address" class="auth-input" placeholder="Street, City, Province" />
                            <i class="bi bi-geo-alt auth-input-icon"></i>
                </div>
            </div>
        </div>

                <div class="btn-group-premium">
                    <button type="submit" class="btn-premium btn-premium-primary">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                    <a href="/Account/ChangePassword" class="btn-premium btn-premium-outline">
                        <i class="bi bi-key"></i> Change Password
                    </a>
                </div>
            </form>
                </div>

        <!-- Quick Actions Section -->
        <div class="edit-section-premium">
            <div class="section-header-premium">
                <i class="bi bi-lightning-fill"></i>
                <h2>Quick Actions</h2>
            </div>

            <div class="quick-actions-grid">
                <a href="/Wallet/Index" class="quick-action-card">
                    <i class="bi bi-wallet2"></i>
                    <span>Wallet</span>
                </a>
                
                <a href="/Points/Index" class="quick-action-card">
                    <i class="bi bi-star-fill"></i>
                    <span>Points</span>
                </a>
                
                @if (Model.CurrentUser.IsOwner)
                {
                    <a href="/Owner/MyBikes" class="quick-action-card">
                        <i class="bi bi-bicycle"></i>
                        <span>My Bikes</span>
                    </a>
                    
                    <a href="/Owner/AddBike" class="quick-action-card">
                        <i class="bi bi-plus-circle"></i>
                        <span>Add Bike</span>
                    </a>
                }
                
                @if (Model.CurrentUser.IsRenter)
                {
                    <a href="/Bikes/Browse" class="quick-action-card">
                        <i class="bi bi-search"></i>
                        <span>Browse</span>
                    </a>
                }
                
                @if (Model.CurrentUser.IsOwner || Model.CurrentUser.IsRenter)
                {
                    <a href="/Dashboard/@(Model.CurrentUser.IsOwner ? "Owner" : "Renter")" class="quick-action-card">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                            }
                        </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-dismiss alerts
        setTimeout(() => {
            document.querySelectorAll('.alert-premium').forEach(alert => {
                alert.style.animation = 'slideUp 0.4s ease';
                setTimeout(() => alert.remove(), 400);
            });
        }, 5000);
        
        // Add slide up animation
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes slideUp {
                to {
                    opacity: 0;
                    transform: translateY(-10px);
                }
            }
        `;
        document.head.appendChild(style);
    </script>
}
