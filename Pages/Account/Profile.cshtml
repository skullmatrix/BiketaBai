@page
@model ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container my-5">
    <!-- Header -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="text-eco-green mb-2">
                    <i class="bi bi-person-circle"></i> My Profile
                </h2>
                <p class="text-muted mb-0">Manage your account information and view your statistics</p>
            </div>
            <div class="col-md-4 text-md-end">
                @if (Model.CurrentUser.IsOwner)
                {
                    <a href="/Dashboard/Owner" class="btn btn-outline-success">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                }
                else if (Model.CurrentUser.IsRenter)
                {
                    <a href="/Dashboard/Renter" class="btn btn-outline-success">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                }
                else if (Model.CurrentUser.IsAdmin)
                {
                    <a href="/Dashboard/Admin" class="btn btn-outline-success">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Profile Overview Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <!-- Profile Photo -->
                    <div class="profile-photo-container mb-3">
                        @if (!string.IsNullOrEmpty(Model.CurrentUser.ProfilePhotoUrl))
                        {
                            <img src="@Model.CurrentUser.ProfilePhotoUrl" alt="Profile Photo" class="profile-avatar-large-img" />
                        }
                        else
                        {
                            <div class="profile-avatar-large">
                                <i class="bi bi-person-fill"></i>
                            </div>
                        }
                        
                        <!-- Upload Photo Button -->
                        <form method="post" enctype="multipart/form-data" asp-page-handler="UploadPhoto" class="mt-2">
                            <label for="photoUpload" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-camera"></i> Change Photo
                            </label>
                            <input type="file" id="photoUpload" name="profilePhoto" accept="image/*" style="display:none;" 
                                   onchange="this.form.submit()" />
                        </form>
                    </div>

                    <h4 class="mt-3 mb-1">@Model.CurrentUser.FullName</h4>
                    <p class="text-muted mb-2">@Model.CurrentUser.Email</p>
                    
                    <!-- Roles Badges -->
                    <div class="mb-3">
                        @if (Model.CurrentUser.IsAdmin)
                        {
                            <span class="badge bg-danger me-1">
                                <i class="bi bi-shield-fill"></i> Admin
                            </span>
                        }
                        @if (Model.CurrentUser.IsOwner)
                        {
                            <span class="badge bg-success me-1">
                                <i class="bi bi-shop"></i> Owner
                            </span>
                        }
                        @if (Model.CurrentUser.IsRenter)
                        {
                            <span class="badge bg-primary me-1">
                                <i class="bi bi-bicycle"></i> Renter
                            </span>
                        }
                    </div>

                    <!-- Verification Status -->
                    <div class="mb-3">
                        @if (Model.CurrentUser.IsEmailVerified)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-patch-check-fill"></i> Email Verified
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning">
                                <i class="bi bi-exclamation-circle"></i> Email Not Verified
                            </span>
                        }
                    </div>

                    @if (Model.CurrentUser.IsOwner)
                    {
                        <div class="mb-3">
                            @Html.Raw(Model.GetVerificationStatusBadge())
                        </div>
                    }
                    
                    <!-- Member Since -->
                    <small class="text-muted">
                        <i class="bi bi-calendar"></i> Member since @Model.CurrentUser.CreatedAt.ToString("MMM yyyy")
                    </small>
                </div>
                
                <div class="col-md-9">
                    <!-- User Statistics -->
                    <div class="row mb-4">
                        @if (Model.CurrentUser.IsRenter)
                        {
                            <!-- Renter Statistics -->
                            <div class="col-md-4 mb-3">
                                <div class="profile-stat-box">
                                    <div class="stat-icon-circle bg-primary-light">
                                        <i class="bi bi-bicycle text-primary"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h3 class="mb-0">@Model.Statistics.TotalRentals</h3>
                                        <p class="text-muted mb-0">Total Rentals</p>
                                        <small class="text-muted">@Model.Statistics.CompletedRentals completed</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <div class="profile-stat-box">
                                    <div class="stat-icon-circle bg-success-light">
                                        <i class="bi bi-wallet2 text-success"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h3 class="mb-0">₱@Model.Statistics.TotalSpent.ToString("N0")</h3>
                                        <p class="text-muted mb-0">Total Spent</p>
                                        <small class="text-muted">@Model.Statistics.ActiveRentals active now</small>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <div class="profile-stat-box">
                                    <div class="stat-icon-circle bg-warning-light">
                                        <i class="bi bi-star-fill text-warning"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h3 class="mb-0">@Model.Statistics.AverageRating.ToString("F1")</h3>
                                        <p class="text-muted mb-0">User Rating</p>
                                        <small class="text-muted">@Model.Statistics.TotalReviews review(s)</small>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.CurrentUser.IsOwner)
                        {
                            <!-- Owner Statistics -->
                            <div class="col-md-3 mb-3">
                                <div class="profile-stat-box">
                                    <div class="stat-icon-circle bg-success-light">
                                        <i class="bi bi-bicycle text-success"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h3 class="mb-0">@Model.Statistics.TotalBikes</h3>
                                        <p class="text-muted mb-0">Total Bikes</p>
                                        <small class="text-muted">Listed</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <div class="profile-stat-box">
                                    <div class="stat-icon-circle bg-primary-light">
                                        <i class="bi bi-calendar-check text-primary"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h3 class="mb-0">@Model.Statistics.TotalBookings</h3>
                                        <p class="text-muted mb-0">Total Bookings</p>
                                        <small class="text-muted">@Model.Statistics.CompletedBookings completed</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <div class="profile-stat-box">
                                    <div class="stat-icon-circle bg-warning-light">
                                        <i class="bi bi-star-fill text-warning"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h3 class="mb-0">@Model.Statistics.AverageRating.ToString("F1")</h3>
                                        <p class="text-muted mb-0">Average Rating</p>
                                        <small class="text-muted">@Model.Statistics.TotalReviews review(s)</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <div class="profile-stat-box">
                                    <div class="stat-icon-circle bg-info-light">
                                        <i class="bi bi-wallet2 text-info"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h3 class="mb-0">₱@Model.Statistics.TotalEarnings.ToString("N0")</h3>
                                        <p class="text-muted mb-0">Total Earnings</p>
                                        <small class="text-muted">90% share</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <!-- Wallet & Points -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="wallet-display-card">
                                <i class="bi bi-wallet2"></i>
                                <div>
                                    <small class="text-muted">Wallet Balance</small>
                                    <h5 class="mb-0 text-success">₱@Model.Statistics.WalletBalance.ToString("N2")</h5>
                                </div>
                                <a href="/Wallet/Index" class="btn btn-sm btn-outline-success">Manage</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="wallet-display-card">
                                <i class="bi bi-star-fill text-warning"></i>
                                <div>
                                    <small class="text-muted">Loyalty Points</small>
                                    <h5 class="mb-0 text-warning">@Model.Statistics.LoyaltyPoints pts</h5>
                                </div>
                                <a href="/Points/Index" class="btn btn-sm btn-outline-warning">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Two Column Layout -->
    <div class="row">
        <!-- Edit Profile Form -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-pencil-square text-success"></i> Edit Profile</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label">
                                <i class="bi bi-person"></i> Full Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.FullName" class="form-control" required />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-envelope"></i> Email Address
                            </label>
                            <input type="email" class="form-control" value="@Model.CurrentUser.Email" disabled />
                            <small class="text-muted">Email cannot be changed</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Phone" class="form-label">
                                <i class="bi bi-telephone"></i> Phone Number <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.Phone" class="form-control" placeholder="+63 XXX XXX XXXX" required />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Address" class="form-label">
                                <i class="bi bi-geo-alt"></i> Address <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Input.Address" class="form-control" rows="3" placeholder="Street, City, Province" required></textarea>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Update Profile
                        </button>
                    </form>
                    
                    <hr class="my-4" />
                    
                    <!-- Additional Actions -->
                    <div class="d-grid gap-2">
                        <a href="/Account/ChangePassword" class="btn btn-outline-secondary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                        
                        @if (Model.CurrentUser.IsOwner && string.IsNullOrEmpty(Model.CurrentUser.IdDocumentUrl))
                        {
                            <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#uploadIdModal">
                                <i class="bi bi-file-earmark-text"></i> Upload ID Document
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Information & Recent Activity -->
        <div class="col-lg-6 mb-4">
            <!-- Account Information -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-info-circle text-info"></i> Account Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="text-muted"><i class="bi bi-shield-check"></i> Account Status</td>
                            <td class="text-end">
                                @if (Model.CurrentUser.IsSuspended)
                                {
                                    <span class="badge bg-danger">Suspended</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="text-muted"><i class="bi bi-envelope-check"></i> Email Verification</td>
                            <td class="text-end">
                                @if (Model.CurrentUser.IsEmailVerified)
                                {
                                    <span class="badge bg-success">Verified</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Not Verified</span>
                                }
                            </td>
                        </tr>
                        @if (Model.CurrentUser.IsOwner)
                        {
                            <tr>
                                <td class="text-muted"><i class="bi bi-patch-check"></i> Owner Verification</td>
                                <td class="text-end">
                                    @Html.Raw(Model.GetVerificationStatusBadge())
                                </td>
                            </tr>
                        }
                        <tr>
                            <td class="text-muted"><i class="bi bi-calendar-plus"></i> Account Created</td>
                            <td class="text-end">@Model.CurrentUser.CreatedAt.ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <td class="text-muted"><i class="bi bi-clock"></i> Last Updated</td>
                            <td class="text-end">@Model.CurrentUser.UpdatedAt.ToString("MMM dd, yyyy")</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.CurrentUser.IdDocumentUrl))
                        {
                            <tr>
                                <td class="text-muted"><i class="bi bi-file-earmark-text"></i> ID Document</td>
                                <td class="text-end">
                                    <a href="@Model.CurrentUser.IdDocumentUrl" target="_blank" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <!-- Recent Activity -->
            @if (Model.RecentBookings.Any())
            {
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-clock-history text-primary"></i> 
                            Recent @(Model.CurrentUser.IsOwner ? "Bookings" : "Rentals")
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var booking in Model.RecentBookings.Take(3))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex align-items-start">
                                        @if (booking.Bike.BikeImages.Any())
                                        {
                                            <img src="@booking.Bike.BikeImages.First().ImageUrl" 
                                                 class="recent-booking-thumb" 
                                                 alt="@booking.Bike.Brand" />
                                        }
                                        else
                                        {
                                            <div class="recent-booking-thumb-placeholder">
                                                <i class="bi bi-bicycle"></i>
                                            </div>
                                        }
                                        
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">@booking.Bike.Brand @booking.Bike.Model</h6>
                                            @if (Model.CurrentUser.IsOwner)
                                            {
                                                <p class="mb-1 small text-muted">
                                                    <i class="bi bi-person"></i> @booking.Renter.FullName
                                                </p>
                                            }
                                            <p class="mb-1 small text-muted">
                                                <i class="bi bi-calendar"></i> @booking.StartDate.ToString("MMM dd, yyyy")
                                            </p>
                                            <span class="badge bg-@(booking.BookingStatus.StatusName == "Completed" ? "success" : booking.BookingStatus.StatusName == "Active" ? "primary" : "warning")">
                                                @booking.BookingStatus.StatusName
                                            </span>
                                        </div>
                                        <div class="text-end">
                                            <strong class="text-success">
                                                ₱@((Model.CurrentUser.IsOwner ? booking.TotalAmount * 0.90m : booking.TotalAmount).ToString("N2"))
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Upload ID Document Modal -->
@if (Model.CurrentUser.IsOwner)
{
    <div class="modal fade" id="uploadIdModal" tabindex="-1" aria-labelledby="uploadIdModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadIdModalLabel">
                        <i class="bi bi-file-earmark-text"></i> Upload ID Document
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" enctype="multipart/form-data" asp-page-handler="UploadIdDocument">
                    <div class="modal-body">
                        <p class="text-muted mb-3">
                            Upload a valid government-issued ID for owner verification. Accepted formats: JPG, PNG, PDF (Max 5MB)
                        </p>
                        <div class="mb-3">
                            <label for="idDocument" class="form-label">Select Document</label>
                            <input type="file" class="form-control" id="idDocument" name="idDocument" 
                                   accept=".jpg,.jpeg,.png,.pdf" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-upload"></i> Upload
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-dismiss alerts
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function(){
                $(this).remove(); 
            });
        }, 5000);
    </script>
}

