@page
@model BrowseModel
@{
    ViewData["Title"] = "Browse Bikes";
}

<div class="container my-5">
    <h2 class="text-eco-green mb-4"><i class="bi bi-bicycle"></i> Browse Available Bikes</h2>
    
    <!-- Search and Filter Form -->
    <div class="card shadow-eco mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Location</label>
                        <input type="text" name="location" class="form-control" value="@Model.FilterLocation" placeholder="Enter location" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Bike Type</label>
                        <select name="bikeTypeId" class="form-select">
                            <option value="">All Types</option>
                            @foreach (var type in Model.BikeTypes)
                            {
                                <option value="@type.BikeTypeId" selected="@(type.BikeTypeId == Model.FilterBikeTypeId)">@type.TypeName</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Min Price</label>
                        <input type="number" name="minPrice" class="form-control" value="@Model.FilterMinPrice" placeholder="₱" step="0.01" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Max Price</label>
                        <input type="number" name="maxPrice" class="form-control" value="@Model.FilterMaxPrice" placeholder="₱" step="0.01" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Sort By</label>
                        <select name="sortBy" class="form-select">
                            <option value="newest" selected="@(Model.SortBy == "newest")">Newest</option>
                            <option value="price-low" selected="@(Model.SortBy == "price-low")">Price: Low to High</option>
                            <option value="price-high" selected="@(Model.SortBy == "price-high")">Price: High to Low</option>
                            <option value="rating" selected="@(Model.SortBy == "rating")">Highest Rated</option>
                        </select>
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-eco-primary w-100"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Count -->
    <p class="text-muted">Found @Model.Bikes.Count bike(s)</p>

    <!-- Bikes Grid -->
    <div class="row">
        @foreach (var bike in Model.Bikes)
        {
            <div class="col-md-4 mb-4">
                <div class="card bike-card h-100">
                    @if (bike.BikeImages.Any())
                    {
                        <img src="@bike.BikeImages.First(img => img.IsPrimary || bike.BikeImages.First() == img).ImageUrl" 
                             class="card-img-top" alt="@bike.Brand @bike.Model" />
                    }
                    else
                    {
                        <img src="/images/placeholder-bike.jpg" class="card-img-top" alt="Bike" />
                    }
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@bike.Brand @bike.Model</h5>
                            <span class="badge badge-bike-type">@bike.BikeType.TypeName</span>
                        </div>
                        <p class="text-muted mb-2">
                            <i class="bi bi-geo-alt"></i> @bike.Location
                        </p>
                        <p class="text-muted mb-2">
                            <i class="bi bi-speedometer"></i> @bike.Mileage km
                        </p>
                        <div class="rating-stars mb-2">
                            @{
                                var avgRating = Model.BikeRatings.ContainsKey(bike.BikeId) ? Model.BikeRatings[bike.BikeId] : 0;
                                for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= avgRating)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                }
                            }
                            <span class="text-muted">(@avgRating.ToString("F1"))</span>
                        </div>
                        @if (!string.IsNullOrEmpty(bike.Description))
                        {
                            <p class="card-text text-muted small mb-3">
                                @(bike.Description.Length > 100 ? bike.Description.Substring(0, 100) + "..." : bike.Description)
                            </p>
                        }
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="price-tag">₱@bike.HourlyRate<span class="fs-6 text-muted">/hr</span></div>
                                    <div class="text-muted small">₱@bike.DailyRate/day</div>
                                </div>
                                <a href="/Bikes/Details/@bike.BikeId" class="btn btn-eco-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Bikes.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-bicycle" style="font-size: 4rem; color: var(--eco-green);"></i>
            <h3 class="text-muted mt-3">No bikes found</h3>
            <p>Try adjusting your search filters</p>
        </div>
    }
</div>

