@page "{id:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model EditBikeModel
@{
    ViewData["Title"] = "Edit Bike";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="text-eco-green mb-1">
                        <i class="bi bi-pencil-square"></i> Edit Bike Listing
                    </h2>
                    <p class="text-muted mb-0">Update your bike information and pricing</p>
                </div>
                <a href="/Owner/MyBikes" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to My Bikes
                </a>
            </div>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle"></i> @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-eco border-0">
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <!-- Bike Details Section -->
                        <h5 class="text-success mb-3">
                            <i class="bi bi-bicycle"></i> Bike Details
                        </h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Brand" class="form-label">
                                    Brand <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Input.Brand" class="form-control" required />
                                <span asp-validation-for="Input.Brand" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Model" class="form-label">
                                    Model <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Input.Model" class="form-control" required />
                                <span asp-validation-for="Input.Model" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.BikeTypeId" class="form-label">
                                    Bike Type <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Input.BikeTypeId" class="form-select" required>
                                    <option value="">Select Type</option>
                                    @foreach (var type in Model.BikeTypes)
                                    {
                                        <option value="@type.BikeTypeId">@type.TypeName</option>
                                    }
                                </select>
                                <span asp-validation-for="Input.BikeTypeId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Mileage" class="form-label">
                                    Mileage (km) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Input.Mileage" class="form-control" type="number" step="0.01" required />
                                <span asp-validation-for="Input.Mileage" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label">
                                Description
                            </label>
                            <textarea asp-for="Input.Description" class="form-control" rows="4" 
                                      placeholder="Describe your bike's features, condition, and any special equipment..."></textarea>
                            <small class="text-muted">Provide detailed information to attract renters</small>
                        </div>

                        <!-- Location Section -->
                        <h5 class="text-success mb-3 mt-4">
                            <i class="bi bi-geo-alt"></i> Location
                        </h5>

                        <div class="mb-3">
                            <label asp-for="Input.Location" class="form-label">
                                Pickup Location <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.Location" class="form-control" required 
                                   placeholder="Enter address or landmark" />
                            <small class="text-muted">Where renters can pick up the bike</small>
                            <span asp-validation-for="Input.Location" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Latitude" class="form-label">
                                    Latitude (Optional)
                                </label>
                                <input asp-for="Input.Latitude" class="form-control" type="number" step="0.0000001" 
                                       placeholder="e.g., 14.5995" />
                                <small class="text-muted">For map display</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Longitude" class="form-label">
                                    Longitude (Optional)
                                </label>
                                <input asp-for="Input.Longitude" class="form-control" type="number" step="0.0000001" 
                                       placeholder="e.g., 120.9842" />
                                <small class="text-muted">For map display</small>
                            </div>
                        </div>

                        <!-- Pricing Section -->
                        <h5 class="text-success mb-3 mt-4">
                            <i class="bi bi-currency-dollar"></i> Pricing
                        </h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.HourlyRate" class="form-label">
                                    Hourly Rate (₱) <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">₱</span>
                                    <input asp-for="Input.HourlyRate" class="form-control" type="number" step="0.01" min="0" required />
                                </div>
                                <small class="text-muted">Recommended: ₱50 - ₱200/hour</small>
                                <span asp-validation-for="Input.HourlyRate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.DailyRate" class="form-label">
                                    Daily Rate (₱) <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">₱</span>
                                    <input asp-for="Input.DailyRate" class="form-control" type="number" step="0.01" min="0" required />
                                </div>
                                <small class="text-muted">Recommended: ₱300 - ₱1,000/day</small>
                                <span asp-validation-for="Input.DailyRate" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Availability Section -->
                        <h5 class="text-success mb-3 mt-4">
                            <i class="bi bi-toggle-on"></i> Availability
                        </h5>

                        <div class="mb-3">
                            <label asp-for="Input.AvailabilityStatusId" class="form-label">
                                Status <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Input.AvailabilityStatusId" class="form-select" required>
                                <option value="1">🟢 Available - Ready for rent</option>
                                <option value="3">🟡 Maintenance - Temporarily unavailable</option>
                                <option value="4">⚫ Inactive - Not listed for rent</option>
                            </select>
                            <small class="text-muted">
                                Note: "Rented" status is set automatically when booking is active
                            </small>
                        </div>

                        <!-- Images Section -->
                        <h5 class="text-success mb-3 mt-4">
                            <i class="bi bi-images"></i> Images
                        </h5>

                        <!-- Current Images -->
                        @if (Model.CurrentBike?.BikeImages.Any() == true)
                        {
                            <div class="mb-3">
                                <label class="form-label">Current Images</label>
                                <div class="row g-2">
                                    @foreach (var image in Model.CurrentBike.BikeImages)
                                    {
                                        <div class="col-6 col-md-3">
                                            <div class="bike-image-preview position-relative">
                                                <img src="@image.ImageUrl" class="img-fluid rounded" alt="Bike image" />
                                                @if (image.IsPrimary)
                                                {
                                                    <span class="badge bg-success position-absolute top-0 start-0 m-2">
                                                        Primary
                                                    </span>
                                                }
                                                <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2"
                                                        onclick="deleteImage(@image.ImageId)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Add New Images -->
                        <div class="mb-4">
                            <label asp-for="Input.NewImages" class="form-label">
                                Add New Images (Optional)
                            </label>
                            <input asp-for="Input.NewImages" class="form-control" type="file" multiple accept="image/*" />
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> You can upload up to 5 images. Max size: 5MB each. Formats: JPG, PNG, GIF
                            </small>
                        </div>

                        <!-- Action Buttons -->
                        <hr class="my-4" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a href="/Owner/MyBikes" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bike Preview Card -->
            <div class="card shadow-sm border-0 mt-4 bg-light">
                <div class="card-body">
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-eye"></i> Current Listing Information
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2">
                                <strong>Listed:</strong> 
                                @Model.CurrentBike?.CreatedAt.ToString("MMM dd, yyyy")
                            </p>
                            <p class="mb-2">
                                <strong>Last Updated:</strong> 
                                @Model.CurrentBike?.UpdatedAt.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2">
                                <strong>Total Bookings:</strong> @Model.TotalBookings
                            </p>
                            <p class="mb-2">
                                <strong>Average Rating:</strong> 
                                @Model.AverageRating.ToString("F1") ⭐
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Image Form (hidden) -->
<form id="deleteImageForm" method="post" asp-page-handler="DeleteImage" style="display: none;">
    <input type="hidden" id="deleteImageId" name="imageId" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function deleteImage(imageId) {
            if (confirm('Are you sure you want to delete this image?')) {
                document.getElementById('deleteImageId').value = imageId;
                document.getElementById('deleteImageForm').submit();
            }
        }

        // Auto-dismiss alerts
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function(){
                $(this).remove(); 
            });
        }, 5000);
    </script>
}

