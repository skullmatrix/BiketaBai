@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model RentalRequestsModel
@{
    ViewData["Title"] = "Rental Requests";
}

<div class="container my-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-eco-green mb-1">
                <i class="bi bi-inbox"></i> Rental Requests
            </h2>
            <p class="text-muted mb-0">Manage incoming rental requests for your bikes</p>
        </div>
        <div>
            <span class="badge bg-primary fs-5">
                @Model.PendingRequests.Count() Pending
            </span>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <ul class="nav nav-pills mb-4">
        <li class="nav-item">
            <button class="nav-link active" data-filter="pending">
                <i class="bi bi-clock-history"></i> Pending (@Model.PendingRequests.Count())
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-filter="accepted">
                <i class="bi bi-check-circle"></i> Accepted (@Model.AcceptedRequests.Count())
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-filter="all">
                <i class="bi bi-list-ul"></i> All Requests (@Model.AllRequests.Count())
            </button>
        </li>
    </ul>

    <!-- Pending Requests -->
    <div class="request-section" data-section="pending">
        @if (Model.PendingRequests.Any())
        {
            <div class="row">
                @foreach (var booking in Model.PendingRequests)
                {
                    <div class="col-12 mb-3">
                        <div class="card rental-request-card shadow-sm border-0">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <!-- Bike Image -->
                                    <div class="col-md-2">
                                        @if (booking.Bike.BikeImages.Any())
                                        {
                                            <img src="@booking.Bike.BikeImages.First().ImageUrl" 
                                                 class="img-fluid rounded request-bike-image" 
                                                 alt="@booking.Bike.Brand @booking.Bike.Model" />
                                        }
                                        else
                                        {
                                            <div class="placeholder-request-image">
                                                <i class="bi bi-bicycle"></i>
                                            </div>
                                        }
                                    </div>

                                    <!-- Bike & Renter Info -->
                                    <div class="col-md-4">
                                        <div class="mb-2">
                                            <span class="badge bg-primary" style="font-size: 0.875rem; padding: 0.5rem 0.75rem;">
                                                <i class="bi bi-hash"></i> Booking #@booking.BookingId.ToString("D6")
                                            </span>
                                        </div>
                                        <h5 class="mb-2">@booking.Bike.Brand @booking.Bike.Model</h5>
                                        @if (booking.Quantity > 1)
                                        {
                                            <p class="mb-1">
                                                <span class="badge bg-info">@booking.Quantity bikes</span>
                                            </p>
                                        }
                                        <p class="mb-1">
                                            <strong><i class="bi bi-person"></i> Renter:</strong> <span style="font-weight: 600; color: var(--sage-primary);">@booking.Renter.FullName</span>
                                        </p>
                                        <p class="mb-1 small text-muted">
                                            <i class="bi bi-envelope"></i> @booking.Renter.Email
                                        </p>
                                        <p class="mb-0 small text-muted">
                                            <i class="bi bi-telephone"></i> @booking.Renter.Phone
                                        </p>
                                    </div>

                                    <!-- Rental Details -->
                                    <div class="col-md-3">
                                        @if (booking.BookingStatusId == 2 && !booking.LocationPermissionGranted && booking.LocationPermissionDeniedAt.HasValue)
                                        {
                                            <div class="alert alert-warning alert-sm mb-2" style="padding: 0.5rem; font-size: 0.875rem;">
                                                <i class="bi bi-exclamation-triangle-fill"></i>
                                                <strong>Location Denied</strong>
                                                <p class="mb-0 small">Renter denied location access. Rental cannot be fully validated.</p>
                                            </div>
                                        }
                                        <div class="rental-details">
                                            <p class="mb-2">
                                                <strong><i class="bi bi-calendar-check"></i> Start:</strong><br>
                                                <span class="text-primary">@booking.StartDate.ToString("MMM dd, yyyy hh:mm tt")</span>
                                            </p>
                                            <p class="mb-2">
                                                <strong><i class="bi bi-calendar-x"></i> End:</strong><br>
                                                <span class="text-danger">@booking.EndDate.ToString("MMM dd, yyyy hh:mm tt")</span>
                                            </p>
                                            <p class="mb-0">
                                                <strong><i class="bi bi-clock"></i> Duration:</strong>
                                                @{
                                                    var duration = booking.EndDate - booking.StartDate;
                                                    var days = duration.Days;
                                                    var hours = duration.Hours;
                                                }
                                                <span class="badge bg-info">
                                                    @if (days > 0)
                                                    {
                                                        @($"{days}d {hours}h")
                                                    }
                                                    else
                                                    {
                                                        @($"{hours}h")
                                                    }
                                                </span>
                                            </p>
                                        </div>
                                    </div>

                                    <!-- Earnings & Actions -->
                                    <div class="col-md-3 text-end">
                                        <div class="earnings-box mb-3">
                                            <p class="mb-1 text-muted small">Total Amount</p>
                                            <h4 class="text-success mb-0">â‚±@booking.TotalAmount.ToString("N2")</h4>
                                            @if (booking.Quantity > 1)
                                            {
                                                <small class="text-muted">@booking.Quantity bikes Ã— â‚±@((booking.TotalAmount / booking.Quantity).ToString("N2"))</small>
                                            }
                                            <small class="text-muted d-block">You earn: â‚±@((booking.TotalAmount * 0.9m).ToString("N2"))</small>
                                        </div>

                                        @{
                                            var cashPayment = booking.Payments?.FirstOrDefault(p => p.PaymentMethodId == 4);
                                            var isCashPayment = cashPayment != null;
                                            var needsVerification = isCashPayment && cashPayment.PaymentStatus == "Pending";
                                        }

                                        @if (needsVerification)
                                        {
                                            <div class="alert alert-warning mb-3">
                                                <i class="bi bi-cash"></i> <strong>Cash Payment Pending</strong><br>
                                                <small>
                                                    <strong>Booking #@booking.BookingId.ToString("D6")</strong><br>
                                                    Renter: <strong>@booking.Renter.FullName</strong><br>
                                                    Amount: <strong>â‚±@booking.TotalAmount.ToString("N2")</strong><br>
                                                    Please verify that you received the cash payment.
                                                </small>
                                            </div>
                                            
                                            @if (!booking.LocationPermissionGranted)
                                            {
                                                <div class="alert alert-danger mb-3">
                                                    <i class="bi bi-exclamation-triangle-fill"></i> <strong>Location Permission Required</strong><br>
                                                    <small>Renter has not granted location access. Please advise them to enable location before you can verify payment and release the bike.</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="alert alert-success mb-3" style="padding: 0.5rem;">
                                                    <i class="bi bi-check-circle"></i> <small>Location permission granted âœ“</small>
                                                </div>
                                            }
                                        }
                                        
                                        @if (booking.BookingStatusId == 2 && !booking.LocationPermissionGranted && booking.LocationPermissionDeniedAt.HasValue)
                                        {
                                            <div class="alert alert-danger mb-3">
                                                <i class="bi bi-exclamation-triangle-fill"></i> <strong>Location Permission Denied</strong><br>
                                                <small>Renter denied location access. Rental cannot be fully validated without geofencing.</small>
                                            </div>
                                        }

                                        <div class="request-actions">
                                            @if (needsVerification)
                                            {
                                                <form method="post" asp-page-handler="VerifyPayment" asp-route-id="@booking.BookingId" class="d-inline mb-2">
                                                    <button type="submit" class="btn btn-success w-100 mb-2" onclick="return confirm('Booking #@booking.BookingId.ToString("D6")\n\nRenter: @booking.Renter.FullName\nAmount: â‚±@booking.TotalAmount.ToString("N2")\n\nHave you received the cash payment?\n\nClick OK to verify and activate this booking.')">
                                                        <i class="bi bi-check-circle"></i> Verify Payment & Activate
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" asp-page-handler="Accept" asp-route-id="@booking.BookingId" class="d-inline">
                                                    <button type="submit" class="btn btn-success w-100 mb-2">
                                                        <i class="bi bi-check-circle"></i> Accept Request
                                                    </button>
                                                </form>
                                            }
                                            <button type="button" class="btn btn-outline-danger w-100" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#rejectModal@(booking.BookingId)">
                                                <i class="bi bi-x-circle"></i> Reject
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Request Timestamp -->
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <small class="text-muted">
                                            <i class="bi bi-clock-history"></i> Requested @booking.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Reject Modal -->
                    <div class="modal fade" id="rejectModal@(booking.BookingId)" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Reject Rental Request</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to reject this rental request from <strong>@booking.Renter.FullName</strong>?</p>
                                    <p class="text-muted small">The renter will be notified of the rejection.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <form method="post" asp-page-handler="Reject" asp-route-id="@booking.BookingId" class="d-inline">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-x-circle"></i> Reject Request
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-requests-state">
                <i class="bi bi-inbox"></i>
                <h4>No Pending Requests</h4>
                <p>You're all caught up! New rental requests will appear here.</p>
            </div>
        }
    </div>

    <!-- Accepted Requests -->
    <div class="request-section" data-section="accepted" style="display: none;">
        @if (Model.AcceptedRequests.Any())
        {
            <div class="row">
                @foreach (var booking in Model.AcceptedRequests)
                {
                    <div class="col-12 mb-3">
                        <div class="card border-success shadow-sm">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <h5 class="mb-1">@booking.Bike.Brand @booking.Bike.Model</h5>
                                        <p class="mb-1"><i class="bi bi-person"></i> @booking.Renter.FullName</p>
                                        <p class="mb-0 small text-muted">
                                            @booking.StartDate.ToString("MMM dd") - @booking.EndDate.ToString("MMM dd, yyyy")
                                        </p>
                                    </div>
                                    <div class="col-md-3">
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Accepted</span>
                                        @if (!booking.LocationPermissionGranted && booking.LocationPermissionDeniedAt.HasValue)
                                        {
                                            <br><span class="badge bg-danger mt-1"><i class="bi bi-exclamation-triangle"></i> Location Denied</span>
                                        }
                                        else if (booking.LocationPermissionGranted)
                                        {
                                            <br><span class="badge bg-info mt-1"><i class="bi bi-geo-alt-fill"></i> Location Active</span>
                                        }
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <h5 class="text-success">â‚±@booking.TotalAmount.ToString("N2")</h5>
                                        <a href="/Bookings/Details/@booking.BookingId" class="btn btn-sm btn-outline-primary">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-requests-state">
                <i class="bi bi-check-circle"></i>
                <h4>No Accepted Requests Yet</h4>
                <p>Accepted rental requests will appear here.</p>
            </div>
        }
    </div>

    <!-- All Requests -->
    <div class="request-section" data-section="all" style="display: none;">
        @if (Model.AllRequests.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Bike</th>
                            <th>Renter</th>
                            <th>Dates</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.AllRequests)
                        {
                            <tr>
                                <td>@booking.Bike.Brand @booking.Bike.Model</td>
                                <td>@booking.Renter.FullName</td>
                                <td>
                                    <small>
                                        @booking.StartDate.ToString("MMM dd")<br>
                                        to @booking.EndDate.ToString("MMM dd")
                                    </small>
                                </td>
                                <td>â‚±@booking.TotalAmount.ToString("N2")</td>
                                <td>
                                    @switch (booking.BookingStatusId)
                                    {
                                        case 1:
                                            <span class="badge bg-warning">Pending</span>
                                            break;
                                        case 2:
                                            <span class="badge bg-success">Accepted</span>
                                            break;
                                        case 4:
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a href="/Bookings/Details/@booking.BookingId" class="btn btn-sm btn-outline-primary">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-requests-state">
                <i class="bi bi-list-ul"></i>
                <h4>No Requests Yet</h4>
                <p>Rental requests will appear here.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script>
        // Tab switching functionality
        document.addEventListener('DOMContentLoaded', function() {
            const navButtons = document.querySelectorAll('.nav-link[data-filter]');
            const sections = document.querySelectorAll('.request-section');
            
            navButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const filter = this.dataset.filter;
                    
                    // Update active nav
                    navButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Show/hide sections
                    sections.forEach(section => {
                        if (section.dataset.section === filter) {
                            section.style.display = 'block';
                        } else {
                            section.style.display = 'none';
                        }
                    });
                });
            });

            // ============================================
            // SignalR for Real-time Cash Payment Requests
            // ============================================
            let cashPaymentConnection = null;
            let cashPaymentHandlersRegistered = false;

            function initializeCashPaymentSignalR() {
                // Reuse existing notification connection if available
                if (typeof window.BiketaBaiNotifications !== 'undefined' && 
                    window.BiketaBaiNotifications.connection) {
                    console.log('âœ… Reusing existing SignalR connection for cash payment requests');
                    cashPaymentConnection = window.BiketaBaiNotifications.connection;
                } else if (typeof signalR === 'undefined') {
                    console.log('â³ Waiting for SignalR library to load...');
                    setTimeout(initializeCashPaymentSignalR, 1000);
                    return;
                } else {
                    console.log('ðŸ”¨ Creating new SignalR connection for cash payment requests');
                    cashPaymentConnection = new signalR.HubConnectionBuilder()
                        .withUrl("/notificationHub")
                        .withAutomaticReconnect({
                            nextRetryDelayInMilliseconds: retryContext => {
                                if (retryContext.elapsedMilliseconds < 2000) return 0;
                                if (retryContext.elapsedMilliseconds < 10000) return 2000;
                                return 30000;
                            }
                        })
                        .build();
                }

                // Register handler for cash payment requests
                if (!cashPaymentHandlersRegistered) {
                    // Remove existing handler to prevent duplicates
                    try {
                        cashPaymentConnection.off("ReceiveCashPaymentRequest");
                    } catch (e) {
                        // Ignore if handler doesn't exist
                    }

                    cashPaymentConnection.on("ReceiveCashPaymentRequest", function(data) {
                        console.log("ðŸ’° New cash payment request received:", data);
                        
                        if (!data || !data.bookingId) {
                            console.error("Invalid cash payment request data:", data);
                            return;
                        }

                        // Show notification alert
                        showCashPaymentAlert(data);

                        // Play notification sound
                        if (typeof playNotificationSound === 'function') {
                            playNotificationSound();
                        }

                        // Refresh the page to show new request
                        // Use a small delay to allow user to see the alert
                        setTimeout(function() {
                            console.log("ðŸ”„ Refreshing page to show new cash payment request...");
                            window.location.reload();
                        }, 2000);
                    });

                    cashPaymentHandlersRegistered = true;
                    console.log("âœ… Cash payment request handler registered");
                }

                // Start connection if not already connected
                if (cashPaymentConnection.state === signalR.HubConnectionState.Disconnected) {
                    cashPaymentConnection.start()
                        .then(function() {
                            console.log("âœ… SignalR connected for cash payment requests");
                        })
                        .catch(function(err) {
                            console.error("âŒ Error connecting SignalR for cash payment requests:", err);
                            setTimeout(initializeCashPaymentSignalR, 5000);
                        });
                } else {
                    console.log("âœ… SignalR already connected for cash payment requests");
                }

                // Handle reconnection
                cashPaymentConnection.onreconnecting(function(error) {
                    console.log("ðŸ”„ SignalR reconnecting for cash payment requests...", error);
                });

                cashPaymentConnection.onreconnected(function(connectionId) {
                    console.log("âœ… SignalR reconnected for cash payment requests:", connectionId);
                    if (!cashPaymentHandlersRegistered) {
                        initializeCashPaymentSignalR();
                    }
                });

                cashPaymentConnection.onclose(function(error) {
                    console.log("âŒ SignalR connection closed for cash payment requests", error);
                    cashPaymentHandlersRegistered = false;
                    setTimeout(function() {
                        console.log("ðŸ”„ Attempting to reconnect SignalR for cash payment requests...");
                        initializeCashPaymentSignalR();
                    }, 3000);
                });
            }

            function showCashPaymentAlert(data) {
                // Create and show alert
                const alertHtml = `
                    <div class="alert alert-info alert-dismissible fade show" id="cashPaymentAlert" style="border-left: 4px solid #3B82F6; animation: slideIn 0.3s ease-out;">
                        <i class="bi bi-cash-coin" style="font-size: 1.25rem;"></i>
                        <strong style="display: block; margin-bottom: 0.5rem;">ðŸ’° New Cash Payment Request!</strong>
                        <div style="font-size: 0.875rem;">
                            <strong>Booking #${data.bookingNumber}</strong><br>
                            <strong>Renter:</strong> ${data.renterName}<br>
                            <strong>Bike:</strong> ${data.bikeName}<br>
                            <strong>Amount:</strong> â‚±${parseFloat(data.amount).toFixed(2)}<br>
                            <small style="color: #6c757d;">Please verify the cash payment to activate the rental.</small>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;

                // Insert at the top of the container
                const container = document.querySelector('.container.my-5');
                if (container) {
                    const alertDiv = document.createElement('div');
                    alertDiv.innerHTML = alertHtml;
                    const header = container.querySelector('.d-flex.justify-content-between');
                    if (header) {
                        container.insertBefore(alertDiv.firstElementChild, header.nextSibling);
                    } else {
                        container.insertBefore(alertDiv.firstElementChild, container.firstElementChild);
                    }

                    // Auto-dismiss after 10 seconds
                    setTimeout(function() {
                        const alert = document.getElementById('cashPaymentAlert');
                        if (alert) {
                            alert.style.animation = 'slideOut 0.3s ease-out';
                            setTimeout(function() {
                                alert.remove();
                            }, 300);
                        }
                    }, 10000);
                }
            }

            // Initialize SignalR when page loads
            if (typeof signalR !== 'undefined') {
                initializeCashPaymentSignalR();
            } else {
                // Wait for SignalR to load
                const checkSignalR = setInterval(function() {
                    if (typeof signalR !== 'undefined') {
                        clearInterval(checkSignalR);
                        initializeCashPaymentSignalR();
                    }
                }, 100);
            }

            // Add CSS for animations
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes slideIn {
                    from {
                        transform: translateY(-20px);
                        opacity: 0;
                    }
                    to {
                        transform: translateY(0);
                        opacity: 1;
                    }
                }
                @@keyframes slideOut {
                    from {
                        transform: translateY(0);
                        opacity: 1;
                    }
                    to {
                        transform: translateY(-20px);
                        opacity: 0;
                    }
                }
            `;
            document.head.appendChild(style);
        });
    </script>
}

