@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model GeofenceSettingsModel
@{
    ViewData["Title"] = "Geofence Settings";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-eco">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="text-eco-green mb-0">
                            <i class="bi bi-geo-alt-fill"></i> Geofence Settings
                        </h2>
                        <a href="/Dashboard/Owner" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!Model.HasStoreAddress)
                    {
                        <div class="alert alert-warning">
                            <h6><i class="bi bi-exclamation-triangle"></i> Store Address Required</h6>
                            <p class="mb-0">
                                You need to set up your store address first before configuring geofencing. 
                                Please update your profile with your store address.
                            </p>
                        </div>
                    }
                    else
                    {
                        <!-- Store Information -->
                        <div class="card bg-eco-light mb-4">
                            <div class="card-body">
                                <h5 class="text-eco-green mb-3">Store Information</h5>
                                <p><strong>Store Name:</strong> @Model.Owner?.StoreName</p>
                                <p><strong>Store Address:</strong> @Model.Owner?.StoreAddress</p>
                                @if (Model.StoreLatitude.HasValue && Model.StoreLongitude.HasValue)
                                {
                                    <p><strong>Coordinates:</strong> @Model.StoreLatitude.Value.ToString("F6"), @Model.StoreLongitude.Value.ToString("F6")</p>
                                    <div id="map" style="height: 300px; width: 100%; margin-top: 15px;"></div>
                                }
                                else
                                {
                                    <p class="text-warning"><i class="bi bi-exclamation-triangle"></i> Store location coordinates not available. The system will geocode your address when needed.</p>
                                }
                            </div>
                        </div>

                        <!-- Geofence Configuration -->
                        <form method="post">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="text-eco-green mb-3">Geofence Configuration</h5>
                                    
                                    <div class="mb-3">
                                        <label for="Input_GeofenceRadiusKm" class="form-label">
                                            <strong>Geofence Radius (kilometers)</strong>
                                        </label>
                                        <input type="number" 
                                               class="form-control" 
                                               id="Input_GeofenceRadiusKm" 
                                               asp-for="Input.GeofenceRadiusKm" 
                                               step="0.1" 
                                               min="0.1" 
                                               max="100"
                                               placeholder="@Model.CurrentGeofenceRadius">
                                        <div class="form-text">
                                            Set the maximum distance (in kilometers) that renters can travel from your store location. 
                                            Default: @Model.CurrentGeofenceRadius km
                                        </div>
                                        <span asp-validation-for="Input.GeofenceRadiusKm" class="text-danger"></span>
                                    </div>

                                    <div class="alert alert-info">
                                        <h6><i class="bi bi-info-circle"></i> How Geofencing Works</h6>
                                        <ul class="mb-0">
                                            <li>Renters' locations are tracked during active bookings</li>
                                            <li>If a renter goes outside the specified radius, they receive SMS warnings</li>
                                            <li>Warnings are sent immediately when they leave the radius, then every 15 minutes if still outside</li>
                                            <li>Leave empty to use the default radius (@Model.CurrentGeofenceRadius km)</li>
                                        </ul>
                                    </div>

                                    <button type="submit" class="btn btn-eco-green">
                                        <i class="bi bi-save"></i> Save Settings
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.StoreLatitude.HasValue && Model.StoreLongitude.HasValue)
{
    <!-- Load Leaflet CSS and JS for map -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const storeLat = @Model.StoreLatitude.Value;
            const storeLon = @Model.StoreLongitude.Value;
            const radius = @Model.CurrentGeofenceRadius;

            // Initialize map
            const map = L.map('map').setView([storeLat, storeLon], 13);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: 'Â© OpenStreetMap contributors'
            }).addTo(map);

            // Add store marker
            const storeMarker = L.marker([storeLat, storeLon], {
                icon: L.icon({
                    iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-red.png',
                    iconSize: [25, 41],
                    iconAnchor: [12, 41],
                    popupAnchor: [1, -34]
                })
            }).addTo(map);
            storeMarker.bindPopup('<b>Store Location</b><br>@Model.Owner?.StoreName').openPopup();

            // Add geofence circle
            const geofenceCircle = L.circle([storeLat, storeLon], {
                color: '#28a745',
                fillColor: '#28a745',
                fillOpacity: 0.1,
                radius: radius * 1000 // Convert km to meters
            }).addTo(map);
            geofenceCircle.bindPopup(`<b>Geofence Radius</b><br>${radius} km`);
        });
    </script>
}

<style>
    .card.shadow-eco {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 10px;
    }
    
    .bg-eco-light {
        background-color: #f8f9fa;
    }
    
    .text-eco-green {
        color: #28a745;
    }
    
    .btn-eco-green {
        background-color: #28a745;
        color: white;
        border: none;
    }
    
    .btn-eco-green:hover {
        background-color: #218838;
        color: white;
    }
</style>

