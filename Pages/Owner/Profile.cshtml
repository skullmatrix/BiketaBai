@page
@model ProfileModel
@{
    ViewData["Title"] = "Owner Profile";
}

<div class="container my-5">
    <!-- Header -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="text-eco-green mb-2">
                    <i class="bi bi-person-circle"></i> Owner Profile
                </h2>
                <p class="text-muted mb-0">Manage your account and view your bike rental business statistics</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a href="/Dashboard/Owner" class="btn btn-outline-success">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Owner Profile Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <div class="profile-avatar-large">
                        <i class="bi bi-shop"></i>
                    </div>
                    <h4 class="mt-3 mb-1">@Model.CurrentOwner.FullName</h4>
                    <p class="text-muted mb-2">@Model.CurrentOwner.Email</p>
                    
                    <!-- Verification Badge -->
                    <div class="mb-3">
                        @Html.Raw(Model.GetVerificationStatusBadge())
                    </div>
                    
                    @if (Model.CurrentOwner.VerificationStatus == "Approved" && Model.CurrentOwner.VerificationDate.HasValue)
                    {
                        <small class="text-muted">
                            <i class="bi bi-calendar-check"></i> Verified on @Model.CurrentOwner.VerificationDate.Value.ToString("MMM dd, yyyy")
                        </small>
                    }
                    else if (Model.CurrentOwner.VerificationStatus == "Pending")
                    {
                        <small class="text-warning">
                            <i class="bi bi-clock"></i> Verification in progress
                        </small>
                    }
                </div>
                
                <div class="col-md-9">
                    <!-- Business Statistics -->
                    <div class="row mb-4">
                        <div class="col-md-3 mb-3">
                            <div class="profile-stat-box">
                                <div class="stat-icon-circle bg-success-light">
                                    <i class="bi bi-bicycle text-success"></i>
                                </div>
                                <div class="ms-3">
                                    <h3 class="mb-0">@Model.TotalBikes</h3>
                                    <p class="text-muted mb-0">Total Bikes</p>
                                    <small class="text-muted">Listed</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-3 mb-3">
                            <div class="profile-stat-box">
                                <div class="stat-icon-circle bg-primary-light">
                                    <i class="bi bi-calendar-check text-primary"></i>
                                </div>
                                <div class="ms-3">
                                    <h3 class="mb-0">@Model.TotalBookings</h3>
                                    <p class="text-muted mb-0">Total Bookings</p>
                                    <small class="text-muted">@Model.CompletedBookings completed</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-3 mb-3">
                            <div class="profile-stat-box">
                                <div class="stat-icon-circle bg-warning-light">
                                    <i class="bi bi-star-fill text-warning"></i>
                                </div>
                                <div class="ms-3">
                                    <h3 class="mb-0">@Model.AverageRating.ToString("F1")</h3>
                                    <p class="text-muted mb-0">Average Rating</p>
                                    <small class="text-muted">@Model.TotalReviews review(s)</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-3 mb-3">
                            <div class="profile-stat-box">
                                <div class="stat-icon-circle bg-info-light">
                                    <i class="bi bi-wallet2 text-info"></i>
                                </div>
                                <div class="ms-3">
                                    <h3 class="mb-0">₱@Model.TotalEarnings.ToString("N0")</h3>
                                    <p class="text-muted mb-0">Total Earnings</p>
                                    <small class="text-muted">90% share</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Payout Information -->
                    <div class="card bg-light border-success">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-4">
                                    <h6 class="text-muted mb-2"><i class="bi bi-cash-stack"></i> Wallet Balance</h6>
                                    <h4 class="text-success mb-0">₱@(Model.UserWallet?.Balance.ToString("N2") ?? "0.00")</h4>
                                </div>
                                <div class="col-md-4">
                                    <h6 class="text-muted mb-2"><i class="bi bi-hourglass-split"></i> Pending Payout</h6>
                                    <h4 class="text-warning mb-0">₱@Model.PendingPayout.ToString("N2")</h4>
                                </div>
                                <div class="col-md-4">
                                    <h6 class="text-muted mb-2"><i class="bi bi-graph-up"></i> Lifetime Earnings</h6>
                                    <h4 class="text-primary mb-0">₱@Model.LifetimeEarnings.ToString("N2")</h4>
                                </div>
                            </div>
                            <hr class="my-3" />
                            <div class="text-center">
                                <a href="/Wallet/Index" class="btn btn-success me-2">
                                    <i class="bi bi-wallet2"></i> Manage Wallet
                                </a>
                                <a href="/Owner/PayoutSettings" class="btn btn-outline-success">
                                    <i class="bi bi-gear"></i> Payout Settings
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Two Column Layout -->
    <div class="row">
        <!-- Edit Profile -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-pencil-square text-success"></i> Edit Profile</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label">
                                <i class="bi bi-person"></i> Full Name
                            </label>
                            <input asp-for="Input.FullName" class="form-control" required />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-envelope"></i> Email Address
                            </label>
                            <input type="email" class="form-control" value="@Model.CurrentOwner.Email" disabled />
                            <small class="text-muted">Email cannot be changed</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Phone" class="form-label">
                                <i class="bi bi-telephone"></i> Phone Number
                            </label>
                            <input asp-for="Input.Phone" class="form-control" required />
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Address" class="form-label">
                                <i class="bi bi-geo-alt"></i> Address
                            </label>
                            <textarea asp-for="Input.Address" class="form-control" rows="3" required></textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Update Profile
                        </button>
                    </form>
                    
                    <hr class="my-4" />
                    
                    <div class="text-center">
                        <a href="/Account/ChangePassword" class="btn btn-outline-secondary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity & Info -->
        <div class="col-lg-6 mb-4">
            <!-- Recent Bookings -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-clock-history text-primary"></i> Recent Bookings</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentBookings.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var booking in Model.RecentBookings)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex align-items-start">
                                        @if (booking.Bike.BikeImages.Any())
                                        {
                                            <img src="@booking.Bike.BikeImages.First().ImageUrl" 
                                                 class="recent-booking-thumb" 
                                                 alt="@booking.Bike.Brand" />
                                        }
                                        else
                                        {
                                            <div class="recent-booking-thumb-placeholder">
                                                <i class="bi bi-bicycle"></i>
                                            </div>
                                        }
                                        
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">@booking.Bike.Brand @booking.Bike.Model</h6>
                                            <p class="mb-1 small text-muted">
                                                <i class="bi bi-person"></i> @booking.Renter.FullName
                                            </p>
                                            <p class="mb-1 small text-muted">
                                                <i class="bi bi-calendar"></i> @booking.StartDate.ToString("MMM dd, yyyy")
                                            </p>
                                            <span class="badge bg-@(booking.BookingStatus.StatusName == "Completed" ? "success" : booking.BookingStatus.StatusName == "Active" ? "primary" : "warning")">
                                                @booking.BookingStatus.StatusName
                                            </span>
                                        </div>
                                        <div class="text-end">
                                            <strong class="text-success">₱@((booking.TotalAmount * 0.90m).ToString("N2"))</strong>
                                            <br />
                                            <small class="text-muted">Your share</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="text-center mt-3">
                            <a href="/Owner/BookingHistory" class="btn btn-outline-primary btn-sm">
                                View All Bookings
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                            <p class="text-muted mt-2">No bookings yet</p>
                            <a href="/Owner/AddBike" class="btn btn-success btn-sm">
                                <i class="bi bi-plus-circle"></i> Add Your First Bike
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Account Information -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-info-circle text-info"></i> Account Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="text-muted"><i class="bi bi-shield-check"></i> Verification Status</td>
                            <td class="text-end">
                                @Html.Raw(Model.GetVerificationStatusBadge())
                            </td>
                        </tr>
                        <tr>
                            <td class="text-muted"><i class="bi bi-envelope-check"></i> Email Verification</td>
                            <td class="text-end">
                                @if (Model.CurrentOwner.IsEmailVerified)
                                {
                                    <span class="badge bg-success">Verified</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Not Verified</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="text-muted"><i class="bi bi-calendar-plus"></i> Member Since</td>
                            <td class="text-end">@Model.CurrentOwner.CreatedAt.ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <td class="text-muted"><i class="bi bi-clock"></i> Last Updated</td>
                            <td class="text-end">@Model.CurrentOwner.UpdatedAt.ToString("MMM dd, yyyy")</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.CurrentOwner.IdDocumentUrl))
                        {
                            <tr>
                                <td class="text-muted"><i class="bi bi-file-earmark-text"></i> ID Document</td>
                                <td class="text-end">
                                    <a href="@Model.CurrentOwner.IdDocumentUrl" target="_blank" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function(){
                $(this).remove(); 
            });
        }, 5000);
    </script>
}

